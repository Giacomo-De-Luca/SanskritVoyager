  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Gurupañcāśikā"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "om namo buddhāya /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrīvajrasattvapadavīpratilambhahetornatvā yathāvidhi guroścaraṇāravindam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatparyupāstiramalā bahutantragītā saṃkṣipya kathyata iyaṃ śṛṇutādareṇa // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhiṣekāgralabdho hi vajrācāryastathāgataiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "daśadiglokadhātusthaistrikālametya vandyate // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "trikālaṃ parayā bhaktyā sapuṣpāñjalimaṇḍalaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paryupāsyo guruḥ śāstā śirasā pādavandanāt // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saddharmādīn puraskṛtya gṛhī vā navako 'pi vā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vandyo vratadharairbuddhyā lokāvadyāvahānaye // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sukhāsanaṃ samutthānamarthakriyādigauravam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvameva vratī kuryāt tyaktvā cārcanavandanam // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāk śiṣyācāryasaṃbandhaḥ kāryaḥ parīkṣya sūribhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samānasamayabhraṃśo doṣo hi guruśiṣyayoḥ // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣkṛpaṃ krodhanaṃ krūraṃ stabdhaṃ laghumasaṃyatam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svotkarṣakaṃ ca no kuryād guruṃ śiṣyaṃ ca buddhimān // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhīro vinīto matimān kṣamāvānārjavo 'śaṭhaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mantratantraprayogajñaḥ kṛpāluḥ śāstrakovidaḥ // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "daśatattvaparijñātā maṇḍalālekhyakarmavit /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mantravyākhyākṛdācāryaḥ prasannaḥ syājjitendriyaḥ // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ nāthaṃ yo 'vamanyeta śiṣyo bhūtvā sacetanaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvabuddhāpamānena sa nityaṃ duḥkhamāpnuyāt // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ītyupadravacauraiśca grahajvaraviṣādibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mriyate 'sau mahāmūḍho gurupādābhinindakaḥ // 11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rājavātānalavyālairḍākinījalataskaraiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vighnairvināyakaiścāpi mārito narakaṃ vrajet // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na kuryāccittasaṃkṣobhamācāryasya kadācana /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadā karoti duṣprajño narake pacyate dhruvam // 13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "narakā ye samākhyātā avīcyādyā bhayānakāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra vāsaḥ samākhyāta ācāryasya hi nindanāt // 14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāt sarvaprayatnena vajrācāryaṃ mahāgurum /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pracchannavarakalyāṇaṃ nāvamanyet kadācana // 15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatheṣṭadakṣiṇādānād gurubhaktaṃ sagauravam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "uktā jvarādayastāpā na bhūyaḥ prabhavanti hi // 16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "adeyaiḥ putradārādyairasubhirvā nijairapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sevyaḥ svasaṃvarācārya kiṃ punarvibhavaiścalaiḥ // 17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yataḥ sudurlabhaṃ vastu kalpāsaṃkhyeyakoṭibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhatvamudyogavate dadātīhaiva janmani // 18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nityaṃ svasamayaḥ sādhyo nityaṃ pūjyāstathāgatāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nityaṃ ca gurave deyaṃ sarvabuddhasamo hyasau // 19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadyadiṣṭataraṃ loke viśiṣṭarameva vā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tattaddhi gurave deyaṃ sadaivākṣayamicchatā // 20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "datte 'smai sarvabuddhebhyo dattaṃ bhavati śāśvatam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmācca puṇyasaṃbhāraḥ saṃbhārād bodhiruttamā // 21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "te śiṣyāḥ karuṇotsargaśīlakṣāntiguṇānvitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ye nānyatvaṃ kalpayanti gurorvajradharasya ca // 22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caityabhaṅgādibhītyāpi gurośchāyāṃ na laṅghayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pādukāsanayānāderlaṅghanasya tu kā kathā // 23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrūyād yatnād gurorājñāṃ hṛṣṭacitto mahāmatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aśaktaḥ śrāvayet tasmā upapattyā tvaśaktitām // 24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guroḥ siddhiṃ samāpnoti guroḥ svargaṃ guroḥ sukham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāt sarvaprayatnena gurorājñāṃ na laṅghayet // 25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svātmavacca gurordravyaṃ guruvacca tadaṅganām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svajanāniva tallokān paśyennityaṃ samāhitaḥ // 26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śayyārohamagrayānamuṣṇīṣādyupabandhanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na kuryādāsane pādaṃ kaṭihastaṃ ca sannidhau // 27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "suptena vā niṣaṇṇena na stheyamutthite gurau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dakṣaścotsāhasampannastatkāryeṣu sadā bhavet // 28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śleṣmādīnāṃ parityāgaḥ pādaprasāraṇaṃ tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caṅkramaṇaṃ vivādaṃ ca na kuryāt purato guroḥ // 29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃvāhanaṃ nartanaṃ ca na gānaṃ na ca bādanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bahu saṃlapanaṃ cāpi na kuryāt purato guroḥ // 30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "natvāsanāt samuttheyaṃ niṣattavyaṃ ca bhaktitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niśyapsu sabhaye mārge prārthyāgre gamanaṃ caret // 31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāṅgāni cālayed dhīmān na jṛmbhādi samāśrayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāṅgulisphoṭanaṃ kuryāt puraḥ paśyati śāstari // 32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pādayoḥ kṣālanaṃ cāṅgaproñchābhyañjanamardanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrvaṃ praṇamya kartavyaṃ tataḥ kuryād yadādiśet // 33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "[āvhānādau gurornāmni pūjyapādādi yojayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyadā śraddhayā brūyāt sādaraistu viśeṣaṇaiḥ // 34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādiśyatām, kariṣyāmi, pravadet sāñjalirgurum /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrutvādeśaṃ cāvicālya yathādiṣṭaṃ tathā caret // 35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hāse kāse samutpanne kareṇācchādayenmukham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadante mṛdubhirvarṇaiḥ svābhiprāyaṃ nivedayet // 36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vinītaḥ purato bhūyāt sajjo vastrādibandhanaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūjānuḥ sāñjaliḥ śrotuṃ yācayet tu trivārakam // 37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satkāryaṃ sarvadā kuryānnirahaṅkāracetasā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "trapayā pāpabhītyā saṃvṛto navavadhūriva // 38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na vilāsamayīṃ ceṣṭāṃ kuryāt śāstari saṃmukhe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyaccaivaṃvidhaṃ karma suparīkṣya tyajed bhṛśam // 39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratiṣṭhāyāṃ maṇḍale ca home vā śiṣyasaṃgrahe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākhyānādau gurorvāse nityaṃ kuryācca sannidhim // 40 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratiṣṭhādau labhyate yat tatsarvaṃ gurave 'rpayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tena dattaṃ ca gṛṇhīyāt svayaṃ cānyāṃśca toṣayet // 41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guruśiṣye svaśiṣyatvaṃ na vidadhyāt kadācan /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svaśiṣyaṃ vyāvṛtaṃ kuryāt satkārāderguroḥ puraḥ // 42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ācāryo yatsvayaṃ dadyād gururvā yat pradāpayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "praṇamya dhīmatā grāhyaṃ baddhāñjalipuṭena tat // 43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "avismṛtaḥ sarvacaryāṃ yatnāt kurvan svabāndhavān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "avismṛternirākuryāt premṇā hṛṣṭena cetasā // 44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anujñāto guroḥ kāryaṃ śraddhālurnācared yadi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rugṇastu kuśale citte naivaṃ bhavati pāpabhāk // 45 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kimanyad, gurutoṣāya yacchakyaṃ tatsamācaret /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caryā kāryā prayatnena na kadāpyavahelayet // 46 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvathā sarvadā siddhirācārya yānugāminī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gururvajradharasyokterārādhyaḥ sarvavastubhiḥ // 47 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śiṣyaḥ śuddhāśayo bhūtvā triratnaṃ śaraṇaṃ vrajet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guroradhītyānupaṭhet kuryādutsargameva ca // 48 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tato mantrādidānena kṛtvā saddharmapātrakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paṭhecca dhārayeccāpi mūlāpattīścaturdaśa // 49 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
