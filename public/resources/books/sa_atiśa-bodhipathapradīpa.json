  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "namo bodhisattvāya mañjuśriye kumārabhūtāya /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kālatrayākhilajināṃśca tadīyadharmān saṅghān mahādaratayā praṇipatya cāpi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhiprabheṇa kathito viśadīkaromi śiṣyottamena khalu bodhipathapradipam // Bpp_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "puruṣāstrividhā jñeyā uttamādhamamadhmāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "likhyate lakṣaṇaṃ teṣāṃ sphuṭaṃ pratyekabhedataḥ // Bpp_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyena tu kenāpi kevalaṃ saṃsṛteḥ sukham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svasyaivārthe ya īheta jñeyaḥ so puruṣo 'dhamaḥ // Bpp_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pāpakarmanivṛttātmā bhavasukhāt parāṅmukhaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmanirvāṇamātrārthī yo naro madhyamastu saḥ // Bpp_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svasantānagatairduḥkhairduḥkhasyānyasya sarvathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvasya yaḥ kṣayaṃ kāṅkṣeduttamaḥ puruṣastu saḥ // Bpp_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāṅkṣanto hi varāṃ bodhiṃ sattvānāmuttamāstathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "darśitān gurubhistebhyaḥ sadupāyāṃ pracakṣmahe // Bpp_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sambuddhacitramūrtyādistūpasaddharmasammukhaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "puṣpaidhupaiḥ padārthaiśca yathāprāptaiḥ supūjayet // Bpp_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samantabhadracaryoktā pūjā saptavidhāpi ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhisārasya paryantam avaivartikacittataḥ // Bpp_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "suśraddhayā triratneyaḥ bhumau saṃsthāpya jānunī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūtvā kṛtāñjaliścāpi triścādau śaraṇaṃ vrajet // Bpp_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ samastasattveṣu maitrīcitta puraskṛtaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "durgatitrayājanmādisaṅkrāntimaraṇādibhiḥ // Bpp_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dṛṣṭvāśeṣaṃ jagaddukhaṃ duḥkhena dukhitāyāśca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhahetostathā duḥkhāt jagatāṃ muktikāṅkṣayā // Bpp_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicittaṃ samutpādyamanāpāyipratijñayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ praṇidhicittānām utpādetu guṇāśca ye // Bpp_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "te gaṇḍavyūhasūtreṣu maitreyeṇa prabhāṣitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sūtrasya tasya paṭhanācchravaṇād gurorvā"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sambodhicittaguṇakāni nirantakāni // Bpp_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñāya tasya khalu saṃsthitārarṇāna /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ tathā samudayeta muhurmuhaśca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vīradattaparīpṛcchāsūtre puṇyaṃ pradarśitam // Bpp_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yattacślokatrayeṇaiva samāsenātralikhyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicittāddhi yatpuṇyaṃ tacca rupi bhavedyadi // Bpp_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ākāśadhātuṃ sampūrya bhuyaścottari tadbhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gaṅgāvālikasaṅkhyāni buddhakṣetrāṇi yo naraḥ // Bpp_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dadyātsadratna pūrṇāni lokanāthebhya eva hi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yaścaikaḥ prāñjalirbhūtvā cittaṃ bodhāya nāmayet // Bpp_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iyaṃ viśeṣyate pūjā yasyānto 'pi na vidyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utpādyabodhipraṇidhānacittaṃ naikaprayatnaiḥ parivardhitavyam // Bpp_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "janmāntare 'pi smaraṇārthamasya śikṣā yathoktā paripālanīyā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prasthānacitte svayamātiriktaṃ samyagbhavenna praṇidhānavṛddhiḥ // Bpp_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sambodhisaṃvāra vivṛddhikāmaḥ tasmād dhruvaṃ cainamavāpnuyāta /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saptadhāprātimokṣaiśca sadānyasaṃvarānvitaḥ // Bpp_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāgyaṃ bodhisattvānāṃ saṃvarasya na cānyathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saptadhā prātimokṣeṣu bhāṣiteṣu tathāgataiḥ // Bpp_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmacaryaśriyaḥ śreṣṭhāḥ bhikṣusaṃvara iṣyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlādhyāyoktavidhinā bodhisattvasya bhumiṣu // Bpp_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃvaraḥ sadgurorgrāhyaḥ samyaglakṣaṇayuktataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yaḥ saṃvaravidhau dakṣaḥ svayaṃ ca saṃvare sthitaḥ // Bpp_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛpāluḥ saṃvare śaktaḥ jñātavyaḥ sadgurustu saḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra yatnena na prāpto guruścaitādṛśo yadi // Bpp_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃvaragrahaṇasyānyo vidhiḥ tasmāt samuyacte /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ambararājabhutena pūrvaṃ mañjuśriyā yathā // Bpp_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicittaṃ samutpādi suspaṣṭaṃ cātra likhyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mañjuśribuddhakṣetrālaṅkārasūtroktivat tathā // Bpp_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "utpādayāmi sambodhau cittaṃ nāthasya sammukham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nimantraye jagatsarvaṃ dāridyānmocitāsmi tat // Bpp_27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyāpādakhilacittaṃ vā īrṣyāmātsaryameva va /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "adhyāgre na kariṣyāmi bodhiṃ prāpsyāmi yāvatā // Bpp_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmacaryaṃ cariṣyāmi kāmāṃstyakṣyāmi pāpakān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhānāmānuśikṣiṣye śīlasaṃvara saṃyame // Bpp_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāhaṃ tvaritarupeṇa bodhiṃ prāptumihotsahe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parāntakoṭiṃ sthāsyāmi sattvasyaikasya kāraṇāt // Bpp_30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣetraṃ viśodhiṣyāmi aprameyamacintim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāmadheyaṃ kariṣyāmi daśadikṣu ca viśrutam // Bpp_31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyavākkarmaṇī cāhaṃ śodhayiṣyāmi sarvaśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śodhayiṣye manaskarma kartāsmi nāśabham // Bpp_32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svakāyavākacittaviśuddhihetu, prasthānacittātmayamasthitena /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "triśīlaśikṣāpariśiyeta cet, triśīlaśikṣāsu mahādarasyāt // Bpp_33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śuddhasambodhisattvānāṃ tasmāt saṃvarasaṃvṛtau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yatnāt sambodhisambhāraḥ paripūrṇo bhaviṣyati // Bpp_34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "puṇyajñānasvabhāvasya sambhārasya tu pūrtaye /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvabuddhamatoheturabhijñotpāda eva hi // Bpp_35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pakṣavṛddhiṃ vinā pakṣī khe noḍaḍetuṃ yathā kṣamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathābhijñābalairhīnaḥ sattvārthakaraṇe 'kṣamaḥ // Bpp_36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhijñasya divārātrau yāni puṇyāni santi vai /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "abhijñāyāśca rāhitye naiva janmaśateṣu ca // Bpp_37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śīghraṃ sambodhisambhāraṃ sampūrayitumicchati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirālasyena yatnenābhijñāṃ saṃsādhayettu saṃ // Bpp_38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śamathasiddhayabhāve 'bhijñānaṃ na jāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ataḥ śamathasiddhayarthaṃ yatitavyaṃ punaḥ punaḥ // Bpp_39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śamathaṅgaprahīṇatve tadyatnairbhāvite 'pi ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃvatsarasahasraiśca samādhirnaiva setsyati // Bpp_40 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ataḥ samādhisambhārādhyāyoktāṅgasamāśritaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kasmiṃścit alambane 'pi puṇye saṃsthāpayenmanaḥ // Bpp_41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yoginaḥ śamathe siddhe 'bhijñānaṃ cāpi setsyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitāyogaṃ vinā nāvaraṇakṣayaḥ // Bpp_42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kleśajñeyāvṛtestasmāt prahāṇārthamaśeṣataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitāṃ yogī sopāyaṃ bhāvayet sadā // Bpp_43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyarahitā prajñāpyupāyaḥ prajñayā vinā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yato bandha iti proktau praheyaṃ nobhayaṃ tataḥ // Bpp_44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kā prajñā ka upāyaśca śaṅkāmiti nirāsitum /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyasya ca prajñāyāḥ bhedaḥ samyak prakāśyate // Bpp_45 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitāṃ tyaktvā dānapāramitādayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarve hi kuśalāḥ dharmāḥ upāyāḥ jinabhāṣitāḥ // Bpp_46 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyābhyāsavaśyātmā yo hi prajñāṃ vibhāvayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śīghraṃ sa labhate bodhiṃ na nairātmyaikabhāvanāt // Bpp_47 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "skandhāyatanadhātūnāmanutpādāvabodhinām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvaśūnyatājñānaṃ prajñeti parikīrtitā // Bpp_48 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadutpattirayuktāsti asaccāpi khapuṣpavat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayordoṣaprasaṅgatvāt udbhāvo na dvayorapi // Bpp_49 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anutpannaḥ svato bhāvo parato nobhayorapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ahetuteśca no tasmāt niḥsvabhāvaḥ svarupataḥ // Bpp_50 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "athavā sarvadharmāṇāṃ caikānekavicāraṇe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svarupāprāpyamāṇatvāt niḥsvabhāvatvaniścayaḥ // Bpp_51 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śunyatāsaptau yuktau mūlamadhyamakādiṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "siddho bhāvasvabhāvastu śunyatāyāṃ bhāṣitaḥ // Bpp_52 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "granthasya gauravo yasmāt atra tasmānna vistaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "siddhasiddhāntamātraikaṃ bhāvanārthaṃ prabhāṣitam // Bpp_53 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmādaśeṣadharmāṇāṃ svabhāvanāmalābhataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nairātmyabhāvanā yā hi sā prajñāyāstu bhāvanā // Bpp_54 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñayā sarvadharmaṇāṃ yatsvabhāvo na dṛṣṭavat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yuktayā parīkṣya tāṃ prajñāṃ so 'vikalpena bhāvayet // Bpp_55 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavo vikalpobhūto 'yaṃ tadvikalpātmakastataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvakalpaparityāgaḥ nivārṇaḥ paramo 'sti hi // Bpp_56 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "evamapyuktaṃ bhagavatā - -"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mahāvidyā vikalpo hi saṃsārārṇavapātakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirvikalpasamādhisthe 'vikalpo bhāsate khavat // Bpp_57 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "avikalpapraveśadhāraṇyāmapi uktam - -"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cintitenirvikalpe 'smin saddharme jinaputrakaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vikalpaṃ durgamaṃ tīrtvāvikalpo prāpsyate kramāt // Bpp_58 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niścayīyāgamayuktibhyāṃ svabhāva rahitān tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvān dharmānutpannānavikalpaṃ bhāvayet // Bpp_59 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvayannidamevetthaṃ prāpyoṣṇatvādikaṃ kramāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "labhate pramuditvādiṃ buddhabodhirna lambitā // Bpp_60 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhitairmantraśaktayā hi śāntivistarakarmabhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhadrakumbhādisiddhāṣṭamahāsiddhibalena ca // Bpp_61 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhīṣṭā bodhisambhāraparipūrtiḥ sukhena cet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kriyācaryādi tantrokam guhyācaraṇabhiṣyate // Bpp_62 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadācāryabhiṣekārthaṃ mahāratnādidānataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sadguruṃ prīṇayed bhaktayā sarvāñjñādipālanaiḥ // Bpp_63 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasanne ca gurau bhūte pūrṇācāryābhiṣekataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvapāpaviśuddhātmā siddhibhāgī bhaviṣyati // Bpp_64 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādibuddhamahātantre prayatnena niṣedhataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guhyaprajñābhiṣekastu na grahyā brahmacārariṇā // Bpp_65 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "so 'bhiṣeko gṛhītaścet brahyacaryatapaḥ sthitaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣiddhācaraṇatvāt tattapaḥ samvarakṣayaḥ // Bpp_66 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jāyante vratinastasya pārājikavipattayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saḥ pateddurgatau nūnaṃ siddhirnaiva kadācana // Bpp_67 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvatantraśrutau bhāṣye homayajñādikarmāsu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "labdhācāryābhiṣekaśca tattvavida naiva duṣyati // Bpp_68 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dīpaṅkaraśriyā bodhipathaḥ proktaḥ samāsataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dṛaṣṭvā sūtrādidharmoktiṃ bodhiprabhanivedanāt // Bpp_69 //"
        }
      ]
    }
  ]
}