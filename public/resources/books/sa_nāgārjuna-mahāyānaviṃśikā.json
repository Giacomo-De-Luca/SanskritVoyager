  "body": [
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na jñānācchūnyatā nāma kācidanyā hi vidyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viviktāvyatirekitvaṃ vivekasya yato matam // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayaśūnyam hi vijñānam anyathā na prasajyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayāsattvān nivṛttasya dvayātmatvaprasangataḥ // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tacchurutatathatārūpo bhagavān eva bhaṇyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vedyavedakasadbhāvavikalpādyasamāśrayaḥ // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittamātraṃ nirābhāsaṃ vihāro buddhabhūstathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etaddhi bhāṣitaṃ buddhairbhāsante bhāṣayanti ca // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ hi bhūmayaḥ sapta nirābhāsā tvihāṣṭamī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dve bhūmayo vihāro 'tra 'śeṣā bhūmirmamātmikā // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "deśyante bhūmayaḥ sapta buddhaiścittavaśaṃ gatāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyavākcittadauṣṭhulyaṃ saptamyāṃ na pravartate // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aṣṭamyāṃ āśrayastasya svapno 'pyasukhasaṃbhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "- - - - - - - - - - - - - - - - // 7"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "1. avācyo vācakairdharmaḥ kṛpayā yena deśitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "namo 'cintyaprabhavāya buddhāyāsaṅgabuddhaye // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2. svabhāvena na cotpannā nirvṛtāśca na tattvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yathākāśaṃ tathā buddhāḥ sattvāścaivaikalakṣaṇāḥ // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "3. pārāvāraṃ na cotpannāḥ svabhāvena pratityajāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "te 'pi śūnyā hi saṃskārāḥ sarvajñajñānagocarāḥ // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4. sarvabhāvāḥ svabhāvena pratibimbasamā matāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śuddhāḥ śivasvabhāvāśca advayāstathatāsamāḥ // 11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "5. asatyātmani cātmatvaṃ kalpayitvā pṛthagjanāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sukhaduḥkham abhijñāśca sarvam eṣāṃ ca tattvataḥ // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "6. ṣaḍgatiryaśca saṃsāraḥ svargaśca paramaṃ sukham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "narake ca mahadduḥkhaṃ jarāvyādhirapī yatām // 13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "7. abhūtāṃ kalpanāṃ kṛtvā pacyante narakādiṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svadoṣenaiva dahyante veṇavo vahninā yathā // 14 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "8. yathā māyā tathā sattvā viṣayān paribhuñjate //"
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "māyāmayīṃ gatiṃ yānti pratītyotpādarūpiṇīm // 15 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "9. yathā citrakaro rūpaṃ yakṣasyātibhayaṅkaraṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bibheti svayam ālikhya saṃsāre 'py abudhastathā // 16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "10. yathā paṅkaṃ svayaṃ kṛtvā kaścit patati bāliśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathāsatkalpanāpaṅke magnāḥ sattvā duruttare // 17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "11. abhāvaṃ bhavato dṛṣṭvā duḥkhāṃ vindati vedanām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śaṅkāviṣeṇa bādhante viṣayā vitathāstathā // 18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "12. tāṃscaivāśaraṇān dṛṣṭvā karuṇādhīramānasāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niyojayanti saṃbodhau sattvān buddhā hitaṃkarāḥ // 19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "13. te 'pi saṃbhṛtasaṃbhārāḥ prāpya jñānam anuttaram /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kalpanājālanirmuktā buddhā syurlokabandhavaḥ // 20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "14. yato 'jātam anutpannaṃ samyak sattvārthadarśinaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ śūnyaṃ jagad dṛṣṭvā ādimadhyāntavarjitam // 21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "15. tena paśyanti saṃsāraṃ nirvāṇaṃ ca na cātmanaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirlepaṃ nirvikāraṃ ca ādimadhyāntabhāsvaram // 22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "16. svapnānubhūtaviṣayaṃ pratibuddho na paśyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mohanidrāvibuddhaśca saṃsāraṃ naiva paśyati // 23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "17. māyāṃ vidhāya māyavī upasaṃharate yadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā na vidyate kiṃcid dharmāṇāṃ sā hi dharmatā // 24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "18. cittamātram idaṃ sarvaṃ māyākāravad utthitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ śubhāśubhaṃ karma tato janma śubhāśubham // 25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "19. kalpayanti yathā lokaṃ notpannāśca svayaṃ janāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utpādo hi vikalpo 'yaṃ artho bāhyo na vidyate // 26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "20. asvabhāveṣu bhāveṣu nityātmasukhasaṃjñinaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavārṇave bhramantyasmin bālā mohatamovṛtāḥ // 27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kalpanājalapūrṇasya saṃsārasumahodadheḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anākramya mahāyānaṃ ko vā pāraṃ tariṣyati // 28 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "mahāyānaviṃśikā kṛtirāryanāgārjunapādānāṃ /"
    }
  ]
}