  "body": [
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_1"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ayaṃ duḥkhavrātavrataparigame pāraṇavidhir",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "mahāsaukhyāsāraprasaraṇarase durdinam idam |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yad anyanyakkṛtyā viṣamaviśikhaploṣaṇaguror vibhoḥ stotre",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "śaśvat pratiphalati ceto gatabhayam ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_2"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vimṛśya svātmānaṃ vimṛśati punaḥ stutyacaritaṃ tathā",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "stotā stotre prakaṭayati bhedaikaviṣaye |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vimṛṣṭaś ca svātmā nikhilaviṣayajñānasamaye taditthaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "tvatstotre 'ham iha satataṃ yatnarahitaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_3"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anāmṛṣṭaḥ svātmā na hi bhavati bhāvapramitibhāj anāmṛṣṭaḥ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "svātmety api hi na vinā 'marśanavidheḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śivaś cāsau svātmā sphurad akhilabhāvaikasarasas tato 'ham",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "tvatstotre pravaṇahṛdayo nityasukhitaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_4"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vicitrair jātyādibhramaṇaparipāṭīparikarair avāptam",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "sārvajñaṃ hṛdaya yad ayatnena bhavatā |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tad antas tvadbodhaprasarasaraṇībhūtamahasi sphuṭam vāci",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "prāpya prakaṭaya vibhoḥ stotram adhunā ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_5"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vidhunvāno bandhābhimatabhavamārgasthitim imāṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "rasīkṛtyānantastutihutavahaploṣitabhedām |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicitrasvasphārasphuritamahimārambharabhasāt piban bhāvān",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "etān varada madamatto 'smi sukhitaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_6"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhava prājyaiśvaryaprathitabahuśakter bhagavato vicitraṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "cāritraṃ hṛdayam adhiśete yadi tataḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kathaṃ stotraṃ kuryād atha ca kurute tena sahasā",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "śivaikātmyaprāptau śivanatir upāyaḥ prathamakaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_7"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jvaladrūpaṃ bhāsvatpacanam atha dāhaṃ prakaṭanam",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "vimucyānyad vahneḥ kim api ghaṭate naiva hi vapuḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "stuve saṃvidraśmīn yadi nijanijāṃs tena sa nuto bhaven",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "nānyaḥ kaścid bhavati parameśasya vibhavaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_8"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vicitrārambhatve galitaniyame yaḥ kila rasaḥ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "paricchedābhāvāt paramaparipūrṇatvam asamam |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svayaṃ bhāsāṃ yogaḥ sakalabhavabhāvaikamayatāviruddhair",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "dharmaughaiḥ paracitir anarghocitaguṇā ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_9"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "itīdṛkṣair rūpair varada vividhaṃ te kila vapur vibhāti",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "svāṃśe 'smin jagati gatabhedaṃ bhagavataḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tad evaitatstotuṃ hṛdayam atha gīrbāhyakaraṇaprabandhāś ca",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "syur me satatam aparityaktarabhasaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_10"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tavaivaikasyāntaḥ sphuritamahaso bodhajaladher",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "vicitrormivrātaprasaraṇaraso yaḥ svarasataḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ta evāmī sṛṣṭisthitilayamayasphūrjitarucāṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "śaśāṅkārkāgnīnāṃ yugapad udayāpāyavibhavāḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_11"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ataś citrācitrakramataditarādisthitijuṣo vibhoḥ śaktiḥ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "śaśvad vrajati na vibhedaṃ katham api |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tad etasyāṃ bhūmāv akulam iti te yat kila padaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "tadekāgrībhūyān mama hṛdayabhūr bhairava vibho ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_12"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "amuṣmāt saṃpūrnāt vata rasamahollāsasarasān nijāṃ śaktiṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bhedaṃ gamayasi nijecchāprasarataḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anarghaṃ svātantryaṃ tava tadidam atyadbhutamayīṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bhavacchaktiṃ stunvan vigalitabhayo 'haṃ śivamayaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_13"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "idantāvad rūpaṃ tava bhagavataḥ śaktisarasaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "kramābhāvād eva prasabhavigalat kālakalanam |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "manaḥśaktyā vācāpy atha karaṇacakrair bahir atho ghaṭādyais",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "tadrūpaṃ yugapad adhitiṣṭheyam aniśam ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_14"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kramollāsaṃ tasyāṃ bhuvi viracayan bhedakalanāṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "svaśaktīnāṃ deva prathayasi sadā svātmani tataḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kriyājñānecchākhyāṃ sthitilayamahāsṛṣṭivibhavāṃ trirūpaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bhūyāsaṃ samadhiśayituṃ vyagrahṛdayaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_15"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "purā sṛṣṭir līnā hutavahamayī yātra vilaset",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "parollāsaunmukhyaṃ vrajati śaśisaṃsparśasubhagā |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "hutāśendusphārobhayavibhavabhāg bhairavavibho taveyaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "sṛṣṭyākhyā mama manasi nityaṃ vilasatām ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_16"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "visṛṣṭe bhāvāṃśe bahir atiśayāsvādavirase yadā",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "tatraiva tvaṃ bhajasi rabhasād raktimayatām |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā raktā devī tava sakalabhāveṣu nanu māṃ kriyād",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "raktāpānakramaghaṭitagoṣṭhīgataghṛṇam ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_17"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bahir vṛttiṃ hātuṃ citibhuvam udārāṃ nivasituṃ yadā",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bhāvābhedaṃ prathayasi vinaṣṭormicapalaḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthiter nāśaṃ devī kalayati tadā sā tava vibho sthiteḥ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "sāṃsārikyāḥ kalayatu vināśaṃ mama sadā ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_18"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jagatsaṃhāreṇa praśamayitukāmaḥ svarabhasāt",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "svaśaṅkātaṅkākhyaṃ vidhim atha niṣedhaṃ prathayasi |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yamaṃ sṛṣṭvetthaṃ tvaṃ punar api ca śaṅkāṃ vidalayan",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "mahādevī seyaṃ mama bhavabhayaṃ saṃdalayatām ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_19"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vilīne śaṅkaughe sapadi paripūrṇe ca vibhave gate",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "lokācāre galitavibhave śāstraniyame |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anantaṃ bhogyaughaṃ grasitum abhito laṃpaṭarasā vibho",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "saṃhārākhyā mama hṛdi bhidāṃśaṃ praharatu ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_20"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "taditthaṃ devībhiḥ sapadi dalite bhedavibhave",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "vikalpaprāṇāsau pravilasati mātṛsthitir alam |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ataḥ saṃhārāṃśam nijahṛdi vimṛśya sthitimayī",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "prasannā syān mṛtyupralayakaraṇī me bhagavatī ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_21"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "taditthaṃ te tisro nijavibhavavisphāraṇavaśād avāptāḥ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "ṣaṭcakrakramakṛtapadaṃ śaktaya imāḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kramād unmeṣeṇa pravidadhati citrāṃ bhavadaśām imābhyo",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "devībhyaḥ pravaṇahṛdayaḥ syāṃ gatabhayaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_22"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "imāṃ rundhe bhūmiṃ bhavabhayabhidātaṅkakaraṇīm imāṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bodhaikāntadrutirasamayīm cāpi vidadhe |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taditthaṃ saṃrodhaṃ drutim atha vilupyāśubhatatīr",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "yatheṣṭaṃ cācāraṃ bhajati lasatāṃ sā mama hṛdi ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_23"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kriyābuddhyakṣādeḥ parimitapade mānapadavīm avāptasya",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "sphāraṃ nijanijarucā saṃharati yā |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "iyaṃ mārta.ṅdasya sthitipadayujaḥ sāram akhilam haṭhād",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "ākarṣantī kṛśatu mama bhedaṃ bhavabhayāt ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_24"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samagrām akṣālīṃ kramavirahitā sātmani muhur",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "niveśyānantāntarbahalitamahāraśminivahā |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parā divyānandaṃ kalayitum udārādaravatī prasannā me",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bhūyāt hṛdayapadavīṃ bhūṣayatu ca ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_25"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pramāṇe saṃlīne śivapadalasadvaibhavavaśāt",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "śarīraprāṇādir mitakṛtakamātṛsthitimayaḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadā kālopādhiḥ pralayapadam āsādayati te tadā devī yāsau",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "lasati mama sā syāc chivamayī ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_26"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prakāśākhyā saṃvit kramavirahitā śūnyapadato",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "bahirlīnātyantam prasarati samācchādakatayā |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tato 'py antaḥsāre galitarabhasād akramatayā mahākālī",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "seyaṃ mama kalayatāṃ kālam akhilam ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_27"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tato devyāṃ yasyāṃ paramaparipūrṇasthitijuṣi kramaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "vicchidyāśu sthitimatirasāt saṃvidadhati |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pramāṇaṃ mātāraṃ mitim atha samagraṃ jagad idaṃ sthitāṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "kroḍīkṛtya śrayatu mama cittaṃ citim imām ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_28"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anargalasvātmamaye maheśe tiṣṭhanti",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "yasmin vibhuśaktayas tāḥ |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ śaktimantaṃ praṇamāmi devaṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "manthānasaṃjñaṃ jagadekasāram ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "id": "AgKs_29"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "itthaṃ svaśaktikiraṇaughanutiprabandhān ākarṇya deva",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "yadi me vrajasi prasādam |"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tenāśu sarvajanatāṃ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "nijaśāsanāṃśusaṃśāntitākhilatamaḥpaṭalāṃ vidheyāḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṭṣaṣṭinām eke varṣe navamyām asite 'hani |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mayā 'bhinavaguptena mārgaśīrṣe stutaḥ śivaḥ ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti śrī abhinavaguptapādācāryakṛtaṃ kramastotraṃ sampūrṇam ||"
    },
    {
      "tag": "note",
      "attributes": {},
      "text": "Gandharva-nagaram / DSO Sanskrit Archive"
    }
  ]
}