  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Tatvajñānasaṃsiddhiḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "om namaḥ śrībhagavatyai vajravārāhyai //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ānandāmbudhimaṇḍanādupagatā sambuddhalakṣmīrasau"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvākāraguṇānvitā jagadaghadhvāntaughavidhvaṃsinī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jyotirjñānanidherdhṛtiḥ smṛtinidheḥ śāntirmanīṣānidheḥ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāyādvajravirāsinī bhagavatī lokatrayaṃ durgateḥ // Tjs_0.1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrīvajradevīpadapadmareṇu, rājiṃ namaskṛtya guroḥ padaṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrīsambaraṃ saṃvṛtavodhicittaṃ, prajñākṛpādvaitapadaṃ praśastam // Tjs_0.2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vajradevīpadadvaṃdvavandanānandavarttinā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhikṣuṇā jñānandreṇa candrevasuvaśarmaṇā // Tjs_0.3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhanaṃ vajravārāhyāḥ svārthaṃkiñjidvibhajyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "subhāṣitaprade nityaṃ matiḥ kalpanasotsukā // Tjs_0.4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥśradvāpareṇedaṃ mandasvalpadhiyā mayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "karttavya na mama doṣo vīkṣaṇīyo mahājanaiḥ // Tjs_0.5 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "om namaḥ śrī vajravārāhyai"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "udyātā talacakrato 'niladhutā vidyucchaṭābhāsvarā,"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dagdhālitritayā trilokamahitā pīyūṣadhārāplutā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhajñānarasāvilā vikaluṣā svānandasandohadā"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvābhāvavicāraṇāvirahitā vārāhikā pātu vaḥ // Tjs_1.1 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "nirmāṇālidineśamaṇḍalagatā kādyādivarṇāvṛtā,",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "prajbālajvalanojvalāmṛtasavā sūkṣmājasūtropamā"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vidyābuddhakadamvakaṃ dahati yā cakratrayorbhedinī"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sānandā lalitordvagā sphuratu vo vārāhikā cetasi // Tjs_1.2 //"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "praṇipatya vajrapūrvāṃ vārāhīṃ vajrayoginīm /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śirasā svasmṛtaye vakṣye 'haṃ tattvajñānasya saṃsiddhim // Tjs_1.3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijanamano 'nukūlasthānaṃ nāthāṃkakaḥ praviśetsudhīḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra sukumāramāsanamupaviśya vibhāvayecchuddhiṃ // Tjs_1.4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu ca ṣaṣṭhajinena tryakṣarajaptena vajradharahṛdayaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃlikhyānāmikayā, lohitakusumārcitaṃ kuryāt // Tjs_1.5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu paramādyapātre karakamalaṃ dakṣiṇetaraṃ kṣiptvā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vidadhīta savanaṃ yathopadeśaṃ śayasparśāt // Tjs_1.6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pravidhāya karanyāsaṃ bṛddhāṅguṣṭhāṅgulisamāyogāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kurvītāṅganyāsaṃ ṣaḍbhirvīreśvarīmantraiḥ // Tjs_1.7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu cakravajravaropari raṅgāruṇoyogajasamamamantraṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhujagabhavaiḥ suviśiṣṭaiḥ sicayagatairavakirecchanakaiḥ // Tjs_1.8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra jinahṛdayacakraṃ śikhikoṭikaṃ samabhilikhya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadgarbhe mantrālīṃ gāṅgeyaśalākayā vilikhet // Tjs_1.9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cakrasya vāhyabhāge pūrvottarapaścimārkidigdeśe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "satsvastikānabhilikhetkrameṇa vāmahastena // Tjs_1.10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ākṛṣya vajradevīmpraviśya mantrākṣareṣu baddhvā paritoṣayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "suvidhānāt jaḥ huṃ vaṃ horiti paṭhitvā // Tjs_1.11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu saparyā vividhāstasyā vidadhīta maṃtrarūpāyāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhakṣyairbhojyairlehyaiḥ peyaiścoṣyaiḥ sakāmaguṇaiḥ // Tjs_1.12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vividhairvalaiḥ samadanairupahāraiḥ pañcabhiratiparārdhyaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gītaivadyairnnṛtyaiḥ pradakṣiṇāpraṇatinutibhiśca // Tjs_1.13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratidivasaṃ pratipakṣaṃ pratimāsaṃ vā tithau daśamyāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kuryādyathoktapūjāvidhimasyāḥ siddhimākāṃkṣaṇaḥ // Tjs_1.14 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "atha kṛtavāhyārcanavidhirurukaruṇo nirmitāridhyāvje //"
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "vyasuhṛyoṣṇaguvimvāṃ dhyāyātpūrvoditāṃ devīm // Tjs_2.1 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃdhyāsindūravarṇāṃ kharakaranikarāyāstasaptārkkakāntīṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "karttrīṃ sarvārttihaṃtrīṃ sphuradamṛtaghṛṇīṃ vibhratīṃ savyadoṣṇā //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vibhrāṇāṃ vāmadoṣṇā kamalamatisitaṃ raktapūrṇadhvajāḍhyāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kālyā dambholikālyā parigataśirasaṃ muktamūrddhokhahastāṃ // Tjs_2.2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "muṇḍālīmaṇḍitāṅgīṃ mukhagaladasṛjaṃ svādaguṃ muktanādāṃ,"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "savye corddhaṃkirāsyāṃ varaśubhagamanāṃ krodhamūlānanāntāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sānandāṃ sānurāgāṃ vividharasayutāmarddhaparyyaṅkanṛtyāṃ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mudrāṣaṇmudritāṅgīṃ vyapagatavasanāṃ ṣoḍaśāvdāṃ varāṅgīm // Tjs_2.3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jñānākarṣādividhiḥ prāgiva kṛtvā vidhānavinmaṃntrī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svastikamalikābhimukhaṃ bhramantamekaṃ drūtaṃ dhyāyāt // Tjs_2.4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu viyadvatī dhātau trikūṭagirigahvare bhramaccakraṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prāguktamiva dhyāyādraktaṃ jājyalyamānaṃ sat // Tjs_2.5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra sthiramivātivegānnirvātaniṣkampadīpamiva dīptaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "drāvayedurusukhacakraṃ śravadamṛtasārakṛtasavanam // Tjs_2.6a //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyatrayasvabhāvaṃ paramaṃ sahajātmakaṃ jagadvyāpinaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sphuradamitaśāntasantatiṃ paśyetpaścātsukhaṃ paścāt // Tjs_2.6b //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratidivasaṃ pratisandhyaṃ yathākṣaṇamvā vibhāvayedetat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yāvatsiddhinimittaṃ tāvadidamucyate vyaktam // Tjs_2.7 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "ayatnajaprītilayānubandhanāt yadā bhavedvyaktamidaṃ vibhāvitam //"
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "kaśācapeṭādiha naiva vedanā tadā bhavetsiddhiradūravarttinī // Tjs_2.8 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratāḍitānāṃ paṇavādikānāṃ paṭudhvanirnaśrutagocaraścet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadāpyate bodhiranuttarāgrā svapne cirāddhyānavatāgrasiddhiḥ // Tjs_2.9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dṛṣṭvā siddhinimittaṃ pitṛvanagirikuñje vṛkṣamūlādau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nivasannutpannakramayogamajasraṃ sudhīḥ kuryāt // Tjs_2.10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "siddhau vasudhādīnāṃ bhavatī layo hyuttarottarakramaśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "khyāti tadā gaganābhaṃ prabhāsvaraṃ jñānamātraṃ sat // Tjs_2.11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jānīyāttaccihnaiścihnāni tu pañcadhā vidustajjñāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ata eva tāni yogī samāhito lakṣayenmanasā // Tjs_2.12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prathamaṃ mṛgatṛṣṇābhaṃ dhūmākāraṃ dvitīyakaṃ cihnaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "khadyotavattṛtīyaṃ caturthaṃ dīpojvalaṃ spaṣṭaṃ // Tjs_2.13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vigatābhragaganasadṛśaṃ pañcamaṃ cihnaṃ prakāśamavikalpaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ lavdhanimitto mudrāṃ mahatīmavāpnoti // Tjs_2.14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "utthātukāmaḥ praṇipatya yoginīṃ nāthaṃ ca kasthaṃ samudīrya mūḥ kṛtiṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utthāya kṛtyaṃ vidadhīta tatvadhīstiṣṭhetsadā yogayugena yogavit // Tjs_2.15 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "iti tattvajñānasaṃsiddhau bhāvanāvidhiḥ // 2 //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "adhyeṣitaśca bahuśaḥ śiṣyaiḥ kṛtamaṇḍalaiḥ padāvjanataiḥ //"
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "mantrī tithau daśamyāṃ vidadhītānugrahanteṣāṃ // Tjs_3.1 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃpūjya maṃtrarūpāṃ devīṃ cakrasthitāṃ vihitayomaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ādāya maṃtrajaptaṃ paramādyaṃ niṣkramettasmāt // Tjs_3.2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "atha vihitapañcamaṇḍalamūrddhasthāṃ tadantadakṣiṇaṃśiṣyaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kusumasrajaṃ dadhānaṃ dhyātakenāthaṃ guruḥ paśyet // Tjs_3.3a //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu ca yathoktaṃ devīcakraṃ prodyanmarīcikaṃ rayavat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyātvāntabāsigātre vajrabhṛttasya saṃdadyāt // Tjs_3.3b //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ syādāveśastatkalikā prakampanaṃ vāṣpaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāto jñānotpādaḥ svārūpañcāpi paripādyāḥ // Tjs_3.4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu kathayetsamādhiṃ pūjāmaṃtraṃ ca vajrayoginyāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śraddhānvitasya guṇino gurubuddhābhinnasadbhakteḥ // Tjs_3.6 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "kathayenna yogamenaṃ sadyaḥ pratyayakaraṃ susiddhaṃvā //"
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "śraddhāvirahitamanaso bhaktivihīnaśiṣyasya // Tjs_3.7 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vidadhāti yastu pūjāṃ devīcakrasya maṃtrayuktasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyāpayānti bhayānyaṣṭau pāpāni ca mahānti // Tjs_3.8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "durbhagatā dāridryaṃ vyādhijarāduḥkhadaurmanasyāni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhramakalikaluṣakleśāḥ pīḍā nānāvidhāścāpi // Tjs_3.9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yo japati cakramantraṃ dhyātvā hṛdaye nirodhavācāsau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prāpnotyaṣṭau siddhīḥ pañcābhijñāṃstathāṣṭaguṇāna // Tjs_3.10 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "dhyāyati yaḥ kiravaktrāṃ pratidavasaṃ yatnataścatuḥsaṃdhyaṃ hariharahiraṇyagarbhairjetumaśakyāṃ mṛtiṃ jayati // Tjs_3.11 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vastrānnapānadhanadhānyaviśālabhūmiḥ prāsādadivyaśayanāsanasādhanāni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyodbhavanti dayitā vividhāśca vidyā, yo bhāvayatyaśanikolamukhīṃ sacakrāṃ // 12 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti tatvajñānasaṃsiddhau sānuśaṃsā śiṣyānugrahavidhiḥ //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "maṃtroddhāramataḥ paramadhidhāsye vajrayoginīhṛdayaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "karṇātkarṇamupāgatamāsyādāsyaṃ tathākramataḥ // Tjs_4.1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrvoditamiva cakra saṃlikhyaṃ marudgaṇālayopetāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra likhetparipāṭita ālikāliṃ tathaiva koṇaṃ // Tjs_4.2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jhādharagaṃ ḍādharasthaṃ hādharagavibhūṣitaṃ samāyuktaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "trikamādito vilikhyaṃ sadakṣaraṃ tatvaparidīpi // Tjs_4.3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhorddhagataṃ chorddhasthitasametaṭorddhasthitaṃ tadanu lekhyaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ḍādharayutaṃ ṣādhāragaṃ ṣorddhasthitayuktaśorddhagataṃ // Tjs_4.4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ñādharayutaḷtalasthaṃ ṭādharayutaporddhasaṃsthitaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu ṭhādharagānvitaphorddhagaṃ aivāmayutaṃ haṭāntasthaṃ // Tjs_4.5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "casamadhyagataṃ ṭhasavyagasametaṃ bhādharasusaṃsthitaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadanu hathamadhyagataṃ tavāmayuktaṃ ṭhalamadhyaga paścāt // Tjs_4.6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvakarāntaphamadhyagaṃ tṛtīyavargādivāmagasametaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṇorddhayutaṃ lādharagaṃ chorddhasthaṃ bhatalagaṃ ṭhasavyayutaṃ // Tjs_4.7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "torddhagayutaṃ ṣādharagaṃ thorddhadasaṃyuktaṃ ṇādharagaṃ paścāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "phādharagaṃ ṭhādharasaṃyuktaṃ phorddhasthaṃ ṇorddhayuktaṃ lādharagaṃ // Tjs_4.8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ḍādharaśūnyasametaṃ trivatalagaṃ corddhasthitaṃ ratalaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "thādharayutaṃ śādharagaṃ ñādharasamāyuktaṃ cāpi // Tjs_4.9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sayamadhyagaṃ jhavāmagasametamuktākṣarakṛto rahasyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "maṃtroyamaśanīdevyā lekhyo japyo vibhāvyaśca // Tjs_4.10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cintāmaṇiḥ kalpakuṭhāgrakumbhaḥ śrīkāmadugdhenurapi praśastāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "te sādhyamānā dadatīha vittānyayantu saukhyaṃ sadhanaṃ dadāti // Tjs_4.11 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti tatvajñānasaṃsiddhau mantrauddhāravidhiḥ //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yasminnayaṃ pātragatevyalikhya, pūjānimittaṃ vidhinā vidhijñaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bālasya rakṣā vidhivadvidheyā, vaddhena dokaṇṭhaśikhāsuvāhau // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dṛṣṭvāpayānti bhujagāḥ śiśukaṃ sarakṣaṃ, bhūtā grahā niśicarāḥ sapiśācasaṃghāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anye ca bālakabharyārttikarāḥ subhīmāḥ siṃhaṃ yathā vanacarā valinambhayārttāḥ // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃprāpya sadupadeśaṃ dṛṣṭvā saṃpratyayaṃ ca yogasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "siddhiriyaṃ samabhilekhi sphuradamalajñānasavaṃsatiḥ // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāttatsaṃprāptyai saṃsevyaṃ saguroḥ padāmburuhaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sānnā pradānabidhinā kāyakleśaiḥ praṇāmaiśca // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatvajñānāgrasiddhirvahuhitajananī yā janasyeva loke"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "satvānāṃ yanmayosītkuśalamakaluṣaṃ pūrvacadrāṃśuśubhraṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūyāsustena lokāḥ kalimalavikalā śuddhāsambodhibhājo"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "labdhvā mudrāmudārāṃ bhavabhayaśamanīṃ sarvasatvārthakartrīṃ // 5 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "samāptoyaṃ tatvajñānasaṃsiddhirnāma svādhiṣṭhānaśceti śubham sarvadā"
    }
  ]
}