  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Mṛtyuvañcanopadeśatārāsādhana"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "utthāya pūrvasaṃdhyāyāṃ bhūpradeśe manohare /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mṛdvāsanopaviṣṭaḥ san svahṛdi candramaṇḍale // Mvupts_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcamasya prathamaṃ tu dvitīyasvarayojitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ardhendubindusaṃyuktaṃ sitaraśmivibhūṣitam // Mvupts_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya śuklamayūkhais tu tārām ākṛṣya vyomani /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvibhujāṃ sitadehāṃ tu varadotpaladhāriṇīm // Mvupts_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcopacārapūjābhiḥ pūjayitvā tu bhaktitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāpānāṃ deśanāṃ paścāt tataḥ puṇyānumodanam // Mvupts_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatpariṇāmanāṃ caiva triśaraṇagamanaṃ tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "oṃ śūnyatājñānavajrasvabhāvātmako 'ham iti paṭhet // Mvupts_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iti svaparaśūnyaṃ vai dhyātvā yogī vidhānavit /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sitāravindamadhyasthacandrabimbāsanopari // Mvupts_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrvoktabījaniṣpannāṃ tārādevīṃ manoramām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ābaddhavajraparyaṅkāṃ varadotpaladhāriṇīm // Mvupts_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śaraccandrakarākārāṃ pṛṣṭhacandrasamāśritām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvālaṅkārasampūrṇāṃ ṣoḍaśābdavapuṣmatīm // Mvupts_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvasaṃbuddhatatputramātaraṃ kāmarūpadhām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyātvāryatārāṃ hṛdaye tasyāś cakraṃ sitadyuti // Mvupts_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aṣṭakoṣṭhakam aṣṭābhir akṣaraiḥ paripūritam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "oṃhāvyañjanamadhyasthasādhyanāmādyanābhikam // Mvupts_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyāyād ekāgracittaḥ san ṣaṇ māsān dṛḍhaniścayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "japed akhinnacittaḥ san mantram enaṃ daśākṣaram // Mvupts_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "oṅkāram ādito dattvā paścāt tāre prayojayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tuttāre syāt ture paścāt svāhāntaṃ sārvakarmikaḥ // Mvupts_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmendraviṣṇucandrārkarudradikpālamanmathaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "apy akhaṇḍitaromāgro mṛtyuṃ jayati muktavat // Mvupts_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "valīpalitadaurbhāgyavyādhidāridryasaṃkṣayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "siṃhādyaṣṭamahābhītiduḥkhasaṃdohanāśanam // Mvupts_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ayācitānnapānādiharmyavastrādisaṃgamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "khaḍgāñjanapādalepabhadrakumbhādisiddhayaḥ // Mvupts_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kavitā vaktṛtā medhā prajñā caikāntanirmalā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyā ca vāñchitā siddhiś cakrād asmāt prajāyate // Mvupts_16 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// mṛtyuvañcanopadeśatārāsādhanaṃ samāptam //"
    }
  ]
}