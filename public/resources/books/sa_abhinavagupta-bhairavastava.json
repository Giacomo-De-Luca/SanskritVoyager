  "body": [
    {
      "tag": "div",
      "attributes": {},
      "children": [
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vyāptacarācarabhāvaviśeṣaṃ cinmayam ekam anantam anādim |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhairavanātham anāthaśaraṇyaṃ tvanmayacittatayā hṛdi vande ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tvanmayam etad aśeṣam idānīṃ bhāti mama tvadanugrahaśaktyā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tvaṃ ca maheśa sadaiva mamātmā svātmamayaṃ mama tena samastam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_3"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "svātmani viśvagaye tvayi nāthe tena na saṃsṛtibhītikathāsti |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "satsv api durdharaduḥkhavimohatrāsavidhāyiṣu karmagaṇeṣu ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_4"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "antaka māṃ prati mā dṛśam enāṃ krodhakarālatamāṃ vinidhehi |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "śaṅkarasevanacintanadhīro bhīṣaṇabhairavaśaktimayo 'smi ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_5"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "itthaṃ upoḍhabhavanmayasaṃviddīdhitidāritabhūritamisraḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "mṛtyuyamāntakakarmapiśācair nātha namo 'stu na jātu bibhemi ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_6"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "proditasatyavibodhamarīciprekṣitaviśvapadārthasatattvaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhāvaparāmṛtanirbharapūrṇe tvayy aham ātmani nirvṛtim emi ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_7"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "mānasagocaram eti yadaiva kleśadaśā 'tanutāpavidhātrī [1] |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "nātha tadaiva mama tvadabhedastotraparāmṛtavṛṣṭir udeti ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_8"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "śaṅkara satyam idaṃ vratadānasnānatapo bhavatāpavidāri |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tāvakaśāstraparāmṛtacintā syandati cetasi nirvṛtidhārām ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBhaist_9"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nṛtyati gāyati hṛṣyati gāḍhaṃ saṃvid iyaṃ mama bhairavanātha |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tvāṃ priyam āpya sudarśanam ekaṃ durlabham anyajanaiḥ samayajñam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vasurasapauṣe kṛṣṇadaśamyām abhinavaguptaḥ stavam imam akarot |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yena vibhur bhavamarusantāpaṃ śamayati janasya jhaṭiti dayāluḥ ||"
            }
          ]
        },
        {
          "tag": "p",
          "attributes": {},
          "text": "samāptam stavam idam abhinavākhyam padyanavakam ||"
        },
        {
          "tag": "note",
          "attributes": {},
          "text": "[1] var. : tanutām avidhāya"
        }
      ]
    },
