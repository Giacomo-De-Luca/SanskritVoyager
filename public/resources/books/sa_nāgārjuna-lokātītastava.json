  "body": [
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lokātīta namas tubhyaṃ viviktajñānavedine |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yas tvaṃ jagaddhitāyaiva khinnaḥ karuṇayā ciram || NagLok_01"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "skandhamātravinirmukto na sattvo 'stīti te matam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvārthaṃ ca paraṃ khedam agamas tvaṃ mahāmune || NagLok_02"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "te 'pi skandhās tvayā dhīman dhīmadbhyaḥ saṃprakāśitāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māyāmarīcigandharvanagarasvapnasaṃnibhāḥ || NagLok_03"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hetutaḥ saṃbhavo yeṣāṃ tadabhāvān na santi ye |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kathaṃ nāma na te spaṣṭaṃ pratibimbasamā matāḥ || NagLok_04"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūtāny acakṣurgrāhyāṇi tanmayaṃ cākṣuṣaṃ katham |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rūpaṃ tvayaivaṃ bruvatā rūpagrāho nivāritaḥ || NagLok_05"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vedanīyaṃ vinā nāsti vedanāto nirātmikā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tac ca vedyaṃ svabhāvena nāstīty abhimataṃ tava || NagLok_06"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃjñārthayor ananyatve mukhaṃ dahyeta vahninā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyatve 'dhigamābhāvas tvayoktaṃ bhūtavādinā || NagLok_07"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kartā svatantraḥ karmāpi tvayoktaṃ vyavahārataḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parasparāpekṣikī tu siddhis te 'bhimatānayoḥ || NagLok_08"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na kartāsti na bhoktāsti puṇyāpuṇyaṃ pratītyajam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yat pratītya na taj jātaṃ proktaṃ vācaspate tvayā || NagLok_09"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ajñāyamānaṃ na jñeyaṃ vijñānaṃ tad vinā na ca |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāt svabhāvato na sto jñānajñeye tvam ūcivān || NagLok_10"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lakṣyāl lakṣaṇam anyac cet syāt tal lakṣyam alakṣaṇam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tayor abhāvo 'nanyatve vispaṣṭaṃ kathitaṃ tvayā || NagLok_11"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lakṣyalakṣaṇanirmuktaṃ vāgudāhāravarjitam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śāntaṃ jagad idaṃ dṛṣṭaṃ bhavatā jñānacakṣuṣā || NagLok_12"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na sann utpadyate bhāvo nāpy asan sadasan na ca |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na svato nāpi parato na dvābhyāṃ jāyate katham || NagLok_13"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na sataḥ sthitiyuktasya vināśa upapadyate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāsato 'śvaviṣāṇena samasya śamatā katham || NagLok_14"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvān nārthāntaraṃ nāśo nāpy anarthāntaraṃ matam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "arthāntare bhaven nityo nāpy anarthāntare bhavet || NagLok_15"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekatve na hi bhāvasya vināśa upapadyate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pṛthaktve na hi bhāvasya vināśa upapadyate || NagLok_16"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vinaṣṭāt kāraṇāt tāvat kāryotpattir na yujyate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na cāvinaṣṭāt svapnena tulyotpattir matā tava || NagLok_17"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na niruddhān nāniruddhād bījād aṅkurasaṃbhavaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māyotpādavad utpādaḥ sarva eva tvayocyate || NagLok_18"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "atas tvayā jagad idaṃ parikalpasamudbhavam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parijñātam asadbhūtam anutpannam na naśyati || NagLok_19"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nityasya saṃsṛtir nāsti naivānityasya saṃsṛtiḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnavat saṃsṛtiḥ proktā tvayā tattvavidāṃ vara || NagLok_20"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svayaṃkṛtaṃ parakṛtaṃ dvābhyāṃ kṛtam ahetukam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tārkikair iṣyate duḥkhaṃ tvayā tūktaṃ pratītyajam || NagLok_21"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yaḥ pratītyasamutpādaḥ śūnyatā saiva te matā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvaḥ svatantro nāstīti siṃhanādas tavātulaḥ || NagLok_22"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvasaṃkalpanāśāya śūnyatāmṛtadeśanā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yasya tasyām api grāhas tvayāsāv avasāditaḥ || NagLok_23"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirīhā vaśikāḥ śūnyā māyāvat pratyayodbhavāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvadharmās tvayā nātha niḥsvabhāvāḥ prakāśitāḥ || NagLok_24"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na tvayotpāditaṃ kiṃ cin na ca kiṃ cin nirodhitam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā pūrvaṃ tathā paścāt tathatāṃ buddhavān asi || NagLok_25"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āryair nisevitām enām anāgamya hi bhāvanām |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānimittam hi vijñānaṃ bhavatīha kathaṃ cana || NagLok_26"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "animittam anāgamya mokṣo nāsti tvam uktavān |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "atas tvayā mahāyāne tat sākalyena deśitam || NagLok_27"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yad avāptaṃ mayā puṇyaṃ stutvā tvāṃ stutibhājanam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nimittabandhanāpetaṃ bhūyāt tenākhilaṃ yagat || NagLok_28"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "|| iti lokātītastavaḥ samāptaḥ ||"
    },
    {
