  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "śrī gaṇapataye namaḥ |"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādyantāntargatānantaśaktiviśrāntinirbharām |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anuccāryām ahaṃ vācam adhīye hṛdayaṃ vibhoḥ || 1 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sa eva bhairavo devas sarve devāś ca yanmayāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saivāsau bhairavī sattāsattāpi ca yanmayī || 2 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tad eva bhairavaṃ jñānam ajñānam api yanmayam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa hi bhairavasiddhāntaḥ pūrvapakṣo 'pi yanmayaḥ || 3 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aikadhyam adhvanāṃ ṣa.ṅnāṃ yatra sā bhairavī sthitiḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paryante sarvatantrāṇām avācyā paramā gatiḥ || 4 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sā cidānandamātrātmamagnecchājñānasatkriyā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "hṛdayaṃ devadevasya bhairavasyāvibhāgabhūḥ || 5 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "citsvābhāvyād asau devaḥ svātmanā vimṛṣan prabhuḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anāśritādibhūmyantā bhūmikāḥ pratipadyate || 6 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra vācakavācyātmaspandayor ekaśaḥ prabhoḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthūlasūkṣmaparābhāsakramayoḥ ṣaḍvidhādhvatā || 7 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kramo yo deśakālātmā bhedaprāṇas sa saṃvidām |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicchedād eṣa vijñātur vicitrābhāsatākṛtaḥ || 8 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ubhayo tatra vai rītiḥ śuddhāśuddhātmabhedataḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śuddhir bahiṣkṛtārthānāṃ svāhantāyāṃ nimajjanam || 9 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aśuddhir api magnānāṃ naivaṃ hṛdayaviśramaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "atrāntare 'py anantās syuḥ sthitayas tāratamyataḥ || 10 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ucitocitameyānāṃ pramātṝṇāṃ prakāśane |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhāraṇānyathābhāvau bhidyete mātṛmeyayoḥ || 11 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "avikalpasphuṭābhāsā sā sṛṣṭiḥ śāmbhavī matā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "abhedenātmanirmāṇe svātmaiva karaṇīkṛtaḥ || 12 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kriyājñānātmacicchaktir bhedāsūtraṇakāraṇāt |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kalāvidyāpadaṃ prāpya bhedodbhede punar bhavet || 13 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pramāṇabuddhiprakarā yatkriyāyā vikalpanāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saiva vicchinnavicchinnakriyā jñānodyamā yadā || 14 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "karmabuddhyakṣatāṃ prāptā tadāsau paśur ucyate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "itīcchayā sa bhagavān bhairavaḥ parimīyate || 15 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mitavṛttis satī sā ca śaktis tam anuvartate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya vidyeśasādākhyaśivatās saṃkucatsthiteḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dehaprāṇabuddhiśūnyapramātṛtvam upāgaman || 16 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyāsādhāraṇī sṛṣṭis tattannānāvikalpanā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śaivasargotthasaṃskārasaṃskṛtasya tadāśrayā || 17 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pramātaivāyam etāvatprakāro 'vagrahotsave |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "avyagro vartate svātmany avikalpe cidātmake || 18 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vatsa paśya tvam evaitat advayatvena saṃvidaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viditaṃ tanmayaṃ viśvam anyat tuccham asad yataḥ || 19 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kim upāyam idaṃ tattvaṃ yato 'nyan naiva sambhavi |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ananyopāyam etat tadātmopāyaṃ pracakṣate || 20 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃhṛtya sarvataś cintām [aha]m ity anuśīlayan |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "avikalpāṃ svasaṃvittiṃ pratyakṣāṃ pratipadyate || 21 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anantaitāvadākārasvīkāre 'py ekalakṣaṇām |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tāṃ svasaṃvidam āviśya vikalpān na vikalpayet || 22 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "khecaryādicatussrotovāhapūrṇamahāhradām |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vyomeśvarīm ātmacitiṃ vigāhya broḍayej jaḍam || 23 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sargasthāpanasaṃhāranigrahānugrahakramāt |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcakṛtyāni kurvāṇaḥ śivo 'ham iti viśvaset || 24 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣepajñānaprasaṃkhyā[naga]tinādakrameṇa vā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guruvaktreṇa tāny ātmany ākalayya kṛtī bhavet || 25 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vikalpayitvā viśvātmā bhairavo 'haṃ mamaiva tāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśvabhaṅgyo yathā vahner jvālābhaṅgyaḥ prabhā raveḥ || 26 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "eko 'haṃ mātṛvijñānamānameyaprakāravān |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śuddhabodhādirūpeṇa khecaryādicaturdaśaḥ || 27 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "medāmedaprakāreṇa bandhamokṣau vibhāvayan |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhairavo 'smīti visrambhāt svācchandyaṃ paramaṃ vrajet || 28 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "antaḥkārabahiṣkārāv akālakramam ātmanaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aparādhīnam ādhatse yat tvaṃ prābhavanirbharaḥ || 29 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anuttaravisargātmaviśramodayayāmalam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃghaṭṭaś śivaśaktyos tadantare cānyaśaktayaḥ || 30 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ānandeccheśanonmeṣā ūnatā ceśanecchayoḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "asphuṭasphuṭabhedena vedyollāsas tayor vidaḥ || 31 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ānandānuttarābhyāṃ ca sandhībhāvo 'tha vedanā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vedyānāṃ prāṇabhūteti pūrṇaṃ tad bhairavaṃ vapuḥ || 32 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vedyollāso 'yam icchāyām īśane caikataḥ sthitaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthūlatvena pṛthivyādibhūtapañcakatām iyāt || 33 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sūkṣmatvena ca gandhādipañcatanmātratāṃ tataḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "karaṇatvena saṃsparśād indriyāṇāṃ dvipañcatām || 34 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vedyatāyāḥ chādanena vettṛtodbhāsanakrame |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mano 'haṃbuddhitāṃ eṣām avibhāge pradhānatām |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "puruṣatvaṃ ca saṃkocavikāsau yadapekṣayā || 35 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhūvann iṣyasaṃyogād dvirūpād ubhayātmanaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "icchāsvarūpād unmeṣād anyathānuttarāyutāt || 36 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "catasraś śaktyo 'ntaḥsthāḥ puṃso 'syāntaś ca dhārikāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cidvyomno jaḍabhūmeś ca māyāmayyas triśaṅkuvat || 37 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "icchāśaktes trirūpāyās tisro 'nyāś śaktyo 'bhavan |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "visargo 'yam athātyarthaṃ sphuṭo 'bhūt sṛjyavistarāt || 38 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "etat sṛṣṭvātmaśaktīnām itaretaramiśrāt |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavet kṣobhāntaraṃ nāsmād visargād bāhyato bhavet || 39 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iyatsarvaṃ sad icchādidvārānuttarabhairave |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśramya viśramya muhus tata eva visṛjyate || 40 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "antarnilīnānantārthasvātmāmarśaś citiḥ parā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ekavāravahād yeyaṃ mantrī vāk śuddhakartṛtā || 41 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "trivahaṃ tripathaṃ tristhaṃ kālaṃ sā karṣati svataḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bahis tataś cātmanīti śrīparā kālakarṣiṇī || 42 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bheditāntaḥkṛtākha.ṅdabhāvāvekṣā parāparā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kartṛtā saiva paśyantī tasyaiveśadaśāśrayā || 43"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "madhyamā sakramā sthūlā antaḥkaraṇavartinī |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vikalpanābhinnavācyā prāṇavṛttivibheditā || 44 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svavāsanātādavasthyād daśayoḥ pūrvayor api |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māyāmātur mitatvaṃ syāt paśyantyāś ca kramo hy aṇuḥ || 45 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tayor āviśya daśayoḥ kramāc chāntavikalpayoḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhanyas svasaṃvidvistāraṃ sāścaryam anupaśyati || 46 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sā sthānakaraṇāghātapuṃvyāpārātmikā satī |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vaikharī vṛttayo yasyāstā imāḥ śrutigocarāḥ || 47 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ābhiḥ parasparaṃ jñānasaṃkrāntyātmā sa laukikaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vyavahāro 'tha śāstrīyo nānāsaṃkocasaṃkaṭaḥ || 48 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iti vāgvyāptividvāṃsam etadvargādhidevatāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māheśvarīmukhā devyo jāgare 'pi na bhuñjate || 49 ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
