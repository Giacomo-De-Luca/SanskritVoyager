  "body": [
    {
      "tag": "div",
      "attributes": {},
      "children": [
        {
          "tag": "head",
          "attributes": {},
          "text": "mahākaviśrīkṣemendrakṛtaḥ",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "sevyasevakopadeśaḥ |"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vibhūṣaṇāya mahate tṛṣṇātimirahāriṇe |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "namaḥ saṃtoṣaratnāya sevāviṣavināśine ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "utsṛjya nijakāryāṇi sadbhir bāṣpākulekṣaṇam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevyasevakasevānāṃ kriyatām anuśāsanam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_3"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "darpād ekaḥ paro lobhād dvāv andhau sevyasevakau |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dhanoṣmadainyavikṛtī mukhe kaḥ kasya paśyati ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_4"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "durvāramohalobhāndho yadi na syād ayaṃ janaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kaḥ krūrakrodhavidhuraṃ saheta dhanināṃ mukham ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_5"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yaḥ pṛthvīm api darpāndho na paśyati puraḥsthitām |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sa dainyalaghutāṃ yātaṃ kathaṃ sevakam īkṣate ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_6"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "agatiṃ vāhayaty eko badhiraṃ stauti cāparaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "aho jagati hāsyāya nirlajjau sevyasevakau ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_7"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "dūraṃ huṃkāramātreṇa visṛṣṭo mārgaṇaḥ sadā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "guṇabhraṣṭaḥ kriyāhīno nodvegaṃ yāti sevakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_8"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "manye sukṛtinā tena bhāgīrathyāṃ kṛtaṃ tapaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vairāgyabhāgī rathyāṃ yaḥ sevāsu na vigāhate ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_9"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kathitakleśavāpena śāpeneva vipākinā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevātāpena pacyante na hy aduṣkṛtino narāḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_10"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "adainyapuṇyamanasāṃ yaśas teṣāṃ virājate |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevāpaṅkakalaṅkānāṃ yair na pātrīkṛtaṃ śiraḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_11"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "prabhupraṇāme jaṭharaṃ dainyamūkaṃ vilokayan |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "praveṣṭuṃ sevakaḥ śaṅke vilakṣaḥ kṣitim īkṣate ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_12"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sevādhvajo 'ñjalir mūrdhni hṛdi dainyaṃ mukhe stutiḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "āśāgrahagṛhītānāṃ kiyatīyaṃ viḍambanā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_13"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "akālāgamanakrodhavidhureśvaracakṣuṣā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kṣipraṃ smara ivāyāti sevako dugdhabhūtitām ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_14"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "punaḥ sevāvamānānāṃ tena dattaṃ tilodakam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "praviśya vāhinīṃ yena khaḍgapātrīkṛtaṃ vapuḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_15"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kaṇavṛttiparikliṣṭaḥ kaṣṭaṃ sevakacātakaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ghanāśānirato nityam udgrīvaḥ pariśuṣyati ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_16"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "niḥsaṃtoṣaḥ parityajya bhramaraḥ puṣpitaṃ vanam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevate dānalobhena mātaṅgam api sevakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_17"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "jaḍasevāparikliṣṭas tīvradambhabakavrataḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kṛcchreṇa kṣaṇikāṃ prītim āsādayati sevakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_18"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nityam unnatikāmo 'pi mānabhaṅgād adhomukhaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yat satyam ubhayabhraṣṭas triśaṅkur iva sevakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_19"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "svamāṃsavikrayāsaktaḥ prabhuvetālaghaṭṭitaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "niḥsattvaḥ pralayaṃ yāti rātrisevāsu sevakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_20"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "bhūmiśāyī nirāhāraḥ śītavātātapakṣataḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "munivrato 'pi narakakleśam aśnāti sevakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_21"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "karoti sevakaḥ sevāṃ tāvad āśām ivāyatām |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yāvad bhogarasajñena yauvanena viyujyate ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_22"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "cakṣur dvāry añjalau pāṇiḥ stutau jihvā natau śiraḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "aho nu sevakaiḥ kāyaḥ paropakaraṇīkṛtaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_23"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "hanta yācñāvamānena sevako laghutāṃ gataḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevāpaṅkapade magno yad anviṣṭo na labhyate ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_24"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "aviśrāntyāviraktasya dīrghocchvāsena śuṣyataḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "jareva duḥsahā jantoḥ sevā saṃkocakāriṇī ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_25"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "truṭyati klinnatantrīva māleva mlāyati kṣaṇāt |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevā nāracayaty eva dinacchedena naśyati ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_26"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sevāsaṃkṣapitāṅgānāṃ rājarathyāsu śuṣyatām |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tīvratṛṣṇāviṣārtānāṃ śaraṇam śamavāridaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_27"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "lobhasya mohādhvani vṛddhabhāve jātā durāśāśayitasya sevā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "adhomukhī sā satataṃ salajjā jaratkumārīva na kasya śocyā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_28"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "āśeva śūnyeṣu vivartamānā tṛṣṇeva saṃtoṣaparāṅmukhīyam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "divāniśaṃ karṣaṇadīrgharajjuḥ sevā surāṇām api dainyabhūmiḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_29"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nisargavandhyāsu phalāśayā ye kurvanti sevāsu sadā prayatnam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kṛṣipravṛttāḥ śaśaśṛṅgakoṭyā khananti mūrkhāḥ khalu svasthalīṃ te ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_30"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "antaḥsthite 'py ātmani yaiḥ kriyante sevāpravṛttaiḥ puruṣaiḥ praṇāmāḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dugdhābdikallolini kūlakacche tṛṣṇāturās te jalam arthayante ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_31"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "bhāgīrathītīravanāntareṣu phalāvanamreṣu mahādrumeṣu |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kṣuttāpatṛṣṇāśamaneṣu satsu kiṃ dainyasevāvyasanāvamānaiḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_32"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nityaprasaktyā na sṛjaty avajñāṃ na laulyagarhāgaṇanāṃ karoti |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "atyantayācñāsu na yāti khedaṃ bhikṣābhujām pātram ato nu sevyam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_33"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "jayanti te svasti namo 'stu tebhyaḥ prabhūpraṇāmacyutamānaratnam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevāprayāsavyasaneṣu mithyā rathyārajobhāgi śiro na yeṣām ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_34"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kiṃ rājabhir durjanajanmajālavyāptair avāptair api kaṣṭadṛṣṭaiḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "santy eva sevyā bhuvi bhūbhṛtas te taṭeṣu yeṣāṃ munayo niviṣṭāḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_35"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tṛṣṇāturāṇāṃ rajasā vṛtānāṃ sevākukūlānalatāpitānām |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "śāntyai hitaṃ candrakirīṭajūṭamaitrīpavitraṃ tridaśāpagāmbhaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_36"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "utsṛjya tīvraṃ viṣayābhilāṣaṃ saṃtoṣapoṣaṃ kuśalo bhajasva |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ity arthyamānaḥ sukhasevayāyam ātmāiva sarvaṃ sudhiyāṃ dadāti ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_37"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "ekasya jāne sukhabhogabhājaḥ ślāghyasya sevāvyasanaṃ nivṛttam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sadaiva śiśnodaravarjitatvād ayācyayācñārahitasya rahoḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_38"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sevāvrate prāya ivāpaviṣṭaḥ sarvātmanā niścitajīvanāśaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dvāḥsthaiḥ prayatnena nivārito 'pi na durgrahaṃ muñcati naṣṭasaṃjñaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_39"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tamo'dhvatāpena ca cintayā ca śitena dainyena ca piṇḍitāṅgaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sukhāśayā duḥkhasahasrabhāgī sevāvrataṃ mugdhamatir bibharti ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_40"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "gacchāmi gacchāmi dinaṃ gataṃ me dine gato 'haṃ na nṛpo 'dya dṛṣṭaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "iti bruvāṇasya sadā janasya jīrṇātarāṃ tasya tanur na tṛṣṇā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_41"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vicchedakārī sahasā kathānām anīpsito dīpa iva praviṣṭaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "saṃsaktavastrāntaramakṣikeva na sevakaḥ kasya karoti duḥkham ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_42"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "dhūmāyamāno 'kṣivipakṣabhūtaś cāṭukramotpāditakarṇaśūlaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kusevakaḥ pādatale 'valagnaḥ pade pade kaṇṭakatām upaiti ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_43"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "ekaḥ kham eva kṣitim īkṣate 'nyaḥ sa nirjanārthī sa ca gāḍhalagnaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "svasvārthitā tasya bhṛśaṃ sa cārthī kathaṃ sa sevyaḥ sa ca sevako 'stu ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_44"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "chāyāgraho mūrta ivānuyāyī sthitaś ciraṃ vṛścikaniścalaś ca |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "akālapātī sukhakelilīlāyantrotpalaḥ sevakadurvidagdhaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_45"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "visṛjyamāno 'py aniśaṃ na yāti tīvroparodhapraṇayena mūrkhaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhartuḥ prasāde vihitaprayatno jātaḥ paraṃ pratyuta kopahetuḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_46"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "śūtkāridīrghaśvasitānubandhair niveditodvegagatiprayāsaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "atipraveśāt kharamārgaṇo 'sau nirasyamāno viphalatvam eti ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_47"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "śrīratnacandravaravājigajorjite 'smin",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "gambhīrarājakulanāmni mahāsamudre |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "aśnāti mūḍhamatir īśvaratām avāptum",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "āśāvaśāt kṣitipater bahu kālakūṭam ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_48"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "virama virama neyaṃ pāntha namrāmramālā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "badhira khadirapālī niṣphalaiṣā prayāhi |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "iti bahuvidham uktaḥ sevako 'nyāpadeśais",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "tyajati na vipulāśāpāśabaddhaḥ kusevām ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_49"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "pramlānā sarasatvam eti na punar māleva lagnātapā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "bhagnā kācamayīva saṃdhighaṭanā yogena na śliṣyati |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevā dīpaśikheva durgatagṛhe saṃdhāryamāṇā paraṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "niḥsnehā kṣayam eti khedajanitair ucchvāsamālānilaiḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_50"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kas tvaṃ gatvara sevakas tvaritatā kasmāt prabhur dṛśyate",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "lābhaḥ kas tava tatra vetrivipulāghātaiḥ śirastāḍanam |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kiṃ mṛdgāsi mudā viśālacaraṇair mithyaiva rathyām imām",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "bandho vandhyanarendrabhavyabhavanabhrāntyā viḍambyāmahe ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_51"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "suptākarṣaṇadāma dhāma mahato mohasya dainyasya vā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "sevākleśam aharniśaṃ viṣahate yo vittaleśāśayā |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "prasphūrjadvaḍavāgnigarbhagahanodbhūtormimālākulaṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "saṃkṣubdhaṃ makarākaraṃ praviśati śrīratnalabdhyai na kim ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_52"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vyarthātyarthagatāgatavyatikarair aśrāntatīvratvaro",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "dvārālokanatatparaḥ parijanair utsāryamāṇaḥ param |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yatnenaiva puraḥ praveśakalanaiḥ kleśāvamānāśrayaḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "sarvāpatpiśunaḥ śunaḥ sadṛśatām ālapsyate sevakaḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_53"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kūjatkrūrakapāṭapīḍanaruṣā dattaprahāraiḥ paraṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "dvārāvasthaganāya susthirabhujair dvāḥsthair bhṛśaṃ bhartsitaḥ |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kubjībhūya janasya jānuvivaraiḥ kṣiprapraveśotsukaḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "pṛcchaty antaranirgatānavasaraṃ maunavratān sevakaḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_54"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "dvāre ruddham upekṣate katham api prāptaṃ puro nekṣate",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "vijñaptau gajamīlanāni kurute gṛhṇāti vākyacchalam |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "niryātasya karoti doṣagaṇanāṃ svalpāparādhe yamaḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "sa svāmī yadi sevyate marutaṭe kiṃ naḥ piśācaiḥ kṛtam ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_55"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nityaṃ rājakule na pūjyayajane taddvārapālārcanaṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "bhaktiṃ bhūtisamudbhave na tu bhave dhyānaṃ dhane nātmani |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dṛṣṭādṛṣṭavicintanaṃ narapatau na svocite karmaṇi",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "śrīhetor bata niṣphalaṃ prakurute sarvaṃ jaḍaḥ sevakaḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_56"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sā tīvraṃ jaḍanimnapātanaratā no nityasaktā tvarā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "rathyāpaṅkakalaṅkitaṃ na vadanaṃ na dvārapālaiḥ kaliḥ |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yasmiṃs taccirasevakaḥ pravitataṃ puṇyaṃ vanaṃ gamyatāṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "krūrās te na bhavanti tatra vikṛtakrodhoddhatāḥ pārthivāḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_57"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "haṃho kaṣṭavinaṣṭa sevaka sakhe khinno 'si poṣāśayā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "rāgaś ced vibhave tad eṣa kupatiḥ klībaḥ kim āsevyate |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sevyaḥ ko 'pi maheśvaraḥ sa bhagavān yasya prasādekṣaṇair",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "akṣuṇṇaiḥ karuṇāspadīkṛtamarunnātho maruttaḥ kṛtaḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_58"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "rājñām ajñatayā kṛtaṃ yad aniśaṃ dainyaṃ tad utsṛjyatāṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "saṃtoṣambhasi mṛjyatām api rajaḥ pādapraṇāmārjitam |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "saṃtoṣaḥ paramaḥ purāṇapuruṣaḥ saṃvinmayaḥ sevyatāṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "yatsmṛtyā na bhavanti te sumanasāṃ bhūyo bhavagranthayaḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_59"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "utsṛjya prājyasevāṃ vijanasukhajuṣāṃ bhūbhujāṃ vyājabhājāṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "chittvāśāpāśabandhān vimalaśamajalais tīvratṛṣṇāṃ nivārya |"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sthitva śuddhe samādhau kim aparam amṛtaṃ mṛgyatāṃ jyotir antar",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "yasmin dṛṣṭe vinaṣṭotkaṭatimirabhare labhayte mokṣalakṣmīḥ ||"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_60"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vṛttyā jīvati lokaḥ sevāvṛttir nijaiva keṣāṃcit |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "asthāne tīvratarā nindyā tu tadarthināṃ sevā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "KṣeSsu_61"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vidvajjanārādhanatatpareṇa saṃtoṣasevārasanirbhareṇa |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kṣemendranāmnā sudhiyāṃ sadaiva sukhāya sevāvasaraḥ kṛto 'yam ||"
            }
          ]
        },
        {
          "tag": "p",
          "attributes": {},
          "text": "iti śrīvyāsadāsāparākhyamahākaviśrīkṣemendrakṛtaḥ sevyasevakopadeśaḥ samāptaḥ |"
        }
      ]
    }
  ]
}