  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Satyadvayāvatāranāma (Sda)"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// namo mahākāruṇikāya //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dve satye samupāśritya buddhānāṃ dharmadeśanā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lokasaṃvṛtisatyaṃ ca satyaṃ ca paramārthataḥ // Sda_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃvṛttirmanyate dvedhā mithyā ca tathatā tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ādyā dvidhodacandraśca kusiddhāntavitarkaṇā // Sda_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "avicāraikaramyā ca vināśotpādadharmiṇī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "arthakriyāsamarthā ca tathatāsaṃvṛtirmatā // Sda_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "eka evaparo hyarthaḥ paraiśca dvividho mataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na kācid dharmatā siddhā kuto dvitryādikaṃ bhavet // Sda_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anutpādanirodhādi deśanāvākyalakṣitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paramārthābhinnaśīlatvān naiva dharmā na dharmatā // Sda_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatāyāṃ vibhedastu kiñcinmātraṃ na vidyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirvikalpatayā bodhe śūnyatādṛṣṭirucyate // Sda_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uktaṃ sūtre sugambhīre taddarśanamadarśanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra draṣṭā na dṛśyaṃ cāpyanādinidhanaṃ śivam // Sda_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirvikalpaṃ nirālambaṃ bhāvābhāvavivarjitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anāśrayāpratiṣṭhānam atulyaṃ nirgatāgatam // Sda_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anirvācyamanābhāsaṃ nirvikāramasaṃskṛtam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yogigamyamidaṃ kleśajñeyāvaraṇavarjitam // Sda_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratyakṣamanumānañca taddvayaṃ bauddhasammatam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ubhābhyāṃ śūnyatā gamyetyarvāgdṛṅmohabhāṣitam // Sda_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasajyeddharmatājñānaṃ tīrthike śrāvake 'pi ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñānināñca kiṃ vācyaṃ mādhyamike 'viruddhatā // Sda_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tarhi sarve 'pi siddhāntā mānameyatayā samāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvatarkaviruddhatvān mānameyāpi dharmatā // Sda_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bāhulyena kathaṃ na syāt pratyakṣaṃ cānumā vṛthā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tīrthyavādanivṛtyarthaṃ vidvadbhiḥ kṛtayaḥ kṛtāḥ // Sda_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "savikalpāvikalpābhyāṃ jñānābhyāṃ nāvagamyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āgame 'pi sphuṭaṃ vidvānācāryo bhavya āha ca // Sda_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatāvagatā kena vyākṛtā yā tathāgataiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāgāntevāsicandro hi dharmatāsatyadarśakaḥ // Sda_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ paramparāmnāyairdharmatāsatyagamyatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmaskandhasahasrāṇi catvāryuktānyaśīti ca // Sda_16 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "dharmatāntargataṃ sarvam muktistu śūnyatābodhes",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadarthā śeṣabhāvanā tathyasaṃvṛtimādhūya // Sda_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatābhyasane sati saṃvṛtihetoḥpuṇyādeḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paralokācca vañcyate viviktārthamajānānaḥ // Sda_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svalpaśrutisamāśritaḥ yo naraḥ puṇyakṛnnāsti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "naṣṭaḥ kāpuruṣastu saḥ vināśayati durdṛṣṭā // Sda_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatā mandamedhasam candrācārya uvācaivam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyabhūtaṃ vyavahārasatyamupeyabhūtaṃ paramārthasatyam // Sda_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayorvibhedaṃ na hi veda yo sa vrajedapāyaṃ viparītabodhāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vyavahāramanāgamya paramārtho na deśyate // Sda_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tathyasaṃvṛtisopānamantareṇa vipaścitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tattvaprāsādaśikharārohaṇaṃ na hi yujyate // Sda_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathāyaṃ saṃvṛterbhāso yuktyā kiñcinna labhyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paramārthastvalabdhatvam ādisaṃsthitadharmatā // Sda_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hetupratyayajanyatvāt saṃvṛtirbhāsavanmatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ayuktaṃ śodhitum cet kairjalacandrādivinirmitam // Sda_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nānāpratyayajanyatvāt siddho bhāso 'khilastataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratyayānāṃ tu vicchedātsaṃvṛttyāpi na sambhavaḥ // Sda_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ dṛṣṭerasaṃmohāj jāte caryāviśodhane /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "unmārge 'gamanaṃ kṛtvākaniṣṭhaṃ sthānamāpnuyāt // Sda_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āyuṣyamalpaṃ bāhulāśca vidyā āyuḥpramāṇaṃ ca kiyanna vidmaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svābhīṣṭameva pratilambhanīyaṃ haṃsairyathā kṣīramivāmbumadhyāt // Sda_27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "arvāgdṛśā mohavaśena cāpi kṣamo na satyadvayanirṇaye 'pi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "uktīrgurūṇāmiha sampratītya nyastaṃ dvayaṃ nāgamataṃ hi satyam // Sda_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rājño 'nurodhena suvarṇadvīpe kṛte 'tra śrāddho yadi vā jano 'dya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gṛhṇātu samyak suparīkṣaṇena na śraddhayā naiva ca gauraveṇa // Sda_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sauvarṇarājena guroḥphalena saṃpreṣito devamatirhi bhikṣuḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyāgrahāt satyadvayāvatāro yuktyā sudhībhistviha vīkṣaṇīyaḥ // Sda_30 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "ācāryadīpaṅkaraśrījñānaviracitaḥ satyadvayāvatāraḥ samāptaḥ /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "tenaiva paṇḍitena anuvādakena vīryasiṃhena cānūdya saṃśodhya ca nirṇītaḥ /"
    }
  ]
}