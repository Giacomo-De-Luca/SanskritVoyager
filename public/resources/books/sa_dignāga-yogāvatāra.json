  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Yogāvatāraḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namastārāyai"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrutvā śāstramudāraṃ niścitya pāramārthikaṃ tattvam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mṛdvāsanopaviṣṭaḥ saśraddho yogamārabhed [yogī] // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "grāhyagrāhakamubhayaṃ nobhayamahameva nirvṛtirmagna iti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bahuvidhavikalpajālaṃ pravijñāya manaḥsamāpattiḥ // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jñeyaṃ vilokya sakalaṃ mā yogameva nirbhāsam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pravivācye dehe yat tattathatājñānavajreṇa // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvākāravivarjitamādyantavibhāgarahitamavikalpam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nimarlasahasradīdhitinirbhinnameti sarvaṃ gaganamiva // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svākāramātraśeṣaṃ paśyati cittaṃ svamādyanutpannam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yenāpi paśyatīdaṃ tadapi tathaivāvalokayati // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "so 'nupalambho 'cittaṃ tathatājñānaṃ tatkoṭiñca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ tamaso 'bhyāsāt prajñāveditanirodhamāpnoti // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tābhiryukto yogī sattvārthamanekadhā kurute /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "asmin pariniṣpanne tiṣṭhati yogī sadāryamadhvānam // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "............danaghavāyau niṣkampyaṃ kleśamārādyaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitāṃ vāsmin sarvadā pravṛttasya // 8 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "siddhyantyanye bahavaḥ samādhiyogadānarāgādyāḥ // 9 //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// yogāvatāraḥ samāptaḥ //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// kṛtiriyamāryadig nāgapādānāmiti //"
    }
  ]
}