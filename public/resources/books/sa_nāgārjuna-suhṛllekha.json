  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "ācāryanāgārjunaviracitaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Suhṛllekhaḥ (Sl)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prakṛtisukṛtārhaguṇāḍhya sugatavacobhyaḥ samudānītāśca mayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śubhamālakṣya kṛtā vai kāścidāryāgītayastvayā ca śravyāḥ // Sl_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dārumayī hyapi pratimā sampūjyate kāpi sugatasya vidvadbhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathāmanojñaṃ kāvyaṃ saddharmāśrayācca mamedaṃ na nindyam // Sl_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mahāmuneratimadhuraṃ manye vacanaṃ bhavatāvagatameva syāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākalpitaṃ tu sudhayā nanvatidhavalaṃ na dṛśyate candrikayā? // Sl_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jinairbuddhadharmasaṃghaśīlatyāgadevādiṣaḍanusmṛtayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pradarśitāstāstu tadguṇasambhāraiḥ pṛthaganusmaraṇīyāśca // Sl_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "daśakuśalāḥ karmapathāḥ kāyavākcittaiḥ sarvadābhyasanīyāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "madyādibhirnivṛte puṇyamayaiścājīvaiḥ suprasannaḥ syāḥ // Sl_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jñātvā calāmasārāṃ sampattiṃ dvijabhikṣudīnamitrebhyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dānaṃ deyaṃ vidhinā janmāntareṣu na dānāt paraṃ mitram // Sl_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlaṃ sevyamamiśraṃ tvayānupahatālaṃghitānupaliptaṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "carācarapratiṣṭhaṃ tu guṇāśrayaṃ bhūvacca rājate śīlam // Sl_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaḍimā dānaṃ śīlaṃ kṣāntivīryadhyānaprajñāḥ pāramitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aprameyāḥ saṃvardhya bhavecca bhavasāgarapārago jinendraḥ // Sl_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatra pūjā pitṝṇāṃ kulaṃ tadācāryabrahmabhiḥ samṛddham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatpūjayā ca kīrtistadanantaraṃ cādhigamyate 'bhyudayo 'pi // Sl_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hiṃsācaurye madirā kāmāticāramṛṣoktinṛtyagītāni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tyājyānyakālabhaktaṃ mālāgandhādiviśeṣoccaśayanāni // Sl_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anukṛtyārhacchīlaṃ kuryādupoṣadhamaṣṭābhiraṅgaiścet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "labhate hi pumān strī vā suramyakāmāvacarādidevakāyam // Sl_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mātsaryaśāṭhyamāyābhimānāsaktikausīdyarāgadveṣān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kularūpayauvanaśrutabalādijaṃ madaṃ ripumiva paripaśyecca // Sl_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "apramādo 'mṛtapadaṃ pramādo mṛtyupadamiti muninādiṣṭam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kuśaladharmasya vṛddhaye sadāpramādo 'bhyasanīyastvayā caiva // Sl_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrvapramattaḥ ko 'pi meghānnirgatenduriva tato 'pramādī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa hi nandāṅgulimālodayanājātaśatrusadṛśaḥ suśobheta // Sl_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣāntisamaṃ naiva tapastatastvayā na krodhāvasaro deyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhenānumataṃ vai padamavaivartikaṃ krodhaprahāṇena // Sl_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "akrośīdavadhīnmāmajaiṣīnmāmahārṣīd vai vittaṃ me /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vairairebhiḥ kalahastyajati ya etad vairaṃ sa sukhaṃ śete // Sl_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jale 'vanau pāṣāṇe citramiva cittaṃ tridhā khalu sattvānām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kleśavatāṃ hi prathamo dharmābhilāṣiṇāmantimo jyāyān // Sl_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vācastridhā janebhyaḥ proktā jinena madhurasatyamithyākhyā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kramaśo madhuḥ puṣpāśucitulyāścaramā ca pariharttavyaitāsu // Sl_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caturvidhā vai puruṣāḥ prakāśātprakāśe tamasastamasi punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tamaḥ prakāśād gacchati tamasastejasi pudgalo varaḥ prathamaḥ // Sl_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "janānāṃ tvāmraphalamiva pakvamapakve pakve 'pakvatulyaṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "apakve 'pakvaṃ tathā pakve pakvamiva bhāti cāturvidhyam // Sl_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paradārānna tu paśyed dṛṣṭe ca jñeyā avasthānurūpyeṇa /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kanyāmbābhaginīvad āsaktāvapyaśucimeva cintayecca // Sl_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rakṣeccañcalacittaṃ śrutiputranidhiprāṇasadṛśaṃ ca nitarām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ pariharttavyaṃ śatrusarpaviṣāyudhāgnisamāt kāmāt // Sl_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmastvanarthajanakaḥ proktaḥ kimpākaphalasamo jinendreṇa /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāśaistasya hi baddho bhavacārake lokaḥ sa prahātavyaḥ // Sl_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "calādhruvāṇi ṣaḍakṣāṇi jayanti samare vā śatrūnapi caike /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tayośca sudhiyaḥ prathamaṃ varamindriyavijetāraṃ ca manyante // Sl_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yuvatiśarīraṃ hi pūti yannavāśucidvāramaśucibhāṇḍasamam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "carmāvṛtaduṣpūraṃ bhūṣitamapi bhūṣaṇaiḥ pṛthag draṣṭavyam // Sl_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛmipīḍito hi kuṣṭhī sukhalipsayā ca yathā vahnimāśrayate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pīḍā na yāti śāntiṃ tathaiva hi kāmāsaktirapi boddhavyā // Sl_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paramārthaṃ prativettuṃ sarvabhāveṣu savidhi manasi nidhāyaiva /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa ca khalu bhāvayitavyo na hi tattulyo 'paro guṇayuto dharmaḥ // Sl_27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sukulīno 'pi na pūjyo jñānaśīlavimukho śrutirūpavān pumān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇadvayaitadyuktaḥ pūjyate so 'nyaguṇairhīno 'pi satatam // Sl_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aṣṭasu lokadharmeṣu lokavit samatayā pravartayeccittam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "hānilābhayaśo 'yaśo 'nuśaṃsānindāsukhaduḥkheṣvaśocyeṣu // Sl_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavadbhirbrāhmaṇabhikṣudevātithimātāpitṛkulamahiṣībhyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāpaṃ nācaraṇiyaṃ yataḥ katamo 'pi na narakaphalasya bhāgī // Sl_30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca kṛntati pāpakarma tatkṣaṇamastrapātavat kamapi pāpinam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mṛtyorhi samaye kintu tatkarmaṇaḥ phalamabhimukhībhavatyeva // Sl_31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saptadhanānyuktāni śraddhāśīlatyāgāmalaśrutadhiyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "apatrapā hrī muninā mudhaivāparadhanāni hi sādhāraṇāni // Sl_32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dyūtakrīḍā kautukadarśanālasyakumitrasaṅgamadirāśca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niśāviharaṇaṃ ṣaḍime tyājyā durgatidā yaśovināśakāśca // Sl_33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sanarāmaraśāsakena santoṣaḥ sarvadhanapradhānamuktam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "santoṣo 'nuṣṭheyaḥ dhanaṃ vinaiva sa dhanikaḥ sati santoṣe // Sl_34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā samṛddhāḥ puruṣā duḥkhino bhavanti naiva tathālpecchukāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yāvatyaḥ santi phaṇā ārya, duḥkhakarāḥ, nāgasya tāvatyaḥ // Sl_35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "patnī tyājyā trividhā prakṛtyā ripusambaddhā svaghātikeva /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "patyurapamānakartrī svairā laghuvastucauryaratā steyīva // Sl_36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhaginīsamānukūlā mitravad hṛdayaṅgamā ca sevanīyā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mātevopakāriṇī pūjyā sevikevājñākṛd devīva // Sl_37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vihāya rāgadveṣau bhojanamauṣadhivadavagatya seveta /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyasthityai nitarāṃ na ca saundaryagarvamānārthaṃ sevyam // Sl_38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dinamakhilaṃ śubhakārye yāpayed rātrerādyantau yāmau ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhīman, madhye yāme śayīta yato hi na bhaved viphalā nidrā // Sl_39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "maitrīkaruṇopekṣāmuditāśca sadā samyag bhāvayitavyāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "alabdhe 'nuttarapade dhruvameva brahmaloke sukhāvāptiḥ // Sl_40 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmān prītivicārau sukhañca duḥkhañca vihāya caturbhireva /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyānairbrahmābhāsvaraśubhakṛtsnabṛhatphalabhāginaśca bhavanti // Sl_41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kuśalākuśalaṃ ca karma sadābhiniveśāpratipakṣavastuguṇaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcabhiścotpadyate tasmād yatanīyaṃ kuśalacaryāyām // Sl_42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathālpakṣāranīraṃ parivartayatyalpajalarasaṃ na gāṅgam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāpaṃ tathaiva cālpaṃ nāśayatyalpakuśalaṃ na pūrṇakuśalam // Sl_43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "auddhatyaṃ kaukṛtyaṃ vyāpādaḥ styānamiddhe ca kāmecchā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicikitseti pañcaiva kuśaladhanahārakāṇīmāni jñeyāni // Sl_44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uttamāḥ pañcadharmāḥ śraddhāvīrye smṛtisamādhiprajñāśca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "balendriyāṇi cāgryāṇi kathyante yatanīyameteṣu tasmād // Sl_45 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyādhijarāmaraṇapriyaviyogavacca karmaparāyaṇāḥ sarve /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "punaḥ punastu cintayā pratipakṣeṇaivaṃ prahīyate mānaḥ // Sl_46 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svargaṃ mokṣaṃ cecchet samyagdṛṣṭistāvad bhāvanīyaiva /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtāni mithyādṛṣṭyā puruṣaiḥ sucaritānyapi viṣamavipākāni // Sl_47 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anātmāśucirduḥkhī pudgalo 'nityaśca samyagvijñeyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "smṛtyupasthānarahitā vinaśyante ca viparyāsaiścaturbhiḥ // Sl_48 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uktaṃ rūpaṃ nātmā rūpavāṃśca nātmā rūpe naivātmā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na cātmanyasti rūpaṃ śūnyamevaṃ skandhacatuṣkamapi jñeyam // Sl_49 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "skandhā na hi jāyante yadṛcchayā na prakṛtīśvarakālebhyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāhetoḥ svabhāvato jñeyā ajñānena tṛṣṇayā jātāḥ // Sl_50 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kālaḥ pacati bhūtāni kālaḥ saṃharate prajāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kālaḥ supteṣu jāgarti kālo hi duratikramaḥ //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmani mithyādṛṣṭiḥ śīlavrataparāmarśo vicikitsā ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "muktipuradvārāṇāṃ bādhakaṃ saṃyojanatrayamavagacchet // Sl_51 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmāpekṣo mokṣaḥ parasmānna labhyate kimapi sāhāyyam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "catvāryāryasatyāni vṛttasthaḥ śrutacintābhirabhyasyecca // Sl_52 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "adhiśīlacittaprajñāstistro 'pi śikṣāḥ sadaiva śikṣaṇīyāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etāsvantarbhūtāni śatamekapañcāśacca śikṣāpadāni // Sl_53 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rājan, buddhenoktaḥ kāyagatā smṛtiścaikāyano mārgaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rakṣedimaṃ sayatnaṃ smṛtināśācca sarvadharmapradhvaṃsaḥ // Sl_54 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bahubādhaṃ tu jīvanaṃ vāyūdbhūtajalabudbudavadanityaṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āścaryaṃ jāgarteḥ kṣaṇamidaṃ niḥśvāsocchvāsanidrābhyaḥ // Sl_55 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viśaraṇagalanaḥ pūtiḥ śoṣāsāraśucisvabhāvaḥ kāyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rajaḥsadharmī cānte sadā viyogaśīlo naśvaro jñeyaḥ // Sl_56 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pṛthvīmerusamudrāḥ saptārkajvālairnāvaśiṣyante /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhūlimātraṃ hi mūrtāḥ kā kathā durbalavapuṣāṃ mānavānām // Sl_57 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "itthaṃ sarvamanityaṃ hyanātmakamaśaraṇamanāthamaniketam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kadalītaruriva rājan cittamapasārayāsārasaṃsārāt // Sl_58 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mahārṇavayugacchidre hi kūrmagrīvārpaṇācca mānuṣaṃ janma /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tiryagādisudurlabhaṃ saphalīkuru saddharmābhyāsānnarendra // Sl_59 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kecid ratnālaṅkṛtakanakapātraṃ ca pūrayanti purīṣeṇa /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tato 'pyasāvatimūḍho yaśca nṛjanma labdhvāpi pāpamācarati // Sl_60 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratirūpadeśavāsaḥ satpuruṣasamāśrayaḥ śubhapraṇidhānaṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svakīyapūrvakuśalaṃ hyetaccakracatuṣkaṃ hi vidyate tvayi // Sl_61 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kalyāṇamitrasevā brahmacaryapūrtaye deśitā muninā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sevyaḥ sadā supuruṣaḥ śamaḥ prāpto yato jinamapekṣya bahubhiḥ // Sl_62 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mithyādṛk pratyante narakapretatiryakṣūtpadyamānaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mleccho jaḍaśca sattvo yo hyutpanno buddhavirahite // Sl_63 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dīrghāyuṣi devakule janilabdhaścāṣṭākṣaṇā ime doṣāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ebhī rahito bhūtvā kṣaṇaṃ labdhvā janmanivṛttau prayateta // Sl_64 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iṣṭavighātavyādhimṛtyujarādiduḥkhāvahaḥ saṃsāraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "virajya tataḥ śṛṇu tāvad doṣānetasyāvagacchan naradeva // Sl_65 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mitratvena ca śatruḥ putratvena pitāmbā ca bhāryātvena /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parivartyotpadyante tasmānna niyataṃ kimapīha saṃsāre // Sl_66 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "catuḥsamudrajalādapi janairadhikaṃ jananyāḥ stanyaṃ pītam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pṛthagjanānanusṛtya hi punastato 'pyadhikañca pāsyanti lokāḥ // Sl_67 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmanaścāsthipuñjaṃ merusamaṃ tato 'dhikamuccairjāyeta /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūmimṛdā badarāṇāṃ gulikābhirna gaṇanā sambhavāmbānām // Sl_68 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lokapūjyo 'pi śakraḥ patati ca punaḥ karmavaśāddhi saṃsāre /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadvacca cakravartī rājāpi punarbhavati hi dāso loke // Sl_69 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svarge 'psarasāṃ saukhyaṃ kucataṭisparśajaṃ caiva ciramanubhūya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "narake duḥsahaduḥkhaṃ peṣaṇachedanabhedanayantrairbhuṅkte // Sl_70 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sukhade sumeruśikhare ciramanubhavaṃścaraṃścaraṇasparśasukham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cañcalakukkulakuṇapairgāḍhaṃ duḥkhaṃ cintayet sadā manasā // Sl_71 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devāṅganāsevite nandane ramye copavane ca vihṛtya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "asipatravane teṣāṃ hastapādakarṇanāsāśca chidyante // Sl_72 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "suvadanadevasutābhiḥ svarṇotpalairyutāyāṃ mandākinyām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "snātvā punaśca narake kṣāroṣṇodakavaitaraṇyāṃ hi patanti // Sl_73 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "deveṣu kāmasukhaṃ ca kāmavītarāgasukhaṃ brahmalokeṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prāpyāvīcau satataṃ labhyate 'gnerindhanībhūya ca duḥkham // Sl_74 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "padamavāpya suryendvoḥ svakāyaprabhayā pradīpya hi saṃsāram /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tamasi ca ghane praviṣṭaḥ prasāritamapi ca svīyakaraṃ na paśyati // Sl_75 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ mṛtyuṃ jñātvā grāhyastrividhapuṇyamayadīpālokaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyathā ravīndubhyāmamardanīye 'ndhatamasi praveṣṭavyam // Sl_76 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "duṣṭācaraṇe lagnāḥ sattvāḥ saṃjīvakālasūtratapaneṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rauravāvīcyādau hi saṃghāte cāpi narake sadā duḥkham // Sl_77 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣpīḍyante tilavat kecanānye cūrṇavat peṣyante ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "chidyante śāṇenānye dīryante tathā tīkṣṇaparaśunāpi // Sl_78 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āsye 'nyeṣāṃ tadvat pātyate jvalitaṃ tāvallauhadravam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āropyante kecana sakaṇṭake taptāyase sadā śūle // Sl_79 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śvabhiḥ kecana krūrairlauhadantairvidīryante garjadbhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utthāya karau vivaśā luñcyante tīkṣṇanakhatuṇḍaiśca kākaiḥ // Sl_80 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kecit kṛmisaṃsparśād māṃsādakṛṣṇamakṣikāyutapātācca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vṛddhaṃ vraṇantvasahyaṃ bhakṣyamāṇaṃ rudanti cākulā bhūmyām // Sl_81 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dahyante 'gnikuṇḍeṣu tena tadānanāni ca bhavanti vivṛtāni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pacyante ca kaṭāhe taṇḍulavallauhamaye 'dhaḥśirasaste // Sl_82 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śvāsāvarodhasamaye pāpaḥ kālaṃkṛte ca narakaṃ prayāti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrutvāpi narakaduḥkhaṃ sahasraśo vajrasvabhāvātra bibheti // Sl_83 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrutvā dṛṣṭvā smṛtvā paṭhitvā cāpi citrāṅkanaṃ narakasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākṛtirapi bhayajanikā kā kathā tadasahyavipākānubhavasya // Sl_84 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā samastasukhānāṃ tṛṣṇākṣaya eva sarvottamaṃ sukhamiti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadvat sarvaduḥkheṣvavīcinarakaduḥkhamatyasahanīyaṃ tat // Sl_85 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ihaikasmiṃśca divase, triśataśūlaghātād bhavati ca yad duḥkham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nārakīyaduḥkhasya hi tatrāpnoti samatāṃ na laghukalāṃ cāpi // Sl_86 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "koṭivarṣaparyantaṃ dāruṇātiduḥkheṣvanubhavatsu satsvapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yāvattānyakuśalāni na kṣīṇāni tāvatra jīvanānmuktiḥ // Sl_87 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aniṣṭaphalabījāni tu kāyavākcittānāṃ hi durācaraṇāni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavataivaṃ yatanīyaṃ śaktyā yena tadaṇumātraṃ na śiṣyeta // Sl_88 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tiryagyoniṣu nānā duḥkhāni bhavanti ca badhabandhanādīni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parasparaṃ bhakṣayanti śamamūlaśubhakarmaparihartāraste // Sl_89 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kecid vai hanyante muktorṇāsthimāṃsacarmārthaṃ jīvāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yojyante khalu vivaśā anye padamuṣṭikaśāṅkuśaiḥ paśavaśca // Sl_90 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pretayonau na kṣayaṃ yātīṣṭālābhajanitā duḥkhadhārā ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhamasahyaṃ labhate śītoṣṇakṣuttṛṣāśramabhayajanitaṃ hi // Sl_91 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sūcīchidravadāsyaṃ keṣāñcidudaramativiśālaṃ nagavacca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tacca pīḍitaṃ kṣudhayā kṣiptamaśuci vastu na pratikārakṣamam // Sl_92 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kecit pretā nagnāḥ śuṣkatālaśikharavadasthicarmāṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "naktamagnimudgiratāṃ mukhe patattaptasikatāśanaṃ teṣām // Sl_93 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nimnakoṭikaiḥ kaiścit pūyaraktādyaśucīni na ca labhyante /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākramyānyamukhopari galanirgatalasikādīni ca khādyante // Sl_94 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "candro grīṣme taptaḥ śaitye śīto bhānuśca hyetebhyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "teṣāṃ dṛṣṭi pātācca niṣphalāstaravo nadyaśca śuṣyante // Sl_95 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satataṃ duḥkhabhājaste duścaritakarmapāśasudṛḍhabaddhā vai /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca mriyante kecit pañca vā daśa sahasravarṣāṇi sattvāḥ // Sl_96 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yacca labhante pretā nānāduḥkhāsvādamekavidhamittham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prītiratra kārpaṇye mātsaryamanāryamuktamato buddhena // Sl_97 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svarge cātisukhaṃ yat tato 'pyadhikaduḥkhaṃ tataścyuternūnam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ vicintya tajjñaiḥ kṣaratsukhāya na tṛṣṇā kāryā svarge // Sl_98 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vaivarṇyaṃ dehasya svāsane na ratirmlāyate 'pi mālā ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vasaneṣvapi daurgandhyaṃ svedaścāpūrvo niryāti dehāttu // Sl_99 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lakṣaṇāni hi pañcaiva mṛtyorbhavanti svargasthadeveṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūlokīyanarāṇāṃ sadṛśānyapi tāni mṛtyulakṣaṇaiśca // Sl_100 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devebhyaścyutasya yadi nāvaśiṣyet kuśalamaṇumātramapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vivaśatayoṣitavyaṃ hi tatastiryakpretanarakeṣvekasmin // Sl_101 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhaṃ syānmānasikaṃ devaiśvaryaṃ pratīrṣyayāsūreṣvapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na kurvanti dhīmanto janmāvaraṇācca te satyadarśanāni // Sl_102 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃsāre 'sminnevaṃ devanarakapretatiryagyoniṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "janmagrahaṇamayuktaṃ bahubādhaṃ janma tatreti vijñeyam // Sl_103 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jvalite śirasi ca vasane tannivṛttyupāyamupekṣya tvaritameva /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "apunarbhavāya yateta yatastasmānmahatprayojanaṃ nānyat // Sl_104 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlasamādhijñānairbhūjalatejovāyuravividhurahitaṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ajarāmaraṇamakṣayaṃ prāpyaṃ śāntadāntavimalaṃ nirvāṇam // Sl_105 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasrabdhivīryaprītidharmavicayasmṛtisamādhyupekṣāḥ sapta /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhyaṅgānīmāni prāptyai nirvāṇasya kuśalasambhāraḥ // Sl_106 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñābhāve dhyānaṃ dhyānābhāve 'pi na jāyate sā prajñā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yatrobhe vidyete jñeyastasya bhavasāgaro goṣpadavat // Sl_107 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ye 'vyākṛtadharmāścādityabandhunā caturdaśopadiṣṭāśca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "loke na cintanīyā yato tairnāpnoti cittameva śāntim // Sl_108 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ proktaṃ munināvidyayā karma karmaṇā ca vijñānam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmācca nāmarūpaṃ tataḥ ṣaḍāyatanāni tataḥ sparśā vai // Sl_109 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tata utpannā vittirvedanāśrayeṇa jāyate khalu tṛṣṇā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyāścopādānaṃ tato bhavo 'pi bhavācca jāyate jātiḥ // Sl_110 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satyāṃ jātau duḥkhavyādhijareṣṭa vastvalābhabhayamaraṇāni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhaskandho vipulaḥ sati jātiniṣedhe niṣiddhānīmāni // Sl_111 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "gambhīro 'narghakośaḥ priyaḥ pratītyotpādo jinavacanānām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samyagimaṃ yaḥ paśyati sa ca paśyati tattvadarśinaṃ buddhameva // Sl_112 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śamāya bhāvyāḥ samyagdṛṣṭisaṃkalpavākkarmājīvasmṛti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samādhivyāyāmetyāryāṣṭāṅgikamārgāścaite cārutayā // Sl_113 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jātiriyaṃ duḥkhameva tṛṣṇā ca tasya samudayo mahān jñeyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirvṛtistannirodhastadadhigamāya cāṣṭāṅgiko 'yaṃ mārgaḥ // Sl_114 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatnaḥ sadā vidheyaścaturāryasatyaprativedhāyaivam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kroḍe śriyaśca yeṣāṃ gṛhasthāstaranti kleśanadīṃ jñānāt // Sl_115 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ye dṛṣṭāryasatyāśca nāvirbhavanti te 'ṅkuravat pṛthivītaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāvataranti ca gaganāt te 'pi pṛthagjanāḥ kleśavaśā hi pūrvam // Sl_116 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ hi dharmamūlaṃ bhagavatoktamatastadapi sādhu damayecca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bho nirbhaya, kiṃ bahunā kathanena yato 'yameva hitopadeśaḥ // Sl_117 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yanmayopadiṣṭaṃ tatsaprayāsairapi bhikṣubhirduḥsādhyam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caryāguṇān sevasva śikṣāmācara jīvanaṃ ca kuru sārtham // Sl_118 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarveṣāṃ kuśalāni tu sarvārthamanumodya svacaryātrayīṃ ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhatvāya pariṇāmya tatastadanena puṇyarāśinā bhavatā // Sl_119 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "janmasvaprameyeṣu devanaralokayoginaśca vaśīkṛtya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhino 'nugrāhyāstvasahāyā avalokiteśvaracaryābhiḥ // Sl_120 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caramaṃ bhavaṃ gṛhītvā vyādhijarārāgadveṣāṃśca prahāya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhakṣetre bhagavānamitābha iva lokeśo 'mitāyurbhava // Sl_121 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāśīlatyāgodbhūtavimalakhyātiṃ bhuvi khe svarge ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "loke prasārya śamayan narān yuvatisukharatadevāṃśca bhūmau // Sl_122 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kleśopahatasattvasya jātibhayamaraṇanāśakaṃ jinendrākhyam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lokottaramakliṣṭaṃ śāntābhayākṣayanāmaiva padamāpnuhi // Sl_123 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti suhṛllekha samāptā //"
    }
  ]
}