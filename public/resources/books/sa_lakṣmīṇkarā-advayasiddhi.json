  "body": [
    {
      "tag": "div",
      "attributes": {},
      "children": [
        {
          "tag": "head",
          "attributes": {},
          "text": "advayasiddhi",
          "children": [
            {
              "tag": "lb",
              "attributes": {}
            },
            {
              "tag": "text",
              "text": "yoginī lakṣmīṅkarā viracitā"
            }
          ]
        },
        {
          "tag": "p",
          "attributes": {},
          "text": "oṃ namaḥ śrīvajrasattvāya"
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "prakṛtiprabhāsvaraṃ nāthaṃ sarvajñaṃ tribhavodbhavam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "praṇamya śirasā vajram īpsitārthaphalapradam //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "deśakālatithivāranakṣatrair maṇḍalair vinā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vakṣye haṃ vajrasattvasya saṃkṣepāt sādhanaṃ param //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_3"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "niyamavratopavāsair akṣaroccāraṇabhāvanaiḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "children": [
                {
                  "tag": "app",
                  "attributes": {},
                  "children": [
                    {
                      "tag": "lem",
                      "attributes": {},
                      "text": "atattvayogo"
                    },
                    {
                      "tag": "rdg",
                      "attributes": {
                        "wit": "#Rinpoche1987"
                      },
                      "text": "atattvayogī"
                    }
                  ]
                },
                {
                  "tag": "text",
                  "text": "na siddhyet kalpakoṭiśatair api //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_4"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "viḍvajrodakabījādyair nāsikābhyantarodbhavaiḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "pūjayed satataṃ mantrī ātmānaṃ tattvabhāvanaiḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_5"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "jananīṃ bhaginīś caiva duhitṛbhāgineyikān /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "prajñnopāyavidhānena pūjayed yogavit sadā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_6"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "ekāṅgavikalāṃ hīnāṃ śilpanīṃ śvapacīṃ tathā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yoṣitāṃ pūjayen nityaṃ jñānavajraprabhāvanaiḥ //"
            }
          ]
        },
        {
          "tag": "p",
          "attributes": {},
          "text": "tatremāni bījapadāni – o",
          "children": [
            {
              "tag": "choice",
              "attributes": {},
              "children": [
                {
                  "tag": "orig",
                  "attributes": {},
                  "text": "ṁ"
                },
                {
                  "tag": "reg",
                  "attributes": {},
                  "text": "ṃ"
                }
              ]
            },
            {
              "tag": "text",
              "text": "āḥ hū"
            },
            {
              "tag": "choice",
              "attributes": {},
              "children": [
                {
                  "tag": "orig",
                  "attributes": {},
                  "text": "ṁ"
                },
                {
                  "tag": "reg",
                  "attributes": {},
                  "text": "ṃ"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_7"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yena yena hi baddhyante jantavo raudrakarmaṇā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sopāyena tu tenaiva mucyante bhavabandhanāt //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_8"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "samayān aharahaḥ kuryād divyān pañcakulodbhavān /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "pūjayec ca pradīpādyaiḥ sakṣīrair viśvasambhavaiḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_9"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "protphullanayano mantrī nityaṃ prahasitānanaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "cittam āropya saṃbodhau bhāvayej jñānasāgaram //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_10"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yāvat sthiracalā bhāvā santy atra tribhavālaye /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarve te tattvayogena draṣṭavyā vajradhṛg yathā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_11"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "paravādinaś ca kecil lingabhedair vyavastitāḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "te 'py atra nāvamantavyā vajrasattvavikurvitaiḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_12"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvān samarasīkrtya bhāvān nairātmyaniḥsṛtān /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhāvayet satataṃ mantrī dehaṃ prakṛtinirmalam //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_13"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "gandhamālyādibhir vastrair dhūpanaivedyakais tathā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "gītavādyais tathā nṛtyaiḥ sopāyair bhajate vibhuḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_14"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "na kaṣṭakalpanāṃ kuryān nopavāsaṃ na ca kriyām /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "snānaṃ śaucaṃ na caivātra grāmadharmavivarjanaṃ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_15"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "na cāpi vandayed devān kāṣṭhapāṣāṇamṛṇmayān /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "pūjām asyaiva kāyasya kurvān nityaṃ smāhitaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_16"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "makṣikācchardisaṃmiśrair viṇmūtrādyaiś ca bhāvitaiḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "pañcapradīpasaṃyuktaiḥ pūjayed vajradhāriṇam //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_17"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "abalā svayambhukusumaiḥ sakṣīrair viśvasambhavaiḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "pūjayed devatāṃ tena dehasthāṃ tattvabhāvanaiḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_18"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "parasvaharaṇaṃ kuryāt paradāraniṣevanam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vaktavyaṃ ca mṛṣāvākyaṃ sarvabuddhāṃś ca ghātayet //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_19"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "śailamṛṇmayacaityādīn na kuryāt pustake ratim /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "na maṇḍalāni svapne 'pi kāyavākcittakarmaṇā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_20"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "jugupsāṃ naiva kurvīta sarvavastuṣu mantravit /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vajrasattvaḥ svayaṃ tatra sākṣād rūpeṇa saṃsthitaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_21"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "gamyāgamyavikalpaṃ tu bhakṣyābhakṣyaṃ tathaiva ca /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "peyāpeyaṃ tathā mantrī kuryān naiva samāhitaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_22"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vairocanasamudbhūtān sarvaprāṇyaṅgasambhavān /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "prāṇakān guhyatattvajño bhakṣayet siddhihetunā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_23"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvavarṇasamudbhūtā jugupsyā naiva yoṣitaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "saiva bhagavatī prajñā saṃvṛtyā rūpam āśrityā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_24"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "na tithir na ca nakṣatraṃ nopavāso vidhīyate /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "advayajñānayuktasya siddhir bhavati saugatī //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_25"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "bahunātra kim uktena yad bhaved upalabdhikam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tat sarvaṃ tattvayogena draṣṭavyaṃ tattvavedinā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_26"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "hastyaśvakharagāvoṣṭrapradīpaṃ śvānasambhavam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "mahāpradīpasaṃmiśraṃ bhakṣayed yogavit sadā //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_27"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "na cādhyāsaktiṃ kurvīta ekasminn api yogavit /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "samatācittayogena bhāvanīyo bhavārṇavaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_28"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "utpattisthitinirodhaṃ cāsampṛktaṃ pṛthagjanaiḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tasya bhāve tu saṃsāro nānyatra pralayodbhavaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_29"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "dinaṃ tu bhagavān vajrī naktaṃ prajñā vidhīyate /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "evaṃ tu bhāvayed yogī laghu siddhim avāpnuyāt //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_30"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yat tad avyaktarūpaṃ tu sarvasattveṣu saṃsthitam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "guruvaktrāt paraṃ tattvaṃ prāpyate nātra samśayaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_31"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "apratiṣṭhitanirvāṇaṃ nirnimittaṃ nirālayam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vyāpakaṃ sarvasattveṣu saṃbodhiḥ paramaṃ padam //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_32"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "evaṃ matvā tu vai yogī yo 'bhyased buddhimān sadā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sa siddhyati na sandeho mandapuṇyo 'pi mānavaḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_33"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "ācāryāt parataraṃ nāsti trailokye sacarācare /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yasya prasādāt prāpyante siddhayo 'nekadhā budhaiḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_34"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vajrasattvaḥ sa vai jñeyaḥ sarvabuddhair namaskṛtaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ācāryaḥ paramo devaḥ pūjanīyaḥ prayatnataḥ //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_35"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sa eva tathatārūpī lokānugrahahetunā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "rūpam āśritya saṃvṛtyā saṃsthito yogapīṭhake //"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ADvS_36"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "mṛtyur eṣa vikalpo yaṃ na bhāvaḥ sarvavastuṣu /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "hanyate svavikalpena pṛthagjanavijṛmbhitaiḥ //"
            }
          ]
        },
        {
          "tag": "p",
          "attributes": {},
          "text": "śrīmadoḍīyānavinirgatā mahāyogapīṭhāgatā 'khilayogatantratattvagarbhā śrīlakṣmīmukhakamalād viniḥsṛtā svādhiṣṭhānakramodayā advayasiddhir nāma sādhanopāyikā samāpteti"
        }
      ]
    }
  ]
}