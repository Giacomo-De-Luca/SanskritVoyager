  "body": [
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcasaṃvatsaramayaṃ yugādhyakṣaṃ prajāpatim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dinartvayanam āsāṅgaṃ praṇamya śirasā śuciḥ // 1"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "praṇamya śirasā kālam abhivādya sarasvatīm /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kālajñānaṃ pravakṣyāmi lagadhasya mahātmanaḥ // 2"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jyotiṣām ayanaṃ kṛtsnaṃ pravakṣyāmy anupūrvaśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viprāṇāṃ sammataṃ loke yajñakālārthasiddhaye // 3"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirekaṃ dvādaśārdhābdaṃ dviguṇaṃ gatasaṃjñikam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṣṭyā ṣaṣṭyā yutaṃ dvābhyāṃ parvaṇāṃ rāśir ucyate // 4"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svar ākramete somārkau yadā sākaṃ savāsavau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "syāt tadādi yugaṃ māghastapaḥ śuklo 'yanaṃ hy udak // 5"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prapadyete śraviṣṭhādau sūryācandramasāv udak /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sārpārdhe dakṣiṇārkas tu māghaśrāvaṇayoḥ sadā // 6"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "gharmavṛddhir apāṃ prasthaḥ kṣapāhrāsa udaggatau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dakṣiṇe tau viparyāsaḥ ṣaṇmuhūrtyayanena tu // 7"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dviguṇaṃ saptamaṃ cāhur ayanādyaṃ trayodaśam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caturthaṃ daśamaṃ ca dviryugmādyaṃ bahule 'py ṛtau // 8"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vasus tvaṣṭā bhavo 'jaś ca mitraḥ sarpāśvinau jalam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhātā kaś cāyanādyāś cārthapañcamabhas tv ṛtuḥ // 9"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāṃśāḥ syur aṣṭakāḥ kāryāḥ pakṣadvādaśakodgatāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ekādaśaguṇaś conaḥ śukle 'rdhaṃ caindavā yadi // 10"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāryā bhāṃśāṣṭakasthāne kalā ekānnaviṃśatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ūnasthāne trisaptatim udvaped ūnasaṃmitāḥ // 11"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tryaṃśo bhaśeṣo divasāṃśabhāgaś caturdaśaś cāpy anīya bhinnam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhārdhe 'dhike cāpi gate paro 'ṃśo dvāv uttamaikaṃ pnavakairavedyam // 12"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pakṣāt pañcadaśāc cordhvaṃ tadbhuktam iti nirdiśet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "navabhis tūdgato 'ṃśaḥ syād ūnāṃśadvyadhikena tu // 13"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jau drā ghaḥ khe śve 'hī ro ṣā cin mū ṣa ṇyaḥ sū mā dhā ṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "re mṛ ghrāḥ svā 'po 'jaḥ kṛ ṣyo ha jye ṣṭhā ittṛkṣā liṅgaiḥ // 14"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jāvādyaṃśaiḥ samaṃ vidyāt pūrvārdhe parvasūttare /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhādānaṃ syāt caturdaśyāṃ kāṣṭhānāṃ devinā kalāḥ // 15"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kalā daśa saviṃśā syāt dve muhūrtasya nāḍike /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dyutriṃśat tatkalānāṃ tu ṣaṭchatī tryadhikaṃ bhavet // 16"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāḍike dve muhūrtas tu pañcāśatpalam āḍhakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āḍhakāt kumbhako droṇaḥ kuṭapair vardhate tribhiḥ // 17"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sasaptakaṃ bhayuk somaḥ sūryo dyūni trayodaśa /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "navabhāni ca pañcāhnaḥ kāṣṭhāḥ pañcākṣarāḥ smṛtāḥ // 18"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śraviṣṭhāyāṃ gaṇābhyastān prāgvilagnān vinirdiśet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "staryān māsān ṣaḍabhyastān vidyāc cāndramasān ṛtun // 19"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "atītaparvabhāgebhyaḥ śodhayed dviguṇāṃ tithim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "teṣu maṇḍalabhāgeṣu tithiniṣṭhāṃgato raviḥ // 20"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yāḥ parvabhādānakalās tāsu saptaguṇāṃ tithim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prakṣipet tatsamūhas tu vidyād ādānikīḥ kalāḥ // 21"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yad uttarasyāyanato gataṃ syāc cheṣaṃ tu yad dakṣiṇato 'yanasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tad ekaṣaṣṭyā dviguṇaṃ vibhaktaṃ sadvādaśaṃ syād divasapramāṇam // 22"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yad ardhaṃ dinabhāgānāṃ sadā parvaṇi parvaṇi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṛtuśeṣaṃ tu tad vidyāt saṃkhyāya sahaparvaṇām // 23"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ity upāyasamuddeśo bhūyo 'py ahnaḥ prakalpayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñeyarāśigatābhyastaṃ vibhajet jñānarāśinā // 24"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "agniḥ prajāpatiḥ somo rudro 'ditir bṛhaspatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarpāś ca pitaraś caiva bhagaś caivāryamāpi ca // 25"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "savitā tvaṣṭātha vāyuś cendrāgnī mitra eva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "indro niṛrtir āpo vai viśvedevās tathaiva ca // 26"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viṣnur vasavo varuṇo 'ja ekapāt tathaiva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ahirbudhnyas tathā pūṣā aśvinau yama eva ca // 27"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nakṣatradevatā etā etābhir yajñakarmaṇi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yajamānasya śāstrajñair nāma nakṣatrajaṃ smṛtam // 28"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ity evaṃ māsavarṣāṇāṃ muhūrtodayaparvaṇām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dinartvayanam āsāṅgaṃ vyākhyānaṃ lagadho 'bravīt // 29"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "somasūryastṛcaritaṃ lokaṃ loke ca sammatim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "somasūryastṛcaritaṃ vidvān vedavid aśnute // 30"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viṣuvaṃ tadguṇaṃ dvābhyāṃ rūpahīnaṃ tu ṣaḍguṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yal labdhaṃ tāni parvāṇi tathārdhaṃ sā tithir bhavet // 31"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "māghaśuklapravṛttasya pauṣakṛṣnasamāpinaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yugasya pañcavarṣasya kālajñānaṃ pracakṣate // 32"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tṛtīyāṃ navamīṃ caiva paurṇamāsīm athāsite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṣṭhīṃ ca viṣuvān prokto dvādaśīṃ ca samaṃ bhavet // 33"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caturdaśīm upavasathas tathā bhaved yathodito dinam upaiti candramāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māghaśuklāhniko yuṅkte śraviṣṭhāyāṃ ca vārṣikīm // 34"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā śikhā mayūrāṇāṃ nāgānāṃ maṇayo yathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadvad vedāṅgaśāstrāṇāṃ jyotiṣaṃ mūrdhani sthitam // 35"
        }
      ]
    }
  ]
}