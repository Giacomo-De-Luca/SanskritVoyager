  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Śatagāthā"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kaumārye paṭhyatāṃ vidyā śaitye saṃpālyatāṃ ca gauḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣettraṃ ca karṣyatāṃ pītaṃ trayaḥ suphalahetavaḥ // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "gate 'pi vayasi grāhyā vidyā sarvātmanā budhaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadyapi phaladā syānna sulabhā sānyajanmani // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇeṣu kriyatāṃ yatnaḥ kimāṭopaiḥ prayojanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vikrīyante na ghaṇṭābhirgāvaḥ kṣīravivarjitāḥ // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇini guṇajño ramate nāguṇaśīlasya guṇini paritoṣaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "alireti vanātkamalaṃ na dardurasya tannivāso 'pi // 4 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "guṇiṣu durlabhā āḍhayā āḍhayeṣu guṇinastathā // 5 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aneke santi bhūbhāgā ratnavantastu durlabhāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "durlabhāḥ praṇināṃ santi mātṛpitṛyutastu ca // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇāḥ kurvanti dūtatvaṃ dūre 'pi basatāṃ satām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ketakīgandhamāghrātuṃ svayamāyānti ṣaṭpadāḥ // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vidvatvaṃ ca nṛpatvaṃ ca naiva tulyaṃ kadācana /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svadeśe pūjyate rājā vidvān sarvatra pūjyate // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "alpastu kālo vividhāśca vidhā ḥ simāyuṣo yā kiyatī? na buddhā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "haṃsā labhante ca yathā payo 'dbhyas tathaiva tatvaṃ labhatāṃ ca yattat // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekasthānanivāsino 'tisamayāt syuste viyuktāḥ kila"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicchedānna hi cāntaraṃ kimapi tat tyājyaṃ na kiṃ tatsthalam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vaivaśyāddhi viyogato manasi jāyante vidhātā ati"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatsthānaṃ yadi hīyate sahajataḥ syāccātiśāntiḥ sukham // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saha vasatāmapyasatāṃ jalaruhajalavadbhavatyasaṃśleṣaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dūre 'pi satāṃ vasatāṃ prītiḥ kumudenduvadbhavati // 11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prapañcā yatnaoto heyāḥ saṃsargaḥ kriyatāṃ satām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dinaṃ rogabhayānmuktaṃ śatābdāccāpi tad varam // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvathehāḥ parityājyāścedaśakyaṃ tadā punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirvāṇāptyunmukho bhūyāt tadiyaṃ tasya bheṣajam // 13 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "udayantvamūni subahūni mahāmahāṃsi cando cando 'pyalaṃ bhuvanamaṇḍalamaṇḍanāya / sūryādūte na tadudeti na cāstameti yenoditena dinamastamitena rātriḥ // 14 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadudeti vinā sūrya tejasvi tanna jāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sūryodayo varaṃ cāsti hyanyeṣāmudayena kim // 15 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "kusumastabakasyeva dve gatī tu mahātmanām /",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mūdhni vā sarvalokasya śīryate vana eva vā // 16 /"
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vāṇi kaṭhorā bhaṇitā hi duṣṭairyā sarparūpā sujanān hinasti /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "te bheṣajaṃ kṣāntimayaṃ ca prajñāṃ saṃsevya cintārahitā bhavanti // 17 //"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhīrāḥ kaṣṭamanuprāptā na bhavanti viṣādinaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "praviśya vadanaṃ rāhoḥ kiṃ nodeti punaḥ śaśī // 18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yasya cittaṃ dravībhūtaṃ kṛpayā sarvajantuṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya jñānena mokṣeṇa kiṃ jaṭābhasmacivaraiḥ // 19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vanāni dahato vahneḥ sakhā bhavati mārutaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa eva dīpanāśāya kṛśe kasyāsti sauhṛdam // 20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "parastutaguṇairyastu nirguṇo 'pi guṇī bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "indro 'pi laghutāṃ yāti svayaṃ prakhyāpitairguṇaiḥ // 21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kulīno 'pi bhaved garvī kārpāṇyasahito dhanī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "devatāstāṃśca nindanti sargo 'yaṃ jalavahnivat // 22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dūrastho 'pi samīpastho yo yasya manasi sthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yo yasya hṛdaye nāsti samīpastho 'pidūrataḥ // 23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pareṣāṃ vaibhavaṃ dṛṣṭvā mano yasya prakupyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na tasyārthopalabdhistu citaṃ puṇyaṃ ca naśyati // 24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rāgopamaṃ nāsti malaṃ hi loke īrṣyopamā nāsti ca kāpi hāniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yāñcāsamo nāsti ca ko 'pi bandhurdānopamo nāsti ca mitravargaḥ // 25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣudhāsamā nāsti śarīravedanā cintāsamā nāsti śarīraśoṣaṇā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇaiḥ samā nāsti śarīrabhūṣaṇā kṣāntyā samaṃ nāsti śarīravarmaṃ vai // 26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhanena kiṃ kṣudrajanasya mitraiḥ kiṃ vañcakasyāpi ca matsarasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kiṃ hānidasyātiguṇagrahaiśca kiṃ vā vipattau vimukhātmajena // 27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvathā svahitamācaraṇīyaṃ kiṃ kariṣyati jano bahujalpaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bidyate hi na sa kaścidupāyaḥ sarvalokaparitoṣakaro yaḥ // 28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasaṅgasyānukūlo yaḥ prajña eva sa pālayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "satyāsatye ca maitridveṣau kuryāt svaparaiḥ saha // 29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na dviṣantaḥ kṣayaṃ yānti yāvajjīvamapi ghnataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "krodhameva tu yo hanti tena sarve dviṣo hatāḥ // 30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satkāro guṇināṃ śreyān durjanasya vinītatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kośapūrtiḥ sadācāraiḥ śreyo deśaparīkṣaṇam // 31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yāvanmārgo bhavet dṛṣṭo yāvaccaraṇapuṣṭatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñā hrāso na yāvaddhi tāvatkuryāt svayaṃ hitam // 32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyabhicāreṣvāsattaḥ rājā tasya hi nirakṣaro mantri /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā dhanāśā kutra rakṣyā asavaḥ prayatnena // 33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarva yatra vinetāraḥ sarve paṇḍitamāninaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarve prabhutvamicchanti tad vṛndamavasīdati // 34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mūṣako rakṣayedannaṃ mārjārī navanītakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kākaścālayet pākaṃ vastūnāṃ tatra kā kathā // 35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mālākāra ivārāme na yathāṅgārakārakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "puṣpaṃ puṣpaṃ vicinvīta mūlocchedaṃ na kārayet // 36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "valmīkaṃ madhujātaṃ ca śuklapakṣe ca candramāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhikṣādravyaṃ nṛpadravyaṃ stokaṃ stokena vardhate // 37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hīnatā yācane yatra syāttatra na ca yācyatām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmaṃ hi na bhavedindro himājjīvati tittariḥ // 38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mayūra ! grīṣmasya tu tāpayukta āśāyutaḥ khasya jale bhavestvam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaṇṭhantu no nāmaya gauraveṇa nīre taḍāgasya tu dūṣitasya // 39 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "siṃho balī hariṇaraktapāmāṃsabhojī saṃvatsareṇa kurute ratimekavāram /\nyo gardabhaḥ khalu rajaḥkaṇamātrabhojī kāmī bhavedanudinaṃ vada ko 'tra hetuḥ // 40 // sarpāḥ pibanti pavanaṃ na ca durbalāste śuṣkaistṛṇairvanagajā balino bhavanti / kandaiḥ phalairmunivarā gamayanti kālam saṃtoṣa eva puruṣasya paraṃ nidhānam // 41 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sa śobhate puṣpitapuṣpavacca sumaṇḍitaṃ yasya mukhaṃ suvarṇaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anakṣaraṃ yasya mukhaṃ bhavecvet tannetravaktre bhubi chidravacca // 42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "muktāmaṇibhyāṃ ca hi gardabhasya kiṃ śūkarasya priyabhojanena /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "andhasyadīptyā badhirasya gītaimūrkhasya dharmeṇa kimasti kṛtyam // 43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kātantraśābdavettā hi vaidyaśca siddhasāravit /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāṣṭhakhaṅgadharaścopahāsaṃ yānti trayo 'pi te // 44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dehīdaṃ vacanaṃ nimnaṃ na dāsyāmyatinimnakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gṛhāṇetyuttamaṃ vākyaṃ na gṛhṇāmyatiśobhanam // 45 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣatiṃ bihāya yenāpi prayogeṇa hitasya kim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svakāyarakṣaṇenāpi kiñcaiva dhanatṛṣṇayā // 46 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kiṃśukasya phalaprāptiryathā vyartha bubhukṣave /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhaninaśca tathādāturjīvanaṃ niṣprayojanam // 47 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmāturāṇāṃ na bhayaṃ na lajjā kṣudhāturāṇāṃ na balaṃ na tejaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rogāturāṇāṃ na sukhaṃ na nidrā mārgāturāṇāṃ na bhayaṃ na vīryam // 48 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhanalipsuḥ suhrit tyājyā bhāryā ca vyabhicāriṇī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "adharmī ca nṛpaḥ krūro mantrī piśuna eva ca // 49 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kupradeśo hi durvyavasāyo duṣṭo 'tha vai suhṛt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "baidyo 'dakṣo 'pi duḥsevyam vastu heyā ime 'pi ca // 50 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ahitaṃ hitamācāraśūnyabuddheḥ śrutisamayairbahubhirvahiṣkṛtasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "udarabharaṇamātne kevalecchormanujapaśośca ko viśeṣaḥ // 51 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ardhajalabharaḥ kumbho mūrdhni yatnena dhāryate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "krudhyanti durjanā nūnaṃ satkāreṇātisevayā // 52 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "stokenonnatimāyāti stoke nāyātyadhogatim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aho ! susadṛśī ceṣṭā tulāyaṣṭeḥ khalasya ca // 53 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā bāryo na laśunasya gandhaḥ kastūrikācandanacandrasaṃjñaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathā na vāryā varaśāstraśikṣābhyāsena duṣṭasya ca duṣṭatāpi // 54 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "durjanaḥ parihartavyo vidyayālaṅkṛto 'pi san /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "maṇinā bhūṣitaḥ sarpaḥ kimasau na bhayaṅkaraḥ // 55 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "durjanā durbalā yāvat tāvat sādhusvabhāvakāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nyūne śaradi nīre hi nadīṃ sarve taranti ca // 56 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jvarādatyuṣṇatā raukṣāt kaphaśca vardhate yathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇācārasvabhāvaiḥ syurduṣṭā na parivartitāḥ // 57 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "duṣṭā narā bhṛtyagaṇo 'vamānī praśikṣitā naiva hayāḥ kubhāryā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratāḍanenaiva bhavanti namrāḥ sukarmayogyā na kadāpi caite // 58 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vṛthā vṛṣṭiḥ samudrasya vṛthā tṛptasya bhojanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vṛthā dānaṃ samarthasya vṛthā hīnasya satkṛtiḥ // 59 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "padmāni satputramukhe lasanti rohanti nūnaṃ kulaṭāsutasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viṣasya patrāṇi yathā karoti duṣkarma yo vai labhate phalantat // 60 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhracchāyā khale prītiḥ siddhamannaṃ ca yoṣitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tṛṇāgnirhimabinduśca ṣaḍete budbudopamāḥ // 61 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śuṣkaṃ māṃsaṃ striyo vṛddhā madyaṃ ca taruṇaṃ dadhi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nakte bhojo divā svāpaḥ ṣaḍete prāṇahāriṇaḥ // 62 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadyo māsaṃ navaṃ sarpirbālāstrī payasaudanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "uṣṇodakaṃ tarucchāyā ṣaḍete prāṇakāriṇaḥ // 63 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāntāviyogaḥ svajanāpamāno ṛṇasya śeṣaḥ kunarasya sevā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dāridrabhātpravimukta mitraṃ vināgninaiete pradahanti pañca // 64 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "karmī hyalābhī balino 'pakartā darpī ca bhikṣurhyadhanaḥ sukhārthī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaṭūktibhāṣī priyasundarīṇāmete mṛṣācārijanāśca pañca // 65 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmadātānnatrdātā ca bhayatrātopadeśakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śarīrotpādakaśceti pañcaite hitakāriṇaḥ // 66 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prārāvṛto hi sanyāsāt srī patitrayadarśikā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jambūko jālamuktaśca trayo 'mī vañcakā matāḥ // 67 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhojanāpācakā vaiddyā nṛpāścāsatyavādinaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāpina uccavaṃśīyā ayogyāḥ syustrayo janāḥ // 68 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yācakaḥ svādubhoji ca darpī bhikṣāparo bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śāstrārthī bhavatādajñastrayo hāsaṃ bhajanti ca // 69 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sakṛjjalpanti rājānaḥ āryo hi dṛśyate sakṛt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sakṛtkanyāḥ pradīyante trīṇyetāni sakṛtsakṛt // 70 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sthūlavapustapasvī ca śūraścāpyakṛtavraṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śayānaikākinī ca strī trayametanna viśavaset // 71 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anyeṣāṃ hiṃsako vipro mithyācārinṛpo 'pi ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhogī kāmarato bhikṣurnindābhājastrayo bhuvi // 72 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vidvān vinayasampanno vīro 'tiśānta eva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tyāgārambhaṃ dhanī kuryāt kīrtanīyāstrayo 'pi ca // 73 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dayī parahite līno duṣṭaśca paranāśakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "icchābhirbālaka nūnaṃ trayo 'tṛptā ime bhuvi // 74 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "arthanāśānmanastāpaṃ duścaritāṃ gṛhe striyam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vañcanaṃ cāpamānaṃ ca matimānna prakāśayet // 75 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñāyate 'dhvā śaśitārakāṇāṃ jyotirvidādhvā gaṇitena khasya /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na dṛśyate tena gṛhe tu patnyāḥ kāmādimithyācaraṇaṃ kukṛtam // 76 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "garuṇā tattvavettuḥ kiṃ vaidyenārogiṇaśca kim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pāre gatasya kiṃ nāvā kāntayā kiṃ virāgiṇaḥ // 77 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devasujanaviprāṇāṃ satye vidvadgaṇasya hi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gūḍhe vacasi bhojye 'sti prīti pṛthagjanasya ca // 78 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śaile śaile na māṇikyaṃ mīne mīne na mauktim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhavo he na sarvatra candanaṃ na vane vane // 79 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "haṃso na bhāti caturo bakayūthamadhye gomāyumaṇḍalagato na vibhāti siṃhaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jātyo na bhāti turagaḥ kharayūthamadhye vidvān na bhāti puruṣeṣu nirakṣareṣu // 80 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kokilānāṃ svaro rūpaṃ nārīrupamapatrapā ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vidyārūpaṃ vidagdhānāṃ kṣamārūpaṃ tapasvinām // 81 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prabhāvaśāline puṃse kā kṣamāpratikāriṇe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vinītāya ca śāntāya janāya kā sahiṣṇutā // 82 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paro 'pi hitavān bandhurbandhurapyahitaḥ paraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ahito dehajo vyādhiḥ hitamāraṇyamauṣadham // 83 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mahājanasya saṃsargaḥ kasya nonnatikārakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "puṣpamālānuṣaṅgeṇa sūtraṃ śirasi dhāryate // 84 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viśvāsapratipannānāṃ vañcane kā vidagdhatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aṅkamāruhya suptasya hantuḥ kiṃ nāma pauruṣam // 85 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kaumāre pitarau pātaḥ bhartrī rakṣati yauvane /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rakṣanti vārddhake putrā nājñaḥ svātantryamarhati // 86 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āsaktirna bhaveddyāvat tāvattu guṇa eva saḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "praviṣṭe 'syāṃ mahāsaktau guṇādānaṃ kuto bhavet // 87 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nijarītyā janāḥ prāyo 'parānākalayanti hi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṛṣayaḥ pretamālokya bruvanti taṃ tapasvinam // 88 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "durjanadūṣitamanasāṃ puṃsāṃ sujane 'pi nāsti viśvāsaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bālaḥ payasā dagdho dadhyapi phūtkṛtya bhakṣayati // 89 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "araghaṭṭaghaṭī yuktā vaśībhavati yoṣitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavatyārambhiko yo 'pi bhavatyeva tadadbhutaḥ // 90 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satkṛto mahatāṃ yo 'sti vetti tamadhamastṛṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paṇḍitaiḥ pūjitastūpe kākaḥ karoti cāsanam // 91 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "phalaṃ ketakavṛkṣasya yadyapyambu prasādakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na nāmagrahaṇādeva tasya vāri prasīdati // 92 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śiṣṭā na gṛhṇanti purā pratijñāṃ gṛhṇanti cet te kaṭhinapratijñām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aṅgikṛtāṃ tāṃ paripālayanti pāṣāṇarekhāmiva te tadānīm // 93 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāpnoti vittaṃ hyadhamo ti kiñcid garvī pareṣāmavamānanāyām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃjāyate labdhadhanaḥ sumartyaḥ supakvadhānyena samaṃ vinamraḥ // 94 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāsti prajñāsamaṃ cakṣurnāsti mohasamaṃ tamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāsti rogasamaḥ śatrurnāsti mṛtyusamaṃ bhayam // 95 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ata eva kaṭhorātimṛtyuḥ sambhāvyate dhruvam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmāccittamapāvṛtya saddharme 'pekṣyate spṛhā // 96 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇā guṇajñeṣu guṇā bhavanti te nirguṇaṃ prāpya bhavanti doṣāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "susvādu toyāḥ prabhavanti nadyaḥ samudramāsādya bhavantyapeyāḥ // 97 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāryamālocitāpāyaṃ matimadbhirviceṣṭitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāpattirbhavitā tatra jātā parihṛtāpi sā // 98 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "alpā dṛḍhā ye mṛdubhāṣiṇaśca tebhyo 'vadhānaṃ karaṇīyameva /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niryāti sūryaḥ saghanāddhi meghāt syāt tatprakāśastu tadātitīkṣṇaḥ // 99 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śāntipriyāḥ syuḥ khalu yauvane 'pi vaiduṣya evaṃ vinatā bhaveyuḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sahiṣṇavastejasi cātinamrāḥ sudurlabhā evamarindamāḥ syuḥ // 100 //"
        }
      ]
    },
    {
      "tag": "lg",
