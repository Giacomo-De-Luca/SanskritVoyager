  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Vāmanadatta: Svabodhodayamañjarī"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samyagbodhavicāreṇa bhāvanām asvabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "labdhabodhadayānandaṃ vande saṃsthānam ātmanaḥ // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rūpādipañcavargo 'yaṃ viśvam etāvad eva hi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gṛhyate pañcabhis tac ca cakṣurādibhir indriyaiḥ // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cakṣuḥ sarvāsv avasthāsu dehināṃ manasi sthitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tat pralīnaṃ bhaved yasya tasya sarvaṃ pralīyate // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyaiva vilayopāyaḥ pradiṣṭo gurubhiḥ purā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadāgamaparibhraṃśabhayāt spaṣṭīkṛto mayā // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jātyādikalpanārūpavyavahāro manaḥsthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vastuto na tu tāḥ santi niścityaitac chamaṃ vrajet // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śukraśonitasaṃśleṣakāle nāsti manaḥ kvacit /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na budbude na peṣyāṃ vā na śarīre kvacit sthitam // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śarīraṃ garbhavāsāntaḥ kaumāre yauvane tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣaṇakṣayi vināśāntaṃ tac ca naivopalabhyate // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pṛthag nāma pṛthag rūpaṃ lomādīnāṃ pṛthak sthitiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pṛthak sarvaṃ yathā dṛṣṭaṃ kva śarīraṃ tadā sthitam // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evam eva vicāryoktā jātis tathaiva bādhyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca sā vastuto yuktā kasyacid vāvabhāsate // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāma pitrā kṛtaṃ mithyā kriyā na niyatā yataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "guṇī yadi bhavet kaścid bhavanti bahavo guṇāḥ // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "itthaṃ mithyāvikalpotthavāsanābhir abhiplutam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cañcalaṃ manaso rūpaṃ niścityaitan nirodhayet // 11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrvair nirodho kathito vairāgyābhyāsaypogataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ayatnena nirodho 'yam asmābhir upadiśyate // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "grāhyaṃ yac ca bhavet kiñcit tat tal līnaṃ tadā bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyasyāgrahaṇāc cittaṃ svātmany eva praśāmyati // 13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā ghanasvane sāndre krameṇa vilayaṃ gate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadāśrayavaśāc cittaṃ tasmin kṣīṇe praśāmyati // 14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yad yan manoharaṃ kiṃcic chrutigocaram āgatam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ekāgraṃ bhāvayet tāvad yāval līnaṃ nirodhakṛt // 15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rūpādīnāṃ tathaivetthaṃ bhāvayed ramaṇīyatām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vilīnāni smaret paścād ātamabhāvopabṛṃhitaḥ // 16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ grāhyasamāveśān nirodhaḥ kathito mayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "grahaṇād eva pūrvo 'yam idānīṃ sampradṛśyate // 17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "grahaṇānīndriyāṇīha samānīti prabodhayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samatvaṃ rāgahāneḥ syād dveṣasyopakṣayāt tathā // 18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvarāgāt sahāniḥ syāt sarvadveṣāt tathaiva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "baddhavat sarvarāgī syāt sarvadveṣṭā ca bhairavaḥ // 19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "agrāhyam indriyaṃ śūnyaṃ svātmany eva pralīyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pralīnendriyavṛttes tu kaivalyābhyudayodayaḥ // 20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāc cittaṃ samādāya śūnye saṅkalpavarjite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nistabdhendriyavṛttes tu nirodhaḥ samprajāyate // 21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jṛmbhamānasya satataṃ kṣudhāviṣṭasya yoginaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyāyato vā kim apy antaḥ pratyante kevalaṃ bhavet // 22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "apralīnamanovṛtter nidrām āśrayataḥ śanaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viṣayāgrahaṇāt sarvanirodhaḥ samprajāyate // 23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhāvataḥ padavikṣepaprayatnānavadhāraṇāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niḥsaṃkalpamanovṛtteḥ paramātmā prakāśate // 24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āsane 'py upaviṣṭasya kva me cittam avasthitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicāryaivaṃ prayatnena nirādhāre praśāmyati // 25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vayunā spandanādīni śarīrasya karomy aham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca citte sthito vāyur na vāyau cittam āsthitam // 26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ vimṛśato bhāvān na kvacit saṃsthitaṃ manaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mithaiva vṛttayas tasya sarvathā kevalaṃ sthitam // 27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatra yatra bhaved vāñchā bhojanādiṣu vastuṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrayet tām yathāśakti bhavet pūrṇo nirāśrayaḥ // 28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vāñchitaṃ gaditaṃ kiñcid akasmād yadi vismṛtam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "punas tasyānusandhānāt kṣaṇāt kaivalyam āpnuyāt // 29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sthānuḥ syāt puruṣo veti dūrād dṛśye vikalpite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "suniścitamateḥ kṣipraṃ nirodhaḥ samprajāyate // 30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dṛśyaiḥ padārthair draṣṭāraṃ paśyed buddhyā yato dṛśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ dṛṣṭvā mokṣam āpnoti yo na tadvat sa badhyate // 31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ālambya saṃvidaṃ yatnāt saṃvedyaṃ na svabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāt saṃviditaṃ sarvam iti saṃvinmayo bhavet // 32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "punar viśed apānena hṛdayaṃ pravikāsayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathaiva kṣīṇavṛttiḥ syād apāne vilayaṃ gate // 33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "suṣumṇāpatham āśritya prāsādadhvanibodhatah /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "binduṣaṭkaparityāgāc chāntabodhaḥ kṣaṇād bhavet // 34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vāmadakṣiṇasañcārabindudvayanigharṣaṇāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvādaśānte mahāśāntiḥ siddhair uktā mukhāgame // 35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ūrdhvam ākramato vāyor udgatānte śamo bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "puryaṣṭakavibhede 'pi tathaiva manaso layaḥ // 36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vivāryāsyaṃ kṣaṇam sthitvā niḥsandigdham anākulam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "stambhitaprāṇavṛttes tu nirodhaḥ samprajāyate // 37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nābhimedhrāntare cittaṃ suratānte vinikṣipet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "līyamāne ratānande nistaraṅgaḥ kṣaṇaṃ bhavet // 38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dūrāgatasuhṛdbandhupariṣvaṅganiṣevitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ānandanirbharaṃ cittaṃ nivṛttiṃ labhate kṣaṇāt // 39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dūrād uccarite śabde śabdārthānavadhāraṇāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sāvadhānasya tajjñānaṃ kṣīṇarodhaḥ prajāyate // 40 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "[...]",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pādābhyaṅgapariṣvaṅgāc cittarodhaḥ kṣaṇaṃ bhavet // 41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rucyānāṃ ṣāḍavādīnāṃ svalolāgre sthitiṃ kuru /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣiyamāṇe rasānande kaivalyam upajāyate // 42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mālatyādiṣu gandhāṃś ca tathaiva paribhāvayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadāśrayavaśāc cittaṃ teṣu līneṣu līyate // 43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "itthaṃ pratikṣaṇaṃ yasya cittam ātmani līyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa labdhabodhasadbhāvo jīvanmukto 'bhidhīyate // 44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mīmāṃsāvanasiṃhasya harṣadattasya sūnunā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtā vāmanadattena svabodhodayamañjarī // 45 //"
        }
      ]
    }
  ]
}