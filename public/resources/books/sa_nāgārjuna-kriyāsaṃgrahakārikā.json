  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Kriyāsaṃgrahakārikā"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "parīkṣā guruśiṣyāṇāṃ guroradhyeṣaṇā tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mantrasevāṃ guruḥ kuryāt tato bhūmeḥ parīkṣaṇam // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devatāyogayuktaḥ san mahīpūjāṃ vidhāya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "devatotthāpanaṃ kṛtvā śodhayenmedinīṃ tataḥ // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yavānāṃ ropaṇaṃ kṛtvā jāṅgulī cāpi pūjayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sūtraṃ saṃpātya yatnena vāstunāgaṃ parīkṣayet // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iṣṭakālakṣaṇaṃ samyag jñātvādigrahaṇaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samyagāyavyayau jñātvā prāsādasya ca lakṣaṇam // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devadikpālavasudhāḥ sampūjya ca yathāvidhi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ītikāropaṇaṃ kṛtvā homaṃ kuryāt pramohanam // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vanayātrā tato dvāraṃ samyagutthāpayetsudhīḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃsthāpya ca śirodāru juhuyādamṛtānalam // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vajrācāryapraveśo 'smin samādhitrayabhāvanā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parikramārthasūtrāṇāṃ pātanaṃ rajasāmapi // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "agnikriyāvidhānaṃ ca piṇḍikāsthāpanaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "savyakṣaṇena niṣpādya pratimāṃ sthāpayettataḥ // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "citrakarma valiḥ piṇḍī gaṇḍikālakṣaṇaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "eteṣāṃ ca pratiṣṭhānaṃ pravrajyāgrahaṇaṃ tathā // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lakṣaṇaṃ dharmadhātūnāṃ dhvajānāmavaropaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jīrṇoddhāropasaṃhārau pūjayed gaṇamaṇḍalam // 10 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "/ kriyāsaṃgrahakārikā samāptā //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "/ kṛtiriyaṃ nāgārjunapādānām //"
    }
  ]
}