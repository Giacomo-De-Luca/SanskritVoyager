  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Mahāyānapathasādhanasaṅgrahaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namaḥ sarvabuddhabodhisattvebhyaḥ"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvātītādyabuddhānāṃ janakatvāt pitarau tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhaktyā sādhanadharmāśca vākcittābhyāṃ mudā nataḥ // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "acintyāṃ mahatīṃ bodhiṃ jighṛkṣuścedanuttarām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodheḥ sādhananiṣṭhatvāt sādhanaṃ sārato bhajet // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sa ca triśaraṇaṃ gattvā nivārya sakalāśubhān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "adhiśīlaṃ bhajecchuddhaṃ bodhicittasya vāhanam // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āśritya kaśayā bhūyas tāḍayan maraṇasmṛteḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavamārga mahābhītiṃ krāmetainaṃ ca satvaram // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhayabuddhabhūprāptaḥ praṇidhānapade sthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvasaṃvaramādhāya ṣaṭ ca pāramitādikāḥ // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvacaryāścarettadvat tatprajñopāyasaṅgraham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śikṣetāsthitanirvāṇaṃ tatsāro dvividhastathā // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rāgadraryarahito nityaṃ pāvakārthī tathāraṇim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvayet satataṃ bhaktyā buddhaḥ śīghraṃ tato bhavet // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "parārtha maṇivannityam anābhogaṃ karoti saḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mahāyānasya śikṣeyuḥ dhanyāḥ sādhanasaṅgraham // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ sudhālavaiḥ raktaṃ buddhayśuddhau ca duḥspṛśam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etatsaṅgrahapuṇyena jagad yātu mahāpatham // 9 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "buddhabhūmimahaṃ cāptvā bhaveyaṃ lokanāyakaḥ // 10 a ba //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "'atisaṃkṣiptamahāyānapathasādhanaṃ' mahācāryadīpaṅkaraśrījñānaviracitaṃ samāptam //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "bhāratasya tenaiva upādhyāya-paṇḍitena lokacakṣuṣā bhikṣuṇā kalyāṇamatinā (dge vahi blo gros) ca anūdya nirṇītam //"
    }
  ]
}