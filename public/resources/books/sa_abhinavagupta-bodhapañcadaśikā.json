  "body": [
    {
      "tag": "div",
      "attributes": {},
      "children": [
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "anastamitabhārūpas tejasāṃ tamasām api |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ya eko 'ntar yadantaś ca tejāṃsi ca tamāṃsi ca ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sa eva sarvabhūtānāṃ svabhāvaḥ parameśvaraḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhāvajātaṃ hi tasyaiva śaktir īśvaratāmayī ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_3"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "śaktiś ca śaktimadrūpād vyatirekam na vāñchati |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tādātmyam anayor nityaṃ vahnidāhikayor iva ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_4"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sa eva bhairavo devo jagadbharaṇalakṣaṇaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "svātmādṛṣe samagraṃ hi yacchaktyā pratibimbitam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_5"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tasyaivaiṣā parā devī svarūpāmarśanotsukā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "pūrṇatvaṃ sarvabhaveṣu yasyā nālpaṃ na cādhikam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_6"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "eṣa devo 'nayā devyā nityaṃ krīḍārasotsukaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vicitrān sṛṣṭisaṃhārān vidhatte yugapad vibhuḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_7"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "atidurghaṭakāritvam asyānuttaram eva yat |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "etad eva svatantratvam aisvaryaṃ bodharūpatā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_8"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "paricchinnaprakāśatvaṃ jaḍasya kila lakṣaṇam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "jaḍād vilakṣaṇo bodho yato na parimīyate ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_9"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "evam asya svatantrasya nijaśaktyupabhedinaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "svātmagāḥ sṛṣṭisaṃhārāḥ svarūpatvena saṃsthitāḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_10"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "teṣu vaicitryam atyantam ūrdhvādhas tiryag eva yat |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhuvanāni tadaṃśāś ca sukhaduḥkhamatiś ca yā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_11"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yad etasyāparijñānaṃ tatsvātantryaṃ hi varṇitam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sa eva khalu saṃsāro mūḍānāṃ yo vibhīṣakaḥ ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_12"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tatprasādarasād eva gurvāgamata eva vā |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "śāstrād vā parameśasya yasmāt kasmād upāgatam ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_13"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yat tattvasya parijñānaṃ sa mokṣaḥ parameśataḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tat pūrṇatvaṃ prabuddhānāṃ jīvanmuktiś ca sā smṛtā ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_14"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "etau bandhavimokṣau ca parameśasvarūpataḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "na bhidyete na bhedo hi tattvataḥ parameśvare ||"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "{http://www.w3.org/XML/1998/namespace}id": "AgBpd_15"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "ittham icchākalājñānaśaktiśūlāmbujāśritaḥ |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhairavaḥ sarvabhāvānāṃ svabhāvaḥ pariśīlyate ||"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sukumāramatīn śiṣyān prabodhayitum añjasā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ime 'bhinavaguptena ślokāḥ pañcadaśoditāḥ ||"
        }
      ]
    },
