  "body": [
    {
      "tag": "head",
      "attributes": {},
      "text": "Rāhulabhadra: Prajñāpāramitāstotra"
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_1"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "nirvikalpe namas tubhyaṃ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "prajñāpāramite 'mite"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "yā tvaṃ sarvānavadyāṅgi"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "niravadyair nirīkṣyase"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_2"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "ākāśam iva nirlepāṃ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "niṣprapañcāṃ nirakṣarām"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "yas tvāṃ paśyati bhāvena"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "sa paśyati tathāgatam"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_3"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "tava cārye guṇāḍhyāyā"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "buddhasya ca jagadguroḥ"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "na paśyanty antaraṃ santaś"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "candracandrikayor iva"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_4"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "kṛpātmakāḥ prapadya tvāṃ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "buddhadharmapuraḥsarīm"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "sukhenāyānti māhātmyam"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "atulaṃ bhaktivatsale"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_5"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "sakṛd apy āśaye śuddhe"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "yas tvāṃ vidhivad īkṣate"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "tenāpi niyataṃ siddhiḥ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "prāpyate 'moghadarśane"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_6"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "sarveṣām api vīrāṇāṃ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "parārthaniratātmanām"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "poṣikā janayitrī ca"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "mātā tvam asi vatsalā"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_7"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "yad buddhā lokaguravaḥ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "putrās tava kṛpālavaḥ"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "tena tvam api kalyāṇi"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "sarvasattvapitāmahī"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_8"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "sarvapāramitābhis tvaṃ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "nirmalābhir anindite"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "candralekheva tārābhir"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "anuyātāsi sarvadā"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_9"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "vineyaṃ janam āsādya"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "tatra tatra tathāgataiḥ"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "bahurūpā tvam evaikā"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "nānānāmabhir īḍyase"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_10"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "prabhāṃ prāpyeva dīptāṃśor"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "avaśyāyodabindavaḥ"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "tvāṃ prāpya pralayaṃ yānti"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "doṣā vādāś ca vādinām"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_11"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "tvam eva trāsajananī"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "bālānāṃ bhīmadarśanā"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "āśvāsajananī cāsi"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "viduṣāṃ saumyadarśanā"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_12"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "yasya tvayy apy abhiṣvaṅgas"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "tvannāthasya na vidyate"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "tasyāmba katham anyatra"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "rāgadveṣau bhaviṣyataḥ"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_13"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "nāgacchasi kutaś cit tvaṃ"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "na ca kva cana gacchasi"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "sthāneṣv api ca sarveṣu"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "vidvadbhir nopalabhyase"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_14"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "ye tvām evaṃ na paśyanti"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "prapadyante ca bhāvataḥ"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "prapadya ca vimucyante"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "tad idaṃ mahad adbhutam"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_15"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "tvām eva badhyate paśyann"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "apaśyann api badhyate"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "tvām eva mucyate paśyann"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "apaśyann api mucyate"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_16"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "aho vismayanīyāsi"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "gambhīrāsi yaśasvini"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "sudurbodhāsi māyeva"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "dṛśyase na ca dṛśyase"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_17"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "buddhaiḥ pratyekabuddhaiś ca"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "b"
              },
              "text": "śrāvakaiś ca niṣevitā"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "c"
              },
              "text": "mārgas tvam ekā mokṣasya"
            },
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "d"
              },
              "text": "nāsty anya iti niścayaḥ"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {
        "{http://www.w3.org/XML/1998/namespace}id": "RahPps_18"
      },
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "seg",
              "attributes": {
                "type": "pāda",
                "n": "a"
              },
              "text": "vyavahāraṃ puraskṛtya"
            },
            {
              "tag": "seg",
              "attributes": {
