  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Atha Triṃśikāvijñaptikārikāḥ (Tvk)\nkṛtiriyamācāryavasubandhoḥ /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmadharmopacāro hi vividho yaḥ pravartate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñānapariṇāme 'sau pariṇāmaḥ sa ca tridhā // Tvk_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vipāko mananākhyaśca vijñaptirviṣayasya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatrālayākhyaṃ vijñānaṃ vipākaḥ sarvabījakam // Tvk_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "asaṃviditakopādisthānavijñaptikaṃ ca tat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sadā sparśamanaskāravitsañjñācetanānvitam // Tvk_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upekṣā vedanā tatrānivṛtāvyākṛtaṃ ca tat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathā sparśādayastacca vartate srotasaughavat // Tvk_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya vyāvṛtirarhatve tadāśritya pravartate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadālambaṃ manonāma vijñānaṃ mananātmakam // Tvk_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kleśaiścaturbhiḥ sahitaṃ nivṛtāvyākṛtaiḥ sadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmaduṣṭyātmamohātmamānātmasnehasañjñitaiḥ // Tvk_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatrajastanmayairanyaiḥ sparśādyaiścārhato na tat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na nirodhasamāpattau mārge lokottare na ca // Tvk_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvitīyaḥ pariṇāmo 'yaṃ tṛtīyaḥ ṣaḍvidhasya yā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viṣayasyopalabdhiḥ sā kuśalākuśalādvayā // Tvk_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvatragairviniyataiḥ kuśalaiścaitasairasau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samprayuktā tathā kleśairūpakleśaistrivedanā // Tvk_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādyāḥ sparśādayaśchandādhimokṣasmṛtayaḥ saha /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samādhidhībhyāṃ niyatāḥ śraddhātha hrirapatrapā // Tvk_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "alobhādi trayaṃ vīryaṃ praśrabdhiḥ sāpramādikā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ahiṃsā kuśalāḥ kleśā rāgapratighamūḍhayaḥ // Tvk_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mānadṛgvicikitsāśca krodhopanahane punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mrakṣaḥ pradāśa īrṣyārtha mātsaryaṃ saha māyayā // Tvk_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śāṭhyaṃ mado 'vihiṃsāhrīratrapā styānamuddhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āśraddhamatha kausīdyaṃ pramādo muṣitā smṛtiḥ // Tvk_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vikṣepo 'samprajanyaṃ ca kaukṛtyaṃ middhameva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vitarkaśca vicāraścetyupakleśā dvaye dvidhā // Tvk_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcānāṃ mūlavijñāne yathāpratyayamudbhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñānānāṃ saha na vā taraṅgāṇāṃ yathā jale // Tvk_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "manovijñānasambhūtiḥ sarvadāsañjñikādṛte /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samāpattidvayānmiddhānmūrchanādapyacittakāt // Tvk_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñānapariṇāmo 'yaṃ vikalpo yadvikalpyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tena tannāsti tenedaṃ sarvaṃ vijñaptimātrakam // Tvk_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvabījaṃ hi vijñānaṃ pariṇāmastathā tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yātyanyonyavaśād yena vikalpaḥ sa sa jāyate // Tvk_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "karmaṇo vāsanā grāhadvayavāsanayā saha /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣīṇe pūrvavipāke 'nyadvipākaṃ janayanti tat // Tvk_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yena yena vikalpena yadyad vastu vikalpyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parikalpita evāsau svabhāvo na sa vidyate // Tvk_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paratantrasvabhāvastu vikalpaḥ pratyayodbhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣpannastasya pūrveṇa sadā rahitatā tu yā // Tvk_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ata eva sa naivānyo nānanyaḥ paratantrataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anityatādivad vācyo nādṛṣṭe 'smin sa dṛśyate // Tvk_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "trividhasya svabhāvasya trividhāṃ niḥsvabhāvatām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sandhāya sarvadharmāṇāṃ deśitā niḥsvabhāvatā // Tvk_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prathamo lakṣaṇenaiva niḥsvabhāvo 'paraḥ punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na svayambhāva etasyetyaparā niḥsvabhāvatā // Tvk_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmāṇāṃ paramārthaśca sa yatastathatāpi saḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvakālaṃ tathābhāvāt saiva vijñaptimātratā // Tvk_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yāvadvijñaptimātratve vijñānaṃ nāvatiṣṭhati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "grāhadvayasyānuśayastāvanna vinivartate // Tvk_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñaptimātramevedamityapi hayupalambhataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthāpayannagrataḥ kiñcit tanmātre nāvatiṣṭhate // Tvk_27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadālambanaṃ vijñānaṃ naivopalabhate tadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthitaṃ vijñānamātratve grāhyābhāve tadagrahāt // Tvk_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "acitto 'nupalambho 'sau jñānaṃ lokottaraṃ ca tat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āśrayasya parāvṛttirdvidhā dauṣṭhulyahānitaḥ // Tvk_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sa evānasravo dhāturacintyaḥ kuśalo dhruvaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sukho vimuktikāyo 'sau dharmākhyo 'yaṃ mahāmuneḥ // Tvk_30 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "triṃśikāvijñaptikārikāḥ samāptāḥ /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "kṛtiriyamācāryavasubandhoḥ /"
    }
  ]
}