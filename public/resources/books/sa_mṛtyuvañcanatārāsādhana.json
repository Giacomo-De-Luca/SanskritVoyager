  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Mṛtyuvañcanatārāsādhana"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// namaḥ sitatārāyai //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrvavac chūnyatāparyantaṃ vibhāvya"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sitāravindamadhyasthāṃ tāṃbhūtāṃ candraviṣṭarām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ābaddhavajraparyaṅkāṃ varadotpaladhāriṇīm // Mvts_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śaraccandrakarākārāṃ pṛṣṭhacandrasamāśritām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvālaṅkārasaṃpūrṇāṃ ṣoḍaśābdavapuḥkramām // Mvts_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyātvāryatārāṃ hṛdaye tasyāś cakraṃ sitadyuti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aṣṭakoṣṭhakam aṣṭābhir akṣaraiḥ paripūritam // Mvts_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "oṃhāvyañjanamadhyasthasādhyanāmādyanābhikam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyāyād ekāgracittaḥ san ṣaṇ māsān dṛḍhaniścayaḥ // Mvts_4 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "japed akhinnacittaḥ san mantram enaṃ daśākṣaram //"
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "tatrāiṣa mantraḥ oṃ tāre tuttāre ture svāhā // Mvts_5 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mṛtyudoṣair na liptaḥ syāt tārāhṛccakrabhāvakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lābhī ca sarvasiddhīnāṃ ṣaṇmāsāvadhi tatparaḥ // Mvts_6 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// mṛtyuvañcanatārāsādhanam //"
    }
  ]
}