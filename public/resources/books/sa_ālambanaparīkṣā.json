  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Ālambanaparīkṣā (Āp)"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "ācāryadiṅnāgakṛtā"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namaḥ sarvabuddhabodhisattvebhyaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "yadyapīndriyavijñaptergrāhyāṃśaḥ(=aṇavaḥ) kāraṇaṃ bhavet|",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "atadābhatayā tasyā nākṣavadviṣayaḥ sa tu(aṇavaḥ) // Āp_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadābhāsā na tasmāt sā dravyābhāvāt dvicandravat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ bāhyadvayañcaiva na yuktaṃ matigocaraḥ // Āp_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhanaṃ sañcitākāramicchanti kila kecana /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aṇvākāro na vijñapterarthaḥ kaṭhinatādivat // Āp_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhaveddhaṭaśarāvādestathā sati samā matiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākārabhedādbhedaścet, nāsti tu dravyasatyaṇau // Āp_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pramāṇabhedābhāvāt saḥ, adravye 'sti tataḥ sa hi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aṇūnāṃ parihāre hi tadābhajñānaviplavāt // Āp_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadantarjñeyarūpaṃ tu vahirvadavabhāsate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "so 'rtho vijñānarūpatvāttatpratyayatayāpi ca // Āp_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekāṃśaḥ pratyayo 'vītāt śaktyarpaṇātkrameṇa[vā] /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sahakārivaśādyaddhi śaktirūpaṃ [tat] indriyam // Āp_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sā cāviruddhā vijñapterevaṃ viṣayarūpakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pravartate 'nādikālaṃ śaktiścānyonyahetuke // Āp_8 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "ityācāryadiṅnāgakṛtā ālambanaparīkṣāprakaraṇakārikā samāptā"
    }
  ]
}