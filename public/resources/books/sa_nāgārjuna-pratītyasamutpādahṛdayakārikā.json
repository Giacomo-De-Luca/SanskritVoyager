  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Pratītyasamutpādahṛdayakārikā (Pshk)"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "nāgārjunakṛtā"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvādaśa ye 'ṅgaviśeṣā muninoddiṣṭāḥ pratītyasambhūtāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "te kleśakarmaduḥkheṣu saṅgṛhītāstriṣu yathāvat // Pshk_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādyāṣṭamanavamāḥ syuḥ kleśāḥ karma dvitīyadaśamau ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śeṣāḥ sapta ca duḥkhaṃ trisaṅgrahā dvādaśa tu dharmāḥ // Pshk_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tribhyo bhavati dvandvaṃ dvandvātprabhavanti sapta saptabhyaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "traya udbhavanti bhūyastadeva[tu] bhramati bhavacakram // Pshk_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hetuphalañca[hi]sarvaṃ jagadanyo nāsti kaścidiha sattvaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyebhya eva śūnyā dharmāḥ prabhavanti dharmebhyaḥ // Pshk_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svādhyāyadīpamudrādarpaṇaghoṣa 'rkakāntabījāmlaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "skandhapratisandhirasaṅkramaśca vidvadbhiravadhāryau // Pshk_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ya ucchedaṃ prakalpayatyatisūkṣme 'pi vastuni /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratītyasambhavasyārthamavijñaḥ sa na paśyati // Pshk_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāpaneyamataḥ kiñcit prakṣepyaṃ nāpi kiñcana /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "draṣṭavyaṃ bhūtato bhūtaṃ bhūtadarśī vimucyate // Pshk_7 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "pratītyasamutpādahṛdayakārikā ācārya nāgārjunakṛtā samāptā /"
    }
  ]
}