      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "phenapiṇḍopamaṃ rūpaṃ vedanā budbudopamā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "marīcisadṛśī saṃjñā saṃskārāḥ kadalīnibhāḥ || NagBhc_12"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "māyopamaṃ ca vijñānaṃ ... NagBhc_13"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "parivrāṭkāmukaśunām ekasyāṃ pramadātanau |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kuṇapaḥ kāminī bhakṣya iti tisro vikalpanāḥ || NagBhc_20"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmagrahanivṛttyarthaṃ skandhadhātvādideśenā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sāpi dhvastā mahābhāgaiś cittamātravyavasthayā || NagBhc_25"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittamātram idaṃ sarvam iti yā deśanā muneḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "uttrāsaparihārārthaṃ bālānāṃ sā na 'tattvataḥ || NagBhc_27"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na bodhyabodhakākāraṃ cittaṃ dṛṣṭaṃ tathāgataiḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yatra boddhā ca bodhyaṃ ca tatra bodhir na vidyate || NagBhc_45"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "alakṣaṇam anutpādam asaṃsthitam avāṅmayam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākāśaṃ bodhicittaṃ ca bodhir advayalakṣaṇā || NagBhc_46"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "śūnyatāsiṃhanādena trasitāḥ sarvavādinaḥ | NagBhc_52"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guḍe madhuratā cāgner uṣṇatvaṃ prakṛtir yathā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatā sarvadharmāṇāṃ tathā prakṛtir iṣyate || NagBhc_57"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "..."
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "deśanā lokanāthānāṃ sattvāśayavaśānugāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhidyante bahudhā loka upāyair bahubhiḥ punaḥ || NagBhc_98"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "gambhīrottānabhedena kva cid vobhayalakṣaṇā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "binnāpi deśanābhinnā śūnyatādvayalakṣanā || NagBhc_99"
        }
      ]
    },
