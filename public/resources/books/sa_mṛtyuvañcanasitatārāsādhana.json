  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Mṛtyuvañcanasitatārāsādhana"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mṛtyudoṣair aliptaḥ syāt tārāhṛccakrabhāvakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lābhī ca sarvasiddhīnāṃ ṣaṇmāsāvadhi tatparaḥ // Mvsts_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vāgīśvarakṛtādeśān mṛtyuvañcanasaṃgrahāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "uddhṛtā sitatārāyā bhāvanā bhayanāśinī // Mvsts_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "turyavargādyasākāratviṣā visphuritāmbare /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sitābjendvāsanāṃ dṛṣṭvā puras triśaraṇaṃ paṭhet // Mvsts_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "muhūrtaṃ śūnyatāṃ paśyet prākṛtāropahānaye /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ praṇidhisāmarthyād bodhicittākṣaraṃ bhavet // Mvsts_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sitāravindamadhyasthacandrabimbāsanopari /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ābaddhavajraparyaṅkāṃ varadotpaladhāriṇīm // Mvsts_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śaraccandrakarākārāṃ pṛṣṭhacandrasamāśritām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvālaṅkārasaṃpūrṇāṃ ṣoḍaśābdavapuṣmatīm // Mvsts_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvasaṃbuddhatatputramātaraṃ kāmarūpadhām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyātvāryatārāṃ hṛdaye tasyāś cakraṃ sitadyuti // Mvsts_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aṣṭakoṣṭhakam aṣṭābhir akṣaraiḥ paripūritam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "oṃhāvyañjanamadhyasthasādhyanāmādyanābhikam // Mvsts_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyāyād ekāgracittaḥ san ṣaṇ māsān dṛḍhaniścayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "japed akhinnacittaḥ san mantram enaṃ daśākṣaram // Mvsts_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "oṅkāram ādito dattvā paścāt tāre prayojayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tuttāre syāt ture paścāt svāhāntaḥ sārvakarmikaḥ // Mvsts_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmendraviṣṇucandrārkarudradikpālamanmathaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "apy akhaṇḍitaromāgro mṛtyuṃ jayati muktavat // Mvsts_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "valīpalitadaurbhāgyavyādhidāridryasaṃkṣayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "siṃhādyaṣṭamahābhītiduḥkhasaṃdohanāśanam // Mvsts_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ayācitāmbarapānaharmyaratnādisaṃgamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "khaḍgāñjanapādalepabhadrakumbhādisiddhayaḥ // Mvsts_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kavitā vaktṛtā medhā prajñā caikāntanirmalā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyā ca vāñchitā siddhiś cakrād asmāt prajāyate // Mvsts_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhanaṃ sitatārāyā mṛtyuvyādhivināśanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "uddhṛtya yac chubhaṃ tena jagat tārā svayaṃ bhavet // Mvsts_15 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// mṛtyuvañcanasitatārāsādhanam //"
    }
  ]
}