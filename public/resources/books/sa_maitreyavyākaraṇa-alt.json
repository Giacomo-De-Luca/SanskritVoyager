  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Ārya Maitreyavyākaraṇaṃ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namaḥ āryamaitreyāya /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śāriputro mahāprajñaḥ dharmasenāpatibibhuḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lokānāmanukampāya śāstāraṃ paryapṛcchata // Mvyā_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sūtrāntare purā 'khyātaṃ yaṃ lokanāyakasya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhasyānāgatasya hi maitreyanāma śāsanaṃ // Mvyā_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyākhyāhi tadvalaṃ cāpi ṛddhiṃ sarvārthavardhanaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrotumicchāma eva ca nāyakasya narottama // Mvyā_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tacchrutvā bhagavānāha śṛṇu naravarasya tvaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya maitreyabuddhasya vibhavaṃ vyākṛtaṃ mayā // Mvyā_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śukṣyanti ca tadārnavāḥ samantāt bahuyojanāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratipādyā bhaviṣyanti mārgāśca cakravartinaḥ // Mvyā_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jambudvīpaṃ samantataḥ āyatanaṃ tadāhi ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āvāsaṃ sarvabhūtānāṃ daśasahasrayojanam // Mvyā_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "narāstaddeśikāśca hi bhaviṣyanti śubhaṅkarāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ahiṃsakāśca nirdaṇḍyāḥ susamṛddhāśca subhagāḥ // Mvyā_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣkaṇṭakaśca bhūsthalaṃ samatalaṃ hi śyāmalaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "unnamāvanamaśritaṃ mṛdutūla 'picopamaṃ // Mvyā_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "gandhaśāli janiṣyate kṛṣṭimṛte ca madhuraṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānāvarṇābhilaṅkṛtā bhaviṣyanti cailadrumāḥ // Mvyā_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "drumāśca krośavistṛtā patrapuṣpaphalānatāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sahasrāśītimātraśca āyustadā bhaviṣyati // Mvyā_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "varṇavantaḥ bhaviṣyanti balavanto mahākāyāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvāḥ dakṣāśca niṣkleśā nirdoṣā dirghajīvinaḥ // Mvyā_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rogatrayaṃ bhaviṣyati kāmojarā 'gnimāndyañca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcaśatatame varṣe pariṇītā ca dārikā // Mvyā_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā ketumatī nāma purī tatra bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvānāñca nivāsanaṃ prāṇināṃ hitakāriṇāṃ // Mvyā_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dīrghā dvādaśayaujana sapta vistāraśo hyasau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nagaraṃ puṇyavacca tat viśuddhañca manoramaṃ // Mvyā_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saptaratnamayāḥ prāṃśuprākārāḥ krośavistṛtāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānāratnavibhūṣitagopuratoraṇānyapi // Mvyā_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iṣṭakairnimitāśca te ratnamayairbhaviṣyanti /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "padmotpalasamācchanāḥ parikhā haṃsaśobhitā // Mvyā_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mālairhi pariveṣṭitaṃ saptatālaismamantataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "catūratnamayāstālāḥ kiṅkinījālaśobhitāḥ // Mvyā_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tattālebhyonilājjātaḥ śabdaścaiva manoramaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sumadhuro yathā tūryaṃ tacca pañcāṅgasaṃyutaṃ // Mvyā_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nagare 'smin narāśca ye viśrāmasukhakāminaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prahṛṣṭābhirabhiṣyante tālaśabdaiśca te tadā // Mvyā_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nagaramapi tatkṛtamutpalakumudākīrṇaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taḍāgopavanodyānaṃ trayametadbhaviṣyati // Mvyā_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śaṅkhonāma nṛpastatra mahātejā bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caturdvīrpādhipeśvaraścakravarttī mahābalaḥ // Mvyā_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saptaratnasamanvitaścaturaṅgabalādhipaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sahasraṃ hi janiṣyante putrāstadāsya bhūpateḥ // Mvyā_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pṛthivīṃ sāgarāntāñca sa paripālayiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yathādharmadaṇḍeṇa narādhipo hi tadyathā // Mvyā_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caturmahānidhistadā śaṅkhākhyasya ca bhūpateḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ratnānāṃ śatakoṭīnāṃ rājñastadā hi lokyate // Mvyā_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "piṅgalaśca kaliṅgeṣu mithilāyām ca pāṇḍukaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "elapatraśca gāndhāre śaṃkho vārāṇasīpure // Mvyā_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caturbhirebhinidhibhissa rājā susamanvitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhaviṣyati mahāvīraḥ śatapuṇyabaloditaḥ // Mvyā_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brāhmaṇastasya rājñāśca subrahmaṇaḥ purohitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bahuśrutaścaturvedastasyopādhyāyo bhaviṣyati // Mvyā_27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "adhyāpako mantradharaḥ smṛtimān vedapāragaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaiṭabhe sanighaṇṭe ca padavyākaraṇe tathā // Mvyā_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā brahmāvatī nāma tasya bhāryā bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "darśanīyā prāsādikā abhirūpā yaśasvinī // Mvyā_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tuṣitebhyaścayavitvā tu maitreyo hyagrapugdalaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyāḥ kukṣau sa niyataṃ pratisandhiṃ grahīṣyati // Mvyā_30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "daśamāsāṃśca nikhilāṃ dhārayitvā mahādyūtiṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "supuṣpitesminnudyāne maitreyajananī tataḥ // Mvyā_31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na niṣaṇṇā nipannā vā sthitā sā dharmacāriṇī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "drumasya śākhāmālamvya maitreyaṃ janayiṣyati // Mvyā_32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣkramiṣyati pārśvena dakṣiṇena narottamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "abhrakūṭādyathā sūryo nirgataśca prabhāvyate // Mvyā_32* //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "alipto garbhapaṅkena kuśeśayamivāmvunā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "traidhātukamidaṃ sarvaṃ prabhayā pūrayiṣyati // Mvyā_33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prīto 'tha taṃ sahasrākṣo devarājā śacīpatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jāyamānaṃ grahītā ca maitreyaṃ dvipadottamam // Mvyā_34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "padāni jātamātraśca saptāsau prakamiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pade pade nidhānañca padmaṃ padmaṃ bhaviṣyati // Mvyā_35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "diśaścatasraścodvīkṣya vācaṃ pravyāhariṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "iyaṃ me paścimā jāti nāsti bhūyaḥ punarbhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na punarabhā gamiṣyāmi nirvāsyāmi nirāsravaḥ // Mvyā_36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃsārārṇavamagnānāṃ sattvānāṃ duḥkhabhāgināṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tṛṣṇābandhanabaddhānāṃ kariṣyāmi vimocanam // Mvyā_37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śvetaṃ cāsya surāśchatraṃ dhārayiṣyanti mūrdhani /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śītoṣṇavāridhārābhyāṃ nāgendrau snāpayiṣyataḥ // Mvyā_38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratigṛhya ca taṃ dhātrī dvātriṃśadvaralakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śriyā jvalantaṃ maitreyaṃ mātre samupaneṣyati // Mvyā_39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "manoramāṃ ca śivikāṃ nānāratnavibhūṣitāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ārūḍhāṃ putrasahitāṃ vahiṣyanti ca devatā // Mvyā_40 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatastūrya sahasreṣu vādyamāneṣu tatpuraṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "praviṣṭamātre maitreye puṣpavarṣaṃ patiṣyati // Mvyā_41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dṛṣṭaivaṃ putraṃ subrahmā dvātriṃśadvaralakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratyavīkṣātha mantreṣu tadā prīto bhaviṣyati // Mvyā_42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "gatidvayaṃ kumārasya yathā mantreṣu dṛśyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "narādhipaścakravarttī buddho vā dvipadottamaḥ // Mvyā_43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sa ca yauvanasaṃprāpto maitreyaḥ puruṣottamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cintayiṣyati dharmātmā duḥkhitā khalviyaṃ prajāḥ // Mvyā_44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmakharo mahāghoṣo hemavarṇo mahādyutiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśālavakṣaḥ pīnāṃsaḥ padmapatranibhekṣaṇaḥ // Mvyā_45 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hastaḥ pañcāśaducchrāya tasya kāyo bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "visṛtaśca tato 'rddheṇa śubhavarṇasamucchrayaḥ // Mvyā_46 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aśītibhiścaturbhiśca sahasraiḥ saṃpuraskṛtaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mānavānāṃ sa maitreyo mantrānadhyāpayiṣyati // Mvyā_47 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "atha śaṃkho narapatiḥ yūpamucchrāpayiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tiryañca ṣoḍaśavyāmaṃ ūrddhva vyāmasahasrakam // Mvyā_48 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sa taṃ yūpaṃ narapatirnānāratnavibhūṣitaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pradāsyati dvijātibhyo yajñaṃ kṛtvā puraḥsaraṃ // Mvyā_49 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tañca ratnamayaṃ yūpaṃ dattamātraṃ manoramaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "brāhmaṇāṇāṃ sahasrāṇi vikiriṣyanti tatkṣaṇāt // Mvyā_50 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yūpasyatasya maitreyo dṛṣṭvā caitāmanityatāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtasraṃ vicintya saṃsāraṃ pravrajyāṃ rocayiṣyati // Mvyā_51 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatvahaṃ pravrajitveha spṛśeyamamṛtaṃ padaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vimocayeyaṃ janatāṃ vyādhimṛtyujarābhayāt // Mvyā_52 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aśītibhiḥ sahasraissa caturbhiśca puraskṛtaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣkramiṣyati maitreyaḥ pravrajyāmagrapugdalaḥ // Mvyā_53 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāgavṛkṣastadā tasya bodhivṛkṣo bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcāśadyojanānyasya śākhā ūrddhaṃ samucchritāḥ // Mvyā_54 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣadya tasya cādhastānmaitreyaḥ puruṣottamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anuttarāṃ śivāṃ bodhiṃ samavāpsyati nāyakaḥ // Mvyā_55 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yasyāmeva ca rātrau sa pravrajyāṃ niṣkramiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyāṃ eva ca rātrau hi parāṃ bodhimavāpsyati // Mvyā_56 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aṣṭāṅgopetayā vācā tataḥ sa puruṣottamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "deśayiṣyati saddharmaṃ sarvaduḥkhāpahaṃ śivam // Mvyā_57 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasannāṃ janatāṃ dṛṣṭvā satyāni kathayiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhaṃ duḥkhasamutpādaṃ duḥkhasya samatikramaṃ // Mvyā_58 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āryaṃ cāṣṭāṅgikaṃ mārgaṃ kṣemaṃ nirvāṇagāminaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ cāpi dharmaṃ saṃśrutya pratipatsyanti śāsane // Mvyā_59 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "udyāne puṣpasaṃcchanne sannipāto bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrṇaṃ ca yojanaśataṃ parṣattasya bhaviṣyati // Mvyā_60 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrutvā narapati rājā śaṅkho nāma mahāyaśāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "datvā dānamasaṃkhyeyaṃ pravrajyāṃ niṣkramiṣyati // Mvyā_61 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aśītibhiścaturbhiśca sahasraiḥ parivāritaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "narādhipo viniṣkramya pravrajyāmupayāsyati // Mvyā_62 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anenaiva pramāṇena mānavānāṃ puraskṛtaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "maitreyasya pitā tatra pravrajyāṃ niṣkramiṣyati // Mvyā_63 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tato gṛhapatistatra sudhano nāma viśrutaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pravrajiṣyati śuddhātmā maitreyasyānuśāsane // Mvyā_64 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "strīratnamatha śaṅkhasya viśākhā nāma viśrutā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aśītibhiścaturbhiśca sahasraiḥ saṃpuraṣkṛtā //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "nārīṇāmabhiniṣkramya pravrajyāṃ rocayiṣyati // Mvyā_65 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāṇinaḥ tatra samaye sahasrāṇi śatāni ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pravrajyāmupayāsyanti maitreyasyānuśāsane // Mvyā_66 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "supuṣpite 'sminnudyāne sannipāto bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samantato yojanaśataṃ parṣat tasya bhaviṣyati // Mvyā_67 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ kāruṇikaḥ śāstā maitreyaḥ puruṣottamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samitiṃ vyavalokyātha imamarthaṃ pravakṣayati // Mvyā_68 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvete śākyasiṃhena guṇiśreṣṭheṇa trāyinā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "arthato lokanāthena dṛṣṭvā saddharmadhātunā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ropitā mokṣamārgeṇa vikṣiptā mama śāsane // Mvyā_69 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "chatradhvajapatākābhirgandhamālyavilepanaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtvā stūpeṣu satkāraṃ āgatā hi mamāntikam // Mvyā_70 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃghe datvā ca dānāni cīvaraṃ pānabhojanaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vividhaṃ glānabhaiṣajyaṃ āgatā hi mamāntikam // Mvyā_71 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kuṃkumodakasekaṃ ca candanenānulepanaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "datvā śākyamuneḥ stūpeṣvāgatā hi mamāntikam // Mvyā_72 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śikṣāpadāni cādhāya śākyasiṃhasya śāsane /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paripālaya yathābhūtaṃ āgatā hi mamāntikam // Mvyā_73 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upoṣadhaṃ upoṣyeha āryamaṣṭāṅgikaṃ śubhaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caturdaśīṃ pañcadaśīṃ pakṣasyehāṣṭamīṃ tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prātihārikapakṣaṃ cāṣyaṣṭāṅgaṃ susamāhitaṃ // Mvyā_74 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlāni ca samādāya saṃprāptāni ca śāsanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhaṃ dharmeṃ ca saṃghaṃ ca sattvāste śāsanaṃ gatāḥ //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "kṛtvā ca kuśalaṃ karma macchāsanamupāgatāḥ // Mvyā_75 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tenaite preṣitāḥ sattvā pratiṣṭāśca mayāpyamī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gaṇiśreṣṭheṇa muninā parītā bhūrimedhasā // Mvyā_76 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasannāṃ janatāṃ dṛṣṭvā satyāni kathayiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrutvā ca te tato dharmaṃ prāpsyanti padamuttamam // Mvyā_77 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prātihāryatrayeṇāsau śrāvakānvinayiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvete āsravāstatra kṣipayiṣyanti suratāḥ // Mvyā_78 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prathamaḥ sannipātosya śrāvakāṇāṃ bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrṇāḥ ṣaṇṇavatikoṭyaḥ śrāvakāṇāṃ bhavacchidāṃ // Mvyā_79 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvitīyaḥ sannipātosya śrāvakāṇāṃ bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrṇāścaturnavati koṭyaḥ śāntānāṃ bhūrimedhasāṃ // Mvyā_80 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tṛtīyaḥ sannipātosya śrāvakāṇāṃ bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrṇāḥ dvāviṃśati koṭyaḥ śāntānāṃ śāntacetasāṃ // Mvyā_81 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmacakraṃ pravartyātha vinīya suramānuṣān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sārdhaṃ śrāvakasaṃgheṇa pure piṇḍaṃ cariṣyati // Mvyā_82 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ praviśatastasyāṃ ramyāṃ ketumatīṃ purīṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māndārakāṇi puṣpāṇi patiṣyanti purottame //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "devatāḥ prakiriṣyanti tasmin puragate munau // Mvyā_83 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "catvāraśca mahārājā śakraśca tridaśādhipaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmā devagaṇaiḥ sārdhaṃ pūjāṃ tasya kariṣyati // Mvyā_84 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "utpalaṃ kumudaṃ padmaṃ puṇḍarīkaṃ sugandhikaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aguruṃ candanaṃ cāpi divyaṃ mālyaṃ patiṣyati // Mvyā_85 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cailakṣepaṃ kariṣyanti devaputrā maharddhikāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ lokanāthamudvīkṣapa praviśantaṃ purottamam // Mvyā_86 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "divyaśca tūryanirghoṣo divyaṃ mālyaṃ patiṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "devatā prakiriṣyanti tasmin puragate munau // Mvyā_87 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ye tu ketumatīṃ kecit vāsayaṣyanti mānuṣāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tepi taṃ pūjayiṣyanti praviśantaṃ purottamam // Mvyā_88 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pathi bhūmyāstaraṃ tatra mṛdutūlapicopamam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicitrañca śubhaṃ mālyaṃ vikiriṣyanti te tadā // Mvyā_89 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "chatradhvajapatākabhirarcayiṣyanti mānuṣāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śubhaiśca tūryanirghoṣaiḥ prasannamanaso narāḥ // Mvyā_90 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ ca śakraḥ sahasrākṣo devarājaḥ śacīpatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prahṛṣṭaḥ prāñjalirbhūtvā maitreyaṃ stoṣyate jinam // Mvyā_91 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "namaste puruṣājanya namaste puruṣottama /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anukampasva janatāṃ bhagavannagrapugdala // Mvyā_92 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "maharddhiko devaputrastasya māro bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa cāpi prāñjalirbhūtvā stoṣyate lokanāyakam // Mvyā_93 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śuddhāvāsa sahasraiśca bahubhiḥ parivāritaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pravekṣyate ca maitreyo lokanātho vināyakaḥ // Mvyā_94 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brāhmaṇaparivāreṇa brahmā cāpi girāsphuṭam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kathayiṣyati saddharmaṃ brāhmaṃ ghoṣamudīrayan // Mvyā_95 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ākīrṇā pṛthivī sarvā arhadbhiśca bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣīṇāśravairvāntadoṣaiḥ prahīṇabhavabandhanaiḥ // Mvyā_96 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hṛṣṭā devamanuṣyāśca gandharvā yakṣarākṣasāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śāstuḥ pūjāṃ kariṣyanti nāgāścāpi maharddhikāḥ // Mvyā_97 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "te vai nūnaṃ bhaviṣyanti cyānaghācchinnasaṃśayāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utkṣiptaparikhāḥ dhīrā anādānā nirutsakāḥ //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "brahmacaryañcariṣyanti maitreyasyānuśāsane // Mvyā_98 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "te 'pi nūnaṃ bhaviṣyanti amamā aparigrahāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ajātarūparajatā aniketā asaṃstavāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmacaryañcariṣyanti ye maitreyānuśāsane // Mvyā_99 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "te vai pāraṃ gamiṣyanti chitvā jālameva bhujāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyānāni copasaṃpadya prītisaukhyasamanvitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "brahmacaryañcariṣyanti maitreyasyānuśāsane // Mvyā_100 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṣṭhiṃ varṣa sahasrāṇi maitreyo dvipadottamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "deśayiṣyati saddharmaṃ śāstā lokānukampayā // Mvyā_101 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śatāni ca sahasrāṇi prāṇiṇāṃ sa vināyakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vinīya dharmakāyena tato nirvāṇameṣyati // Mvyā_102 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmiṃśca nirvṛte dhīre maitreye dvipadottame /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "daśavarṣasahasrāṇi saddharmaṃ sthāsyati kṣitau // Mvyā_103 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prasādayati cittāni tasmācchākyamunau jine /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatodṛkṣatha maitreyaṃ saṃbuddhaṃ dvipadottamam // Mvyā_104 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāddharme ca buddhe ca saṃghe cāpi gaṇottame /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prasādayati cittāni bhaviṣyati maharddhikaṃ // Mvyā_105 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "taṃ tādṛśaṃ kāruṇikaṃ maitreyaṃ dvipadottamaṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ārādhayitvā kālena tato nirvāṇameṣyatha // Mvyā_106 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "idamāścaryakaṃ śrutvā dṛṣṭvā ca vibhavānalpikāṃ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ko vidvānna prasīdeta api kṛṣṇāsu jātiṣu // Mvyā_107 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmādihātmakāmena māhātmayamabhikāṃkṣatāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saddharmo gurukarttavyaḥ smaratā buddhaśāsanam // Mvyā_108 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// maitreyavyākaraṇaṃ samāptaṃ //"
    }
  ]
}