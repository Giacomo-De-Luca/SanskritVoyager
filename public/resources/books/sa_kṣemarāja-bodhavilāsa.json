  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Kṣemarāja: Bodhavilāsa"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "oṃ namo netrāya //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "namaḥ śivāya satataṃ pañcakṛtyavidhāyine /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cidānandaghanasvātmaparamārthāvabhāsine // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "citiḥ svatantrā viśvasya hetur ity abhidhīyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svātantryarūpā jñātā ca siddhīr vā saṃprayacchate // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sā svabhittau svecchayaiva viśvasyonmīlanāya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānānurūpavaicitryād grāhyagrāhakabhedataḥ // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viśvasya tasya vaicitryaṃ grāhyabhedena saṃsthitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānāvaicitryayogena cottamādhamasaṅkhyayā // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "citisaṅkocanāc cittaṃ cetano 'pi maheśvaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vaṭadhanikāvat tatra viśvarūpaṃ ca tad viduḥ // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caitanyam ātmano rūpaṃ śuddham atyantanirmalam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tad eva niyamāsaktaṃ cittaṃ cid abhidhīyate // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "arthonmukhatayā saṃvic citte viśrāntim āgatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṅkocātmapradhānatvāc citiś cittaṃ vidur budhāḥ // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "māyāpramātā cidrūpas tanmayatvena dehinām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vartate viṣayāsaktaḥ sadvivekavivarjitaḥ // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadaikaḥ pratithaś cittaṃ kalāsattvaguṇādibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saptapramatṛkatvena ṣaṭtriṃśattattvasaṅkhyayā // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekaḥ sarvagataḥ śuddhaḥ sambodhātmā maheśvaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saivāhantāparijñānān muktiḥ karatale sthitā // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pramātṛsaptakatvena ṣaṭtriṃśattattvasaṅkhyayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvitaḥ sa maheśāno mokṣalakṣmīḥ pravartate // 11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadbhūmikā darśanādyās sarvā eva na saṃśayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūmikāḥ kṛtrimā yadvan naṭo gṛhṇāti svecchayā // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadvad eva cidānandasvecchocchalitabṛṃhitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmā gṛhṇāti vipulā darśanādyā vibhūtayaḥ // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cidānandasamullāsollasitātmā virājate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cidvatsvaśaktisaṅkocāt saṃsāre malināyate // 13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "apūrṇo 'smīti vividhair malaiḥ sa malinīkṛtaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māyīyāṇavakārmākhyair vyāpako 'pi jagadvibhuḥ // 15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyāpī yadvan mahādevaḥ kroti pañcakṛtyatām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadvad evāyam ātmāpi kurute śaktimohitaḥ // 16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śakto vikāsāc chaktīśo gīyate tattvavādibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṅkocanāt saṅkocitaḥ saṃsārīty abhidhīyate // 17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "māyā rūpaṃ hi yat kiṃcid ālokayitum udyatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sādhyasṛṣṭiṃ vijānīyād anyā śaktiḥ sthitir matā // 18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃhārāt saṃhṛtā devī cidaikye 'nugraho mataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadekasārāprathanāt tirodhānābhidhīyate // 19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "itthaṃ sadā saṃnihitaḥ pañcavāhavidhiḥ kramāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñātaś cintāmaṇir asāv ajñānāt kāṣṭaloṣṭavat // 20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadvimarśabalenaivaṃ nityaṃ yaḥ pariśīlate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa muktaḥ sarvabandhebhyo nityānandamayo bhavet // 21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cidvahnir grasate so 'yaṃ suprabuddho 'sty asau yadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadāsau vimalo jñeyaś cidvahniḥ sarvabhakṣakaḥ // 22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "etadbalena saṃyukto yogī nirvāṇalakṣaṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "padaṃ prāpnoti vimalaṃ so 'cirān nātra saṃśayaḥ // 23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cidvahnir balalābhe 'pi viśvam ābhāti cinmayam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svānandāmṛtakallolam etad ucchalitaṃ bahiḥ // 24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tad eva śyānatāṃ yātaṃ bhāvarūpair vibhāvyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svātmā maheśvaro devaḥ krīḍate parameśvaraḥ // 25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iti yaḥ satataṃ vetti sa mukto mocayaty api /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvavrātaṃ kṣaṇenaiva ghorāt saṃsārabandhanāt // 26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yaḥ kaścit ānandabalaḥ sa svarūpapadasthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "iti yasya samullāsollāsitodayaśālinaḥ // 27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya svarūpaniṣṭhasya vyutthāne 'pi tad arthyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etat prayatnasāmārthyāj janair evādhigamyate // 28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "madhyadhāmavikāsāc ca cidānandāt prakāśate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatprakāśād divyadṛṣṭir jñānarūpā vibhāvyate // 29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirmalā suprabhā śuddhā nityānandamayī parā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nirdehacchedajālāpi jñānadṛṣṭir vijṛmbhate // 30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "madhyadhāmavikāse tu upāyo balavatsthitiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vikalpakṣayasaṅkocavikāsādyā anekaśaḥ // 31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "akiñciccintanād eva vikalpānāṃ kṣayo bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cidbodhād vilasacchaktī raktāsau bhāvamaṇḍale // 32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatrānuraktā divyaughaṃ paśyate vimalātmakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śaktisaṅkocam etad dhi procyate brahmavādibhiḥ // 33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādyantakoṭiviśrāmabindunādalayās tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aśaṅkitabhayakrodhabībhatsādiparigrahāḥ // 34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ity etat kathitaṃ devi madhyadhāmavikāsakam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra śakto dinair evaṃ prapnoti parasampadam // 35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yo 'ntaḥsamādhisaṃskāraṃ bhramate vimalatviṣām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa visargabalād eva vimṛśya ca punaḥ punaḥ // 36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyutthāne 'pi yatas tasya svarūpaṃ samprakāśate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yogino bodhaniṣṭhasya nityānandarasasya ca // 37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tat prakāśānandamayī mantravīryopabṛṃhitā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūṛnāhantācid ity antaḥsamullāsābhiyoginaḥ // 38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatrāsau vilasan yogī mantreśvarapade sthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra śakto vibhur yadvat krīḍate śaktibṛṃhitaḥ // 39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evaṃ svatantratā tasya vyāpakasya jagadvibhoḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānābhedajuṣaś citrapadasthitasyākhaṇḍitā // 40 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "etad advayam ity uktaṃ jñānāmṛtam anuttamam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yaḥ pibec chāmyate tasya saṃsāraviṣamūrchanam // 41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhollāsavidhāneyaṃ śivaprāpyai mahātmanām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rājñaḥ kṣemābhidhānasya śāstram atyantanirmalam // 42 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti śrīkṣemarājakṛtaṃ bodhavilāsākhyaṃ yogaśāstram //"
    }
  ]
}