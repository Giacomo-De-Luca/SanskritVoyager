  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Vajrasūcī (Vs)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jagadguruṃ mañjughoṣaṃ natvā vākkāyacetasā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aśvaghoṣo vajrasūcīṃ sūtrayāmi yathāmatam // Vs_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vedāḥ pramāṇaṃ smṛtayaḥ pramāṇaṃ dharmārthayuktaṃ vacanaṃ pramāṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yasya pramāṇaṃ na bhavetpramāṇaṃ kastasya kuryādvacanaṃ pramāṇam // Vs_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saptavyādhā daśārṇeṣu mṛgāḥ kālañjare girau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cakravākāḥ śaradvīpe haṃsāḥ sarasi mānase // Vs_3 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "te 'pi jātāḥ kurukṣetre brāhmaṇā vedapāragāḥ // Vs_4 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "adhītya caturo vedān sāṅgopāṅgena tavatttaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śūdrātpratigrahagrāhī brāhmaṇo jāyate kharaḥ // Vs_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kharo dvādaśajanmāni ṣaṣṭhijanmāni śūkaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śvānaḥ saptatijanmāni ityevaṃ manurabravīt // Vs_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hastinyāmacalo jāta ulūkyāṃ keśapiṅgalaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "agastyo 'gastipuṣpācca kauśikaḥ kuśasambhavaḥ // Vs_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kapilaḥ kapilājjātaḥ śaragulmācca gautamaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "droṇācāryastu kalaśāttittiristittirīsutaḥ // Vs_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "reṇukājanayadrāmamṛṣyaśṛṅgamuniṃ mṛgī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaivartinyajanayad vyāsaṃ kuśikaṃ caiva śūdrikā // Vs_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viśvāmitraṃ ca caṇḍālī vasiṣṭhaṃ caiva urvaśī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na teṣāṃ brāhmaṇī mātā lokācārācca brāhmaṇāḥ // Vs_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadyaḥ patati māṃsena lākṣayā lavaṇena ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tryahācchūdraśca bhavati brāhmaṇaḥ kṣīravikrayī // Vs_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ākāśagāmino viprāḥ patanti māṃsabhakṣaṇāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viprāṇāṃ patanaṃ dṛṣṭvā tato māṃsāni varjayet // Vs_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "brāhmaṇatvaṃ na śāstreṇa na saṃskārairna jātibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na kulena na vedena na karmaṇā bhavettataḥ // Vs_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirmamo nirahaṅkāro niḥsaṅgo niṣparigrahaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rāgadveṣavinirmuktastaṃ devā brāhmaṇaṃ viduḥ // Vs_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satyaṃ brahma tapo brahma brahma cendriyanigrahaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvabhūte dayā brahma etad brāhmaṇa lakṣaṇam // Vs_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satyaṃ nāsti tapo nāsti nāsti cendriyanigrahaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvabhūte dayā nāsti etaccāṇḍālalakṣaṇam // Vs_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devamānuṣanārīṇāṃ tiryagyonigateṣvapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "maithunaṃ nādhigacchanti te viprāste ca brāhmaṇāḥ // Vs_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na jātirdṛśyate tāvad guṇāḥ kalyāṇakārakāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caṇḍālo 'pi hi tatrasthastaṃ devā brāhmaṇaṃ viduḥ // Vs_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vṛṣalīphenapītasya niḥśvāsopahatasya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatraiva ca prasūtasya niṣkṛtirnopalabhyate // Vs_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūdrīhastena yo bhuṃkte māsamekaṃ nirantaram /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jīvamāno bhavecchūdro mṛtaḥ śvānaśca jāyate // Vs_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūdrīparivṛto vipraḥ śūdrī ca gṛhamedhinī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "varjitaḥ pitṛdevena rauravaṃ so 'dhigacchati // Vs_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "araṇīgarbhasambhūtaḥ kaṭho nāma mahāmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Vs_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kaivartīgarbhasambhūto vyāso nāma mahāmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Vs_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "urvarśīgarbhasambhūto vasiṣṭho 'pi mahāmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Vs_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hariṇīgarbhasambhūta ṛṣyaśrṛṅgo mahāmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Vs_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "caṇḍālī garbhasambhūto viśvāmitro? mahāmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Vs_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tāṇḍūlīgarbhasambhūto nārado hi mahāmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Vs_27 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "jitātmā yatirbhavati..................... jitendriyaḥ /\n[yatātmā yatirbhavati vijitātmā(jitātmā ca)jitendriyaḥ /]",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tapasā tāpaso jāto brahmacaryeṇa brāhmaṇaḥ // Vs_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca te brāhmaṇīputrāste ca lokasya brāhmaṇāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlaśaucamayaṃ brahma tasmātkulama kāraṇam // Vs_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlaṃ pradhānaṃ na kulaṃ pradhānaṃ kulena kiṃ śīlavivarjitena /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bahavo narā nīcakula prasūtāḥ svargaṃ gatāḥ śīlamupetya dhīrāḥ // Vs_30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mukhato brāhmaṇo jāto bāhubhyāṃ kṣatriyastathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "urubhyāṃ vaiśyaḥ saṃjātaḥ padbhyāṃ śūdraka eva ca // Vs_31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pāṇḍostu viśrutaḥ putraḥ sa vai nāmnā yudhiṣṭhiraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vaiśampāyanamāgamya prāñjaliḥ paripṛcchati // Vs_32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ke ca te brāhmaṇāḥ proktāḥ kiṃ vā brāhmaṇalakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etadicchāmi bho jñātuṃ tad bhavān vyākaroti me // Vs_33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣāntyādibhirguṇairyuktastyakta daṇḍo nirāmiṣaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na hanti sarvabhūtāni prathamaṃ brahmalakṣaṇam // Vs_34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadā sarvaṃ paradravyaṃ pathi vā yadi vā gṛhe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "adattaṃ naiva gṛhṇāti dvitīyaṃ brahmalakṣaṇam // Vs_35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tyaktvā krūrasvabhāvaṃ tu nirmamo niṣparigrahaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "muktaścarati yo nityaṃ tṛtīyaṃ brahmalakṣaṇam // Vs_36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "devamānuṣa nārīṇāṃ tiryagyonigateṣvapi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "maithunaṃ hi sadā tyaktaṃ caturthaṃ brahmalakṣaṇam // Vs_37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "satyaṃ śaucaṃ dayā śaucaṃ śaucamindriyanigrahaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvabhūta dayā śaucaṃ tapaḥ śaucañca pañcamam // Vs_38 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcalakṣaṇasampanna īdṛśo yo bhaved dvijaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tamahaṃ brāhmaṇaṃ brūyāṃ śeṣāḥ śūdrā yudhiṣṭhira // Vs_39 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na kulena na jātyā vā kriyābhirbrāhmaṇo bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caṇḍālo 'pi hi vṛtastho brāhmaṇaḥ sa yudhiṣṭhira // Vs_40 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ahiṃsā brahmacaryaṃ ca viśuddhācca pratigrahaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "phalena na samarthaṃ ca brāhmaṇaḥ syādyudhiṣṭhira // Vs_40a //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekavarṇamidaṃ pūrvaṃ viśvamāsīdyudhiṣṭhira /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "karmakriyāviśeṣeṇa cāturvarṇyaṃ pratiṣṭhitam // Vs_41 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarve vai yonijā martyāḥ sarve mūtrapurīṣiṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ekendriyendriyārthāśca tasmācchīlaguṇairdvijāḥ // Vs_42 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śūdro 'pi śīlasampannoguṇavān brāhmaṇo bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "brāhmaṇo 'pi kriyāhīnaḥ śūdrātpratyavaro bhavet // Vs_43 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcendriyārṇavaṃ ghoraṃ yadi śūdro 'pi tīrṇavān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmai dānaṃ pradātavyamaprameyaṃ yudhiṣṭhira // Vs_44 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na jātirdṛśyate rājan guṇāḥ kalyāṇakārakāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jīvitaṃ yasya dharmārthe parārthe yasya jīvitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ahorātraṃ caretkṣāntiṃ taṃ devā brāhmaṇaṃ viduḥ // Vs_45 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "parityajya gṛhāvāsaṃ ye sthitā mokṣakākṣiṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmeṣvasaktāḥ kaunteya brāhmaṇāste yudhiṣṭhira // Vs_46 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ahiṃsānirmamatvaṃ cā matkṛtyasya varjanam /"
        },
        {
          "tag": "l",
          "attributes": {},
