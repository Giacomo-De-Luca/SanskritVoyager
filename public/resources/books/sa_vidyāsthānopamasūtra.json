  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Vidyāsthānopamasūtra"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "1 evaṃ may",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ā śru"
        },
        {
          "tag": "text",
          "text": "tam / ekasmiṃ samaye bhagavāṃ śrāvastyāṃ vi"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "harati sma jetava"
        },
        {
          "tag": "text",
          "text": "ne anāthapiṇḍadārāme /"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "2 tatra bhagavāṃ bhikṣūn āmaṃtrayate sma /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "3",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "utpādā"
        },
        {
          "tag": "text",
          "text": "d vā bhikṣavaḥ tathāgatānām anutpādād vā saṃvartate ca loko vivartate ca /"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "different beginning for paragraphs 1-3 in Or.15009/83v; ed. in: The British Library Sanskrit Fragments, vol. II, ed. S. Karashima and K. Wille, Tokyo 2009 (Buddhist Manuscripts from Central Asia), pp. 153f.:\n1 /// .. ye bhagavāṃ śrāvastyāṃ viharati sma je[tava]ne a .. .. + + ///"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "2 /// .. .y. dau kalyāṇaṃ madhye kalyāṇaṃ pa[rya]vasāne kaly[āṇaṃ] + ///"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "3 /// + ṣyāmi yad uta vidya[sthā]nopamaṃ nāma dharmaparyāyas tac chṛnu[t]. [s]. ///"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "4 /// dharmaparyāya katama utpādād vā tathāgatāṇām a .. ///"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "For this wording cf. Daśottarasūtra E.a-c"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4 saṃvartamāne loke yadbhūyasā satvā ābhasvare devanikāye upapadyante /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "5 te tatra bhavanti rūpiṇo",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "mano"
        },
        {
          "tag": "text",
          "text": "mayā avikalā ahīnendriyā"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "sarvāṅgapratyaṅgopetā"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "śubhā varṇasthāyina"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "prītibhakṣā"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "prītyāhārā"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "svayaṃprabhā vaihāyasagāmino dīrghāyuṣo dīrgham adhvānaṃ tiṣṭhaṃti /"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "6 vivartamāne loke pṛthak chilpasthānakarmasthānāni prajñāyante /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "7 tadyathā"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mantrā japā auṣadhayo māyākarma cikitsitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "divyaṃ ca cakṣu ṛddhiś ca yathocitaṃ jñānadarśanam //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "8"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "mārgan tu na prajānaṃti duḥkhopaśamagāminam /\nunmārge na vihanyantaś caranti amarā yathā /\nanissaraṇadarśina",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "//"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "c: read unmārgena, s.e. for unmārgeṇa"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "9 yasmiṃs tu samaye tathāgatā arhantaḥ samyaksaṃbuddhā loke utpadyante yāni ca laukikāni pṛthak chilpasthānakarmasthānāni yac ca lokottaraṃ tat sarvam abhijñāya"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "yac chreṣṭhaṃ sarvavidyānāṃ tad deśayaṃti tathāgatāḥ /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "10 yad uta idaṃ duḥkham āryasatyaṃ ayaṃ du",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "khanirodhagāminī pratipad āryasatyam i"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ti /"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {
        "rend": "blue"
      },
      "text": "cf. Pelliot Sanskrit bleu 375rw: /// (ārya)satyaṃ ayaṃ duḥkha[s](amuday). ///"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "11\ntac chreṣṭhaṃ sarvavidyānāṃ yad deśayaṃti tathāgatāḥ /\nsarvam eke prajānaṃti śramaṇabrāhmaṇā",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "pṛthak /"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "12\nmantrā japā auṣadhay",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "o"
        },
        {
          "tag": "text",
          "text": "māyākarma cikitsi"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "taṃ /\ndivyaṃ"
        },
        {
          "tag": "text",
          "text": "ca cakṣu ṛddhiś ca uditaṃ jñ"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ānadarśa"
        },
        {
          "tag": "text",
          "text": "nam /"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "d: cf. Pelliot Sanskrit bleu 375ry: /// ṛddhiś ca uditaṃ jñānada ///"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "13\nmārgaṃ tu na prajānaṃti duḥkhopaśamagāminam /\nte mārgam aprajānanto duḥkhop",
          "children": [
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "aśa"
            },
            {
              "tag": "text",
              "text": "ma"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "gāminam /\nunmā"
            },
            {
              "tag": "text",
              "text": "rge"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "na vihanya"
            },
            {
              "tag": "text",
              "text": "n"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "t"
            },
            {
              "tag": "text",
              "text": "aś ca"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "ranti amarā"
            },
            {
              "tag": "text",
              "text": "yathā /"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "anissa"
            },
            {
              "tag": "text",
              "text": "raṇadarśina"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "ḥ"
            },
            {
              "tag": "text",
              "text": "//"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "e: cf. Pelliot Sanskrit bleu 375rz: /// .. vihanyaś caranti amarā ///; read",
          "children": [
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "unmā"
            },
            {
              "tag": "text",
              "text": "rge"
            },
            {
              "tag": "hi",
              "attributes": {
                "rend": "it"
              },
              "text": "ṇa"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "14\nyadā tu loke saṃbuddhā",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "utpadyante karu"
        },
        {
          "tag": "text",
          "text": "ṇikāḥ /\nprakāśayaṃti sa"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ddha"
        },
        {
          "tag": "text",
          "text": "rmaṃ sarvaduḥkhavinodanam //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "bc: cf. Pelliot Sanskrit bleu 375v1: /// + [g]ā · prakāśayaṃti ye [dh](armaṃ) ///; cf. also next paragraph"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "15\nduḥkhaṃ duḥkhasamutpādaṃ duḥkha",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "sya"
        },
        {
          "tag": "text",
          "text": "samatikramaṃ /\nāry"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "aṃ cāṣṭāṅgi"
        },
        {
          "tag": "text",
          "text": "kaṃ mārgaṃ kṣemaṃ nirvāṇagāminam //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "for the two verses in paragraph 14 and 15 cf. Suvarṇavarṇāvadāna [57]; for the actual input cf. THESAURUS LITERATURAE BUDDHICAE (TLB): https://www2.hf.uio.no/polyglotta/index.php?page=library&bid=2):"
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "children": [
                {
                  "tag": "hi",
                  "attributes": {
                    "rend": "blue"
                  },
                  "text": "kadācit karhicit loke utpadyante tathāgatāḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "children": [
                {
                  "tag": "hi",
                  "attributes": {
                    "rend": "blue"
                  },
                  "text": "śāstāro naradevānāñ cakṣuṣmanto raṇātigāḥ // 1 //"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "hi",
              "attributes": {
                "rend": "blue"
              },
              "text": "prakāśayanti ye dharmaṃ sarvaduḥkhavinodanaṃ /"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "children": [
            {
              "tag": "hi",
              "attributes": {
                "rend": "blue"
              },
              "text": "duḥkhaṃ duḥkhasamutpādaṃ duḥkhasya samatikramaṃ //"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "āryāṣṭāṅgikaṃ mārgaṃ kṣemaṃ nirvāṇagāminaṃ // 2//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "16"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmiṃ dharme deśyamāne te sarvaduḥkhavinodane /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñānena hatvā ajñānaṃ nāgacchanti punarbhavam //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "17 bhagavāṃ āptamanasas te bhikṣavo bhagavato bhāṣitam abhy",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "a"
        },
        {
          "tag": "text",
          "text": "nandam //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "18 vidyāsthānopamasūtraṃ samāptaḥ /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "19 rakṣaṃ bhavatu / kutkāttuṃsasya svāhā //"
    }
  ]
}