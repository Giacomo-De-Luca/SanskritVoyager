  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "// namo mañjuśriye kumārabhūtāya //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "ācāryavasubandhupraṇītaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Trisvabhāvanirdeśaḥ (Tsn)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kalpitaḥ paratantraśca pariniṣpanna eva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "trayaḥ svabhāvā dhīrāṇāṃ gambhīrajñeyamiṣyate // Tsn_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yat khyāti paratantro 'sau yathā khyāti sa kalpitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratyayādhīnavṛttitvāt kalpanāmātrabhāvataḥ // Tsn_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya khyāturyathākhyānaṃ yā sadāvidyamānatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñeyaḥ sa pariniṣpannasvabhāvo 'nanyathātvataḥ // Tsn_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatra kiṃ khyātyasatkalpaḥ kathaṃ khyāti dvayātmanā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya kā nāstitā tena yā tatrādvayadharmatā // Tsn_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "asatkalpo 'tra kaścittaṃ yatastena hi kalpyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā ca kalpayatyartha tathātyantaṃ na vidyate // Tsn_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "taddhetuphalabhāvena cittaṃ dvividhamiṣyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadālayākhyaṃ vijñānaṃ pravṛttyākhyaṃ ca saptadhā // Tsn_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃkleśavāsanābījaiścitatvāccittamucyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cittamādyaṃ dvitīyaṃ tu citrākārapravṛttitaḥ // Tsn_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samāsato 'bhūtakalpaḥ sa caiṣa trividho mataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vaipākikastathā naimittiko 'nyaḥ prātibhāsikaḥ // Tsn_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prathamo mūlavijñānaṃ tadvipākātmakaṃ yataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyaḥ pravṛttivijñānaṃ dṛśyadṛgvittivṛttitaḥ // Tsn_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadasattvād dvayaikatvāt saṃkleśavyavadānayoḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lakṣaṇābhedataśceṣṭā svabhāvānāṃ gaṃbhīratā // Tsn_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sattvena gṛhyate yasmādatyantābhāva eva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvaḥ kalpitastena sadasallakṣaṇo mataḥ // Tsn_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vidyate bhrāntibhāvena yathākhyānaṃ na vidyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paratantro yatastena sadasallakṣaṇo mataḥ // Tsn_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "advayatvena yaccāsti dvayasyābhāva eva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvastena niṣpannaḥ sadasallakṣaṇo mataḥ // Tsn_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvaividhyāt kalpitārthasya tadasattvaikabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvaḥ kalpito bālairdvayaikatvātmako mataḥ // Tsn_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prakhyānād dvayabhāvena bhrāntimātraikabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvaḥ paratantrākhyo dvayaikatvātmako mataḥ // Tsn_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayābhāvasvabhāvatvādadvayaikasvabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvaḥ pariniṣpanno dvayaikatvātmako mataḥ // Tsn_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kalpitaḥ paratantraśca jñeyaṃ saṃkleśalakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pariniṣpanna iṣṭastu vyavadānasya lakṣaṇam // Tsn_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "asaddvayasvabhāvatvāt tadabhāvasvabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvāt kalpitājjñeyo niṣpanno 'bhinnalakṣaṇaḥ // Tsn_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "advayatvasvabhāvatvād dvayābhāvasvabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣpannāt kalpitaścaiva vijñeyo 'bhinnalakṣaṇaḥ // Tsn_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yathākhyānamasadbhāvāt tathāsattvasvabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvāt paratantrākhyānniṣpanno 'bhinnalakṣaṇaḥ // Tsn_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "asaddvayasvabhāvatvād yathākhyānāsvabhāvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣpannāt paratantro 'pi vijñeyo 'bhinnalakṣaṇaḥ // Tsn_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kramabhedaḥ svabhāvānāṃ vyavahārādhikārataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatpraveśādhikārācca vyutpattyarthaṃ vidhīyate // Tsn_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kalpito vyavahārātmā vyavahartrātmako 'paraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vyavahārasamucchedasvabhāvaścānya iṣyate // Tsn_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayābhāvātmakaḥ pūrvaṃ paratantraḥ praviśyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tataḥ praviśyate tatra kalpamātramasaddvayam // Tsn_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tato dvayābhāvabhāvo niṣpanno 'tra praviśyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tathā hyasāveva tadā astināstīti cocyate // Tsn_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "trayo 'pyete svabhāvā hi advayālambalakṣaṇāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "abhāvādatathābhāvāt tadabhāvasvabhāvataḥ // Tsn_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "māyākṛtaṃ mantravaśāt khyāti hastyātmanā yathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākāramātraṃ tatrāsti hastī nāsti tu sarvathā // Tsn_27 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svabhāvaḥ kalpito hastī paratantrastadākṛtiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yastatra hastyabhāvo 'sau pariniṣpanna iṣyate // Tsn_28 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "asatkalpastathā khyāti mūlacittād dvayātmanā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayamatyantato nāsti tatrāstyākṛtimātrakam // Tsn_29 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mantravanmūlavijñānaṃ kāṣṭhavattathatā matā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "hastyākāravadeṣṭavyo vikalpo hastivad dvayam // Tsn_30 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "arthatattvaprativedhe yugapallakṣaṇatrayam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parijñā ca prahāṇaṃ ca prāptiśceṣṭā yathākramam // Tsn_31 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "parijñānupalambho 'tra hānirakhyānamiṣyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "upalambhanimittā tu prāptiḥ sākṣātkriyāpi sā // Tsn_32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayasyānupalambhena dvayākāro vigacchati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vigamāt tasya niṣpanno dvayābhāvo 'dhigamyate // Tsn_33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hastino 'nupalambhaśca vigamaśca tadākṛteḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "upalambhaśca kāṣṭhasya māyāyāṃ yugapad yathā // Tsn_34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "viruddhadhīvāraṇatvād buddhyā vaiyarthyadarśanāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñānatrayānuvṛtteśca mokṣāpattirayatnataḥ // Tsn_35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittamātropalambhena jñeyārthānupalambhatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñeyārthānupalambhena syāccittānupalambhatā // Tsn_36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvayoranupalambhena dharmadhātūpalabhbhatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmadhātūpalambhena syād vibhutvopalambhatā // Tsn_37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upalabdhavibhutvaśca svaparārthaprasiddhitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prāpnotyanuttarāṃ bodhiṃ dhīmān kāyatrayātmikām // Tsn_38 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti trisvabhāvanirdeśaḥ samāptaḥ //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "kṛtirācāryavasubandhupādānāmiti //"
    }
  ]
}