  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Viṃśikāvṛttiḥ (Vvṛ)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñaptimātramevedamasadarthāvabhāsanāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadvat taimirikasyāsatkeśoṇḍrakādidarśanaṃ // Vvṛ_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na deśakālaniyamaḥ santānāniyamo na ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca kṛtyakriyā yuktā vijñaptiryadi nārthataḥ // Vvṛ_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "deśādiniyamaḥ siddhaḥ svapnavat pretavatpunaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "santānāniyamaḥ sarvaiḥ pūyanadyādidarśane // Vvṛ_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnopaghātavatkṛtyakriyā narakavatpunaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvaṃ narakapālādidarśane taiśca bādhane // Vvṛ_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tiraścāṃ sambhavaḥ svarge yathā ca narake tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na pretānāṃ yatastajjaṃ duḥkhaṃ nānubhavanti te // Vvṛ_5 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "yadi tatkarmabhistatra bhūtānāṃ sambhavastathā",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iṣyate pariṇāmaśca kiṃ vijñānasya neṣyate // Vvṛ_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "karmaṇo vāsanānyatra phalamanyatra kalpyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatraiva neṣyate yatra vāsanā kiṃ nu kāraṇaṃ // Vvṛ_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rūpādyāyatanāstitvaṃ tadvineyajanaṃ prati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "abhiprāyavaśāduktamupapādukasattvavat // Vvṛ_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāstīha satva ātmā vā dharmāstvete sahetukāḥ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yataḥ svabījādvijñaptiryadābhāsā pravartate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvividhāyatanatvena te tasyā munirabravīt // Vvṛ_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tathā pudgalanairātmyapraveśo hi anyathā punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "deśanā dharmanairātmyapraveśaḥ kalpitātmanā // Vvṛ_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na tadekaṃ na cānekaṃ viṣayaḥ paramāṇuśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca te saṃhatā yasmātparamāṇurna sidhyati // Vvṛ_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṭkena yugapadyogātparamāṇoḥ ṣaḍaṃśatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṇṇāṃ samānadeśatvātpiṇḍaḥ syādaṇumātrakaḥ // Vvṛ_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paramāṇorasaṃyoge tatsaṅghāte 'sti kasya saḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na cānavayavatvena tatsaṃyogād na sidhyati // Vvṛ_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dibhāgabhedo yasyāsti tasyaikatvaṃ na yujyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "chāyāvṛtī kathaṃ vā anyo na piṇḍaścenna tasya te // Vvṛ_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekatve na krameṇetiryugapanna grahāgrahau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicchinnānekavṛttiśca sūkṣmānīkṣā ca no bhavet // Vvṛ_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratyakṣabuddhiḥ svapnādau yathā sa ca yadā tadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na so 'rtho dṛśyate tasya pratyakṣatvaṃ kathaṃ mataṃ // Vvṛ_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uktaṃ yathā tadābhāsā vijñaptiḥ smaraṇaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnadṛgviṣayābhāvaṃ nāprabuddho 'vagacchati // Vvṛ_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anyonyādhipatitvena vijñaptiniyamo mithaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "middhenopahataṃ cittaṃ svapne tenāsamaṃ phalaṃ // Vvṛ_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "maraṇaṃ paravijñaptiviśeṣādvikriyā yathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "smṛtilopādikānyeṣāṃ piśācādimanovaśāt // Vvṛ_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kathaṃ vā daṇḍakāraṇyaśūnyatvamṛṣikopataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "manodaṇḍo mahāvadyaḥ kathaṃ vā tena sidhyati // Vvṛ_20 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "paracittavidāṃ jñānamayathārthaṃ kathaṃ yathā",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svacittajñānam ajñānādyathā buddhasya gocaraḥ // Vvṛ_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñaptimātratāsiddhiḥ svaśaktisadṛśī mayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛteyaṃ sarvathā sā tu na cintyā buddhagocaraḥ // Vvṛ_22 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "viṃśatikā vijñaptimātratāsiddhiḥ / kṛtiriyamācāryavasubandhoḥ /"
    }
  ]
}