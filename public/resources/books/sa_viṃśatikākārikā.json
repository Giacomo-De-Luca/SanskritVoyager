  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "// namaḥ sarvabuddhabodhisattvebhyaḥ //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Viṃśatikākārikā (Vk)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñaptimātramevaitadasadarthāvabhāsanāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yathā taimirikasyāsatkeśacandrādidarśanam // Vk_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadi vijñaptiranarthā niyamo deśakālayoḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "santānasyāniyamaśca yuktā kṛtyakriyā na ca // Vk_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "deśādiuniyamaḥ siddhaḥ svapnavat pretavat punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "santānāniyamaḥ sarvaiḥ pūyanadyādidarśane // Vk_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnopaghātavat kṛtyakriyā narakavat punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvaṃ narakapālādidarśane taiśca bādhane // Vk_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tiraścāṃ sambhavaḥ svarge yathā na narake tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na pretānāṃ yatastajjaṃ duḥkhaṃ nānubhavanti te // Vk_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadi tatkarmabhistatra bhūtānāṃ sambhavastathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "iṣyate pariṇāmaśca kiṃ vijñānasya neṣyate // Vk_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "karmaṇo vāsanānyatra phalamanyatra kalpyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatraiva neṣyate yatra vāsanā kiṃ nu kāraṇam // Vk_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rūpādyāyatanāstitvaṃ tadvineyajanaṃ prati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "abhiprāyavaśāduktamupapādukasattvavat // Vk_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yataḥ svabījād vijñaptiryadābhāsā pravartate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvividhāyatanatvena te tasyā munirabravīt // Vk_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tathā pudgalanairātmyapraveśo hi hyanyathā punaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "deśanā dharmanairātmyapraveśaḥ kalpitātmanā // Vk_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na tadekaṃ na cānekaṃ viṣayaḥ paramāṇuśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca te saṃhatā yasmāt paramāṇurna sidhyati // Vk_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṭkena yugapadyogāt paramāṇoḥ ṣaḍaṃśatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṇṇāṃ samānadeśatvāt piṇḍaḥ syādaṇumātrakaḥ // Vk_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paramāṇorasaṃyoge tatsaṅghāte 'sti kasya saḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na cānavayavatvena tatsaṃyogo na sidhyati // Vk_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "digbhāgabhedo yasyāsti tasyaikatvaṃ na yujyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "chāyāvṛtī kathaṃ vānyo na piṇḍaścenna tasya te // Vk_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekatve na krameṇetiryugapanna grahāgrahau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vicchinnānekavṛttiśca sūkṣmānīkṣā ca no bhavet // Vk_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratyakṣabuddhiḥ svapnādau yathā sā ca yadā tadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na so 'rtho dṛśyate tasya pratyakṣatvaṃ kathaṃ matam // Vk_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uktaṃ yathā tadābhāsā vijñaptiḥ smaraṇaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapne dṛgviṣayābhāvaṃ nāprabuddho 'vagacchati // Vk_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anyonyādhipatitvena vijñaptiniyamo mithaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "middhenopahataṃ cittaṃ svapne tenāsamaṃ phalam // Vk_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "maraṇaṃ paravijñaptiviśeṣād vikriyā yathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "smṛtilopādikānyeṣāṃ piśācādimanovaśāt // Vk_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kathaṃ vā daṇḍakāraṇyaśūnyatvamṛṣikopataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "manodaṇḍo mahāvadyaḥ kathaṃ vā tena sidhyati // Vk_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paracittavidāṃ jñānamayathārthaṃ kathaṃ yathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svacittajñānamajñānād yathā buddhasya gocaraḥ // Vk_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijñaptimātratāsiddhiḥ svaśaktisadṛśī mayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛteyaṃ sarvathā sā tu na cintyā buddhagocaraḥ // Vk_22 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "// viṃśatikākārikāḥ samāptāḥ //"
    }
  ]
}