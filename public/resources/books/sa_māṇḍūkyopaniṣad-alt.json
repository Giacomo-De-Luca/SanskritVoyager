  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Śāntipāṭaḥ"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "oṃ bhadraṃ karṇebhiḥ śṛṇuyāma devāḥ bhadraṃ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paśyemākṣabhiryajatrāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthirairaṅgaistuṣṭuvāṃ sastanūbhir vyaśema devahitaṃ yadāyuḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svasti na indro vṛddhaśravāḥ svasti naḥ pūṣā viśvavedāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svasti nastārkṣyo ariṣṭanemiḥ svasti no bṛhaspatir dadhātu ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "oṃ śāntiḥ | śāntiḥ | śāntiḥ ||"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "oṃ pūrṇamadaḥ pūrṇamidaṃ pūrṇāt pūrṇamudacyate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrṇasya pūrṇamādāya pūrṇamevāvaśiṣyate ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "oṃ śāntiḥ | śāntiḥ | śāntiḥ ||"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Upaniṣad"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 1",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "omityetadakṣaramidaṃ sarvaṃ tasyopavyākhyānaṃ bhūtaṃ"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhavadbhaviṣyaditi sarvamoṅkāra eva |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yaccānyattrikālātītaṃ tadapyoṅkāra eva ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 2\nsarvaṃ hyetad brahmāyamātmā brahma so 'yamātmā catuṣpāt ||"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 3"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jāgaritasthāno bahiḥ prajñaḥ saptāṅgaḥ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ekonaviṃśatimukhaḥ sthūlabhugvaiśvānaraḥ prathamaḥ pādaḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 4"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnasthāno 'ntaḥ prajñaḥ saptāṅga ekonaviṃśatimukhaḥ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "praviviktabhuktaijaso dvitīyaḥ pādaḥ ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 5",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yatra supto na kañcana kāmaṃ kāmayate na"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kañcana svapnaṃ paśyati tatsuṣuptam |"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "suṣuptasthāna ekībhūtaḥ prajñānaghana evānandamayo"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "hyānandabhukcetomukhaḥ prājñastṛtīyaḥ pādah ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 6\neṣa sarveśvara eṣa sarvajña eṣo 'ntaryāmyeṣa\nyoniḥ sarvasya prabhavāpyayau hi bhūtānām"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Kārikā"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 1"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bahiḥ prajño vibhurviśvo hyantaḥ prajñastu taijasaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ghanaprajñastathā prājña eka eva tridhā smṛtaḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 2"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dakṣiṇākṣimukhe viśvo manasyantastu taijasaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ākāśe ca hydi prājñastridhā dehe vyavasthitaḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 3"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśvo hi sthūlabhuṅnityaṃ taijasaḥ praviviktabhuk |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ānandabhuk tathā prājñastridhā bhogaṃ nibodhata ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 4"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sthūlaṃ tarpayate viśvaṃ praviviktaṃ tu taijasam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ānandaśca tathā prājñaṃ tridhā tṛptiṃ nibodhata ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 5"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "triṣu dhāmasu yadbhojyaṃ bhoktā yaśca prakīrtitaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vedaitadubhayaṃ yastu sa bhuñjāno na lipyate ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 6"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prabhavaḥ sarvabhāvānāṃ satāmiti viniścayaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvaṃ janayati prāṇaścetoṃ 'śūnpuruṣaḥ pṛthak ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 7"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vibhūtiṃ prasavaṃ tvanye manyante sṛṣṭicintakāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnamāyāsarūpeti sṛṣṭiranyairvikalpitā ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 8"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "icchāmātraṃ prabhoḥ sṛṣṭiriti sṛṣṭau viniścitāḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kālātprasūtiṃ bhūtānāṃ manyante kālacintakāḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 9"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhogārthaṃ sṛṣṭirityanye krīḍārthamiti cāpare |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "devasyaiṣa svābhāvo 'yamāptakāmasya kā spṛhā ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Upaniṣad"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 7\nnāntaḥ prajñaṃ na bahiḥ prajñaṃ nobhayataḥ prajñaṃ\nna prajñānaghanaṃ na prajñaṃ nāprajñam |",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "adṛśyamavyavahāryamagrāhyamalakṣaṇamacintyamavyapa"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "deśyamekātmapratyayasāraṃ prapañcopaśamaṃ śāntaṃ"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "śivamadvaitaṃ caturthaṃ manyante sa ātmā sa vijñeyaḥ ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Kārikā"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 10"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nivṛtteḥ sarvaduḥkhānāmīśānaḥ prabhuravyayaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "advaitaḥ sarvabhāvānāṃ devasturyo vibhuḥ smṛtaḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 11"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāryakāraṇabaddhau tāviṣyete viśvataijasau |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prājñaḥ kāraṇabaddhastu dvau tau turye na siddhytaḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 12"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nātmānaṃ na paraṃ caiva na satyaṃ nāpi cānṛtam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prājñaḥ kiñcana saṃvetti turyaṃ tatsarvadṛksadā ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 13"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvaitasyāgrahaṇaṃ tulyamubhayoḥ prājñaturyayoḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bījanidrāyutaḥ prājñaḥ sā ca turye na vidyate ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 14"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnanidrāyutāvādyau prājñastvasvapnanidrayā |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na nidrāṃ naiva ca svapnaṃ turye paśyanti niścitāḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 15"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyathā gṛhṇataḥ svapno nidrā tattvamajānataḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viparyāse tayoḥ kṣīṇe turīyaṃ padamaśnute ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 16"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anādimāyayā supto yadā jīvaḥ prabudhyate |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ajamanidramasvapnamadvaitaṃ budhyate tadā ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 17"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prapañco yadi vidyeta nivarteta na saṃśayaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māyāmātramidaṃ dvaitamadvaitaṃ paramārthataḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 18"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vikalpo vinivarteta kalpito yadi kenacit |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "upadeśādayaṃ vādo jñāte dvaitaṃ na vidyate ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Upaniṣad"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 8"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "so 'yamātmādhyakṣaramoṅkāro 'dhimātraṃ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pādā mātrā mātrāśca pādā akāra ukāro makāra iti ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 9",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "jāgaritasthāno vaiśvānaro 'kāraḥ prathamā"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "mātrāpterādimattvādvāpnoti ha vai sarvān"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kāmānādiśca bhavati ya evaṃ veda ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 10",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "svapnasthānastaijasa ukāro dvitīyā mātrotkarṣād"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ubhayatvādvotkarṣati ha vai jñānasantatiṃ samānaśca"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "bhavati nāsyābrahmavitkule bhavati ya evaṃ veda ||"
            }
          ]
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 11"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "suṣuptasthānaḥ prājño makārastṛtīyā mātrā miterapītervā"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "minoti ha vā idaṃ sarvamapītiśca bhavati ya evaṃ veda ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Kārikā"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 19"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśvasyātvavivakṣāyāmādisāmānyamutkaṭam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mātrāsaṃpratipattau syādāptisāmānyameva ca ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 20"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taijasasyotvavijñāna utkarṣo dṛśyate sphuṭam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mātrāsaṃpratipattau syādubhayatvaṃ tathāvidham ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 21"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "makārabhāve prājñasya mānasāmānyamutkaṭam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mātrāsaṃpratipattau tu layasāmānyameva ca ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 22"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "triṣu dhāmasu yastulyaṃ sāmānyaṃ vetti niścitaḥ |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa pūjyaḥ sarvabhūtānāṃ vandyaścaiva mahāmuniḥ ||"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "Verse 23"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "akāro nayate viśvamukāraścāpi taijasam |"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "makāraśca punaḥ prājñaṃ nāmātre vidyate gatiḥ ||"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Māṇḍūkya Upaniṣad"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Verse 12",
      "children": [
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "amātraścaturtho 'vyavahāryaḥ prapañcopaśamaḥ śivo 'dvaita"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "evamoṅkāra ātmaiva saṃviśatyātmanātmānaṃ ya evaṃ veda |"
            },
            {
