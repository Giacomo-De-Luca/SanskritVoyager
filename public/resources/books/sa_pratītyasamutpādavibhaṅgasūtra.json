  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Pratītyasamutpādavibhaṅgasūtra"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "0a evaṃ mayā śrutam ekasmin samaye bhagavāñ cchrāvastyāṃ viharati sma | j",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "e"
        },
        {
          "tag": "text",
          "text": "tavane anāthapiṇḍadasyārāme mahatā bhikṣusaṃghena sārdham ardhatrayodaśabhir bhikṣuśataiḥ"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS arddhatrayodaśabhir"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "0b tatra bhagavān* bhikṣūn āmaṃtray",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "a"
        },
        {
          "tag": "text",
          "text": "te sma |"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS bhikṣūṇ."
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "1a pratītyasamutpādasya vo bhikṣavaḥ ādiñ ca deśayiṣyāmi vibhaṅgaṃ ca"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "1b tac chṛ",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ṇu"
        },
        {
          "tag": "text",
          "text": "ta sādhu ca suṣṭhu ca manasikuruta bhāṣiṣye |"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "2a pratītyasamutpādasyādiḥ katamaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "2b yad utāsmin satīdaṃ bhavaty asyotpādād idam utpadyate | yad utāvidyāpratyayāḥ saṃskārāḥ saṃskārapratyayaṃ vijñānaṃ vijñānapratyayaṃ nāmarūpaṃ nāmarūpapratyayaṃ ṣaḍāyatanaṃ | ṣaḍāyatanapratyayaḥ sparśaḥ sparśapratyayā vedanā vedanāpratyayā tṛṣṇā tṛṣṇāpratyayam upādānaṃ upādānapratyayo bhavaḥ bhavapratyayā jātiḥ jātipratyayā jarāmaraṇaśokaparidevaduḥkhadaurmanasyopāyāsāḥ saṃbhavaṃty evam asya kevalasya mahato duḥkhaskandhasya samudayo bhavati |",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS saṃmbhavaṃty"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "2c ayam ucyate pratītyasamutpādasyādiḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "3 vibhaṅgaḥ katamaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4a avidyāpratyayāḥ saṃskārā ity avidyā katamā |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bα ya",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "t ta"
        },
        {
          "tag": "text",
          "text": "t pūrvānte ajñānaṃ aparānte ajñānaṃ pūrvāntāparāṃte ajñānaṃ"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS pūrvvānte; pūrvvāntāparāṃte"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bβ adhyātmam ajñānaṃ | bahirdhā ajñānaṃ | adhyātmabahirdhā ajñānaṃ",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS bahirddhā; addhyātmabahirddhā"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bγ karmaṇy ajñānaṃ | vipāke ajñānaṃ karmavipāke ajñānaṃ |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bδ buddhe ajñānaṃ | dharme ajñānaṃ saṅghe ajñānaṃ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bε duḥkhe ajñānaṃ samudaye ajñānaṃ | nirodhe ajñānaṃ | mārge ajñānaṃ |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bζ hetāv ajñānaṃ | hetusamutpanneṣu dharmeṣv ajñānaṃ |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bη kuśalākuśaleṣu sāvadyānavadyeṣu | sevitavyāsevit",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "a"
        },
        {
          "tag": "text",
          "text": "vyeṣu | hīnapraṇītakṛṣṇaśuklasapratibhāgapratītyasamutpanneṣu dharmeṣv ajñānaṃ | ṣaṭsu vā punaḥ sparśāyataneṣu yathābhūtasaṃprativedhe iti |"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4bθ yat tatra tatra yathābhūtasyājñānam adarśanam anabhisamayaḥ tamaḥ saṃmohaḥ avidyāndhakāram"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4c iyam ucyate avidyā |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "5a avidyāpratyayāḥ saṃskārā iti saṃskārāḥ katame"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "5b trayaḥ saṃskārāḥ kāyasaṃskārāḥ vāksaṃskārāḥ manaḥsaṃskārā iti |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "6a saṃskārapratyayaṃ vijñānam iti | vijñānaṃ katamat*"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "6b ṣaḍ vijñānakāyāḥ c",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ak"
        },
        {
          "tag": "text",
          "text": "ṣur"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "v"
        },
        {
          "tag": "text",
          "text": "ijñānaṃ śrotraghrāṇajihvākāyamanovijñānaṃ"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "7aα vijñānapratyayaṃ nāmarūpam iti | nāma katamat*"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "7aβ catvāraḥ arūpiṇaḥ skandhāḥ katame catvāraḥ vedanāskandhaḥ saṃjñāskandhaḥ saṃskāraskandhaḥ vijñānaskandhaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "7bα rūpaṃ katamat*"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "7bβ yat kiñ cid rūpaṃ sarvvaṃ tac catvāri mahābhūtāni | catvāri ca mahābhūtāny upādāya",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS sarvvaṃ"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "7c itīdaṃ ca rūpaṃ pūrvakaṃ ca nāma tad aikadhyam abhi",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "saṃ"
        },
        {
          "tag": "text",
          "text": "kṣipya nāmarūpam ity ucyate"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS pūrvvakaṃ"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "8a nāmarūpapratyayaṃ ṣaḍāyatanam iti | ṣaḍāyatanaṃ katamat*"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "8b ṣaḍ ādhyātmikāny āyatanāni | cakṣur ādhyātmikam āyatanaṃ | śrotraṃ ghrāṇaṃ jihvā kāyo mana adhyātmikam āyatanaṃ |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "9a ṣaḍāyatanapratyayaḥ sparśa iti sparśaḥ katamaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "9b ṣaṭ sparśakāyāḥ cakṣuḥsaṃsparśaḥ śrotraghrāṇajihvākāyamanaḥsaṃsparśaḥ",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS śrottra°"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "10a sparśapratyayā vedaneti | vedanā katamā |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "10b tisro vedanāḥ sukhā duḥkhā aduḥkhāsukhā ca ||"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "11a vedanāpratyayā tṛṣṇeti | tṛṣṇā katamā |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "11b tisra",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "tṛṣṇāḥ kāmatṛṣṇā | rūpatṛṣṇā | ārūpyatṛṣṇā cā |"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "12a tṛṣṇāpratyayam upādānam iti | upādānaṃ katamat*"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "12b catvāry upādānāni | kāmopādānaṃ | dṛṣṭyupādānaṃ | śīlavratopādānaṃ ātmavādopādānaṃ |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "13a upādānapratyayo bhava iti bhavaḥ katamaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "13b trayo bhavāḥ kāmabhavaḥ rūpabhavaḥ ārūpyabhavaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "14a bhava",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "p"
        },
        {
          "tag": "text",
          "text": "ratyayā jātir iti | jātiḥ katamā |"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "14b yā teṣāṃ teṣāṃ satvānāṃ tasmiṃs tasmin satvanikāye jātiḥ saṃjātir avakrāṃtir abhinirvṛttiḥ prādurbhāvaḥ skandhapratilambho dhātupratilambhaḥ āy",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "a"
        },
        {
          "tag": "text",
          "text": "tanapratilambhaḥ skandhānām abhinirvṛttiḥ jīvitendriyasya prādurbhāvaḥ"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS tasmiṃs tasmiṃn"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "15a jātipratyayaṃ jarāmaraṇaṃ iti jarā katamā |"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "15b yat tat khālityaṃ pālityaṃ valīpracuratā jīrṇatā | bhugnatā kubjagopānasīvaṅkatā | tilakālakācitagātratā | khurukhurupraśv",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ā"
        },
        {
          "tag": "text",
          "text": "s"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "a"
        },
        {
          "tag": "text",
          "text": "kāyatā purataḥprāgbhārakāyatā | daṇḍaviṣkaṃbhaṇatā | dhandhatvaṃ mandatvaṃ hāniḥ parihāṇi"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ḥ"
        },
        {
          "tag": "text",
          "text": "indriyāṇāṃ paripākaḥ paribhedaḥ saṃskārāṇāṃ purāṇībhāvaḥ jarjarībhāvaḥ"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "15c iyam ucyate jarā ||"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "16a maraṇaṃ katamat*"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "16b yā teṣāṃ teṣāṃ satvānāṃ tasmāt tasmāt satvanikāyāt* cyutiś cyavanatā bhedo 'ntarahāṇiḥ āyuṣo hāniḥ ūṣmaṇo hāniḥ jīvitendriyasya nirodhaḥ skandhānāṃ nikṣepo maraṇaṃ kālakriyā"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "16c idam ucyate maraṇam"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "16d iti idaṃ ca maraṇaṃ pūrvikā ca jarā tad ubhayam aikadhyam abhisaṃkṣipya jarāmaraṇam ity ucyate |",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "blue"
          },
          "text": "MS pūrvvikā"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "17 ayam ucyate pratītyasamutpādasya vibhaṅgaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "18 pratītyasamutpādasya",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "vo bhikṣavaḥ"
        },
        {
          "tag": "text",
          "text": "ādiñ ca deśayiṣyāmi vibhaṅgañ ca iti me yad uktam idaṃ me tat praty uktaṃ"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "19 idam avocad bhagavān āttamanasas te bhikṣavo bhagavato bhāṣitam abhyananda",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "nn i"
        },
        {
          "tag": "text",
          "text": "ti ||"
        }
      ]
    }
  ]
