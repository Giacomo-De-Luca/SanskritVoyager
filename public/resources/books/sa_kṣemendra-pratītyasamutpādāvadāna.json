  "body": [
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvam avidyāmūlaṃ saṃsārataruprakāravaicitryam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jñātum vaktuṃ hantuṃ kaḥ śakto 'nyatra sarvajñāt // KAvk_75.1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrāvastyāṃ svastimān pūrvaṃ jino jetavane sthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aśeṣadarśī bhagavān bhikṣusaṃgham abhāṣata // KAvk_75.2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śṛṇuta śreyase jñānālokanirmalamānasāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratītyasamutpādaṃ vaḥ kathayāmi yathākramam // KAvk_75.3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "avidyāvāsanaiveyaṃ duḥkhaskandhasya bhūyasaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃsāraviṣavṛkṣasya mūlabandhavidhāyinī // KAvk_75.4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatpratyayas tu saṃskārāḥ kāyavāṅmānasātmakāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃskārotthaṃ ca vijñānaṃ manaḥṣaṣṭhendriyātmakamn // KAvk_75.5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatpratyayaṃ nāmarūpaṃ saṃjñāsaṃdarśanābhidham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "manaḥṣaṣṭhendriyasthānaṃ ṣaḍāyatanam apy ataḥ // KAvk_75.6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaḍāyatanasaṃśleṣaḥ sparśa ity abhidhīyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ṣaṭsparśānubhavo yaś ca vedanā sā prakīrtitā // KAvk_75.7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tayā viṣayasaṃkleśarāgāt tṛṣṇā prajāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāmādiṣu tadudbhūtam upādānaṃ pravartate // KAvk_75.8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upādānodbhavaḥ kāmarūpārūpyamayo bhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānāyoniparāvṛttyā jātir bhavasamudbhavā // KAvk_75.9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jarāmaraṇaśokādisaṃtatir jātisaṃśrayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "avidyādinirodhena teṣāṃ vyuparamakramaḥ // KAvk_75.10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratītyotpādo 'yaṃ bahugatir avidyākṛtapadaḥ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa cintyo yuṣmābhir vijanavanaviśrāmaśamibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parijñātaḥ samyag vrajati kila kālena tanutāṃ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tanutvaṃ saṃprāptaḥ sukhataranivāryaś ca bhavati // KAvk_75.11 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "iti kṣemendraviracitāyāṃ bodhisattvāvadānakalpalatāyāṃ\npratītyasamutpādāvadānaṃ pañcasaptatitamaḥ pallavaḥ |"
    }
  ]
}