  "body": [
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sthānaṃ praveśo rūpaṃ ca lakṣaṃ lakṣaṇameva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utthāpanaṃ bodhanaṃ ca cakraviśrāmameva ca // SomSv_1"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūmikāgamanaṃ caiva antāvasthā tathaiva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśrāmaḥ pariṇāmaśca tathāgamanameva ca // SomSv_2"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iti trayodaśavidhaṃ śāktaṃ vijñānamuttamam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarveṣu trikaśāstreṣu sūcitaṃ śambhunā svayam // SomSv_3"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nābhyadho 'ṅgulāḥ pañca meḍhrasyordhvāṅguladvayam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tanmadhye kandanāmā ca cakrasthānamiti smṛtam // SomSv_4"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāṇāpānanirodhena manastatraiva niḥkṣipet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samyag vāyugatiṃ jitvā yāvan madhyagatāṃ nayet // SomSv_5"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "eṣa praveśa ity āhū rūpaṃ vakṣyāmi cādhunā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śṛṅgāṭakanibhaṃ cakraṃ ṣaḍaraṃ cāparaṃ dhruvam // SomSv_6"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dāḍimīkusumaprakhyaṃ kandaṃ vai jātilohitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etadrūpaṃ samākhyātaṃ tṛtīyaṃ cintanātmakam // SomSv_7"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tanmadhye nikṣipec cittaṃ yāvat tatra sthirīkṛtam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tyaktaruddho yadā vāyustadā lakṣaṃ vinirdiśet // SomSv_8"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kandacakrasya madhyasthā tv anāhatamayī kalā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "adhaūrdhve rekhāsaṃyuktā bhujaṃgakuṭilākṛtiḥ // SomSv_9"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ūrdhvādho 'vasthitāvasthā sūryācandramasāv ubhau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "satyaṃ virājamānā sā sahasrārkasamaprabhā // SomSv_10"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tāmevālokayec chaktiṃ manāk kumbhakavṛttinā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etal lakṣaṇam uddiṣṭam utthāpanam ataḥ param // SomSv_11"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "juṣadrecakavṛttyā tu mantraṃ caiva samuccaret /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prabuddhāṃ cintayecchaktiṃ daṇḍavat parameśvarīm // SomSv_12"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ādhāramadhyādāyātā suṣumnāmārgam āśritā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utthāpanaṃ samākhyātaṃ bodhanaṃ paratastathā // SomSv_13"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kandastho vedhayen nābhiṃ tato hṛtsthaṃ pitāmaham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaṇṭhasthamacyutaṃ sākṣādrudraṃ tālutale sthitam // SomSv_14"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhruvormadhyagataṃ tv īśaṃ brahmadvāre sadāśivam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhayitvā vrajed āśu padaṃ cānāśritaṃ śivam // SomSv_15"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "etadbodhanam uddiṣṭaṃ cakraviśrāmaṇaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svābhāvikaṃ dalaṃ dīptaṃ dravaṃ sthiranabhopamam // SomSv_16"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "amṛtaṃ śekharaṃ caiva śaktirbrahmā tathaiva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bindunādaṃ tathā proktaṃ cakradvādaśakaṃ kila // SomSv_17"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vedhayantī kramāc chaktiścakre cakre pratikṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "viśramet sā mahādevī cakraviśrāma uttamaḥ // SomSv_18"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hṛdayaṃ kampate pūrvaṃ tālukadvārameva ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śiraśca bhramate tasya dṛṣṭisaṃkrāntilakṣaṇam // SomSv_19"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ekaikaṃ bhramayaty aṅgam aṅgapratyaṅgasaṃdhiṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ghūrṇate hṛdayaṃ cāsya samyagvidyāprabhāvataḥ // SomSv_20"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yāni yāni vikārāṇi avasthā kurute sataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "teṣu teṣu na bhetavyaṃ krīḍati parameśvarī // SomSv_21"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "amṛte seyam unmattā vikārān kurute bahūn /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "malatrayavikārau bahujanmasu yatkṛtam // SomSv_22"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhunoti samalān pāśāt paraśaktisamutthitān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūmikāgamanaṃ proktam antāvasthā tathocyate // SomSv_23"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yat saṃkrāntau romaharṣo 'srupāto jṛmbhārambho gadgadā gīr giro 'ntaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "granthisphoṭaḥ sparśadivyapraharṣo binduspandā nābhikandāt sphuranti // SomSv_24"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "antāvasthā samākhyātā viśrāmas tv adhunocyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nābhicakraviniryātā yadā śaktiḥ prabudhyate // SomSv_25"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā tv astamitaṃ sarvamakṣagrāmaṃ bahiḥ sthitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yadā sā paramā śaktiḥ sulīnā parame pade // SomSv_26"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā na vindate kiṃcid viṣayī viṣayāntaram /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śive viśrāmyate śaktistadā viśrāma ucyate // SomSv_27"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yatra viśramaṇaṃ śaktermanastatra layaṃ vrajet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadātmā paramātmatve jñātavyo niścitātmabhiḥ // SomSv_28"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śivībhūto bhavatyātmā pariṇāmaḥ sa eva hi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sadā sa varṣate divyam amṛtaṃ jantujīvanam // SomSv_29"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ tatra tu saṃdhārya punardaivī viśettu sā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadā tv āgamanaṃ proktamevaṃ samyak trayodaśa // SomSv_30"
        }
      ]
    }
  ]
}