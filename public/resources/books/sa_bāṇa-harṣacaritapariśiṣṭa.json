  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "pariśiṣṭam"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "bāṇa-praśastayaḥ"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śleṣe kecana śabdagumphaviṣaye kecid rase cāpare"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "'laṅkāre katicitsadarthaviṣaye cānye kathāvarṇane /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āḥ sarvatra gabhīradhīrakavitāvindyāṭavīcāturī-"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sañcārī kavikumbhikumbhabhiduro bāṇastu pañcānanaḥ // 1 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(śrīcandradevasya)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hemno bhāraśatāni vā madamucāṃ vṛndāni vā dantināṃ"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrīharṣeṇa samarpitāni kavaye bāṇāya kutrādya tat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yā bāṇena tu tasya sūktinikarairuṭṭaṅkitāḥ kīrtayas"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tāḥ kalpapralaye 'pi yānti na manāṅ manye parimlānatām // 2 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(ruyyakakṛtavyaktivivekavyākhyāne)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "artheśvaraṃ hanta bhaje 'bhinandaṃ vāgīśvaraṃ vākpatirājamīḍe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "raseśvaraṃ naumi ca kālidāsaṃ bāṇaṃ tu sarvaśvaramānato 'smi // 3 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(udayasundaryāṃ soḍhvalasya)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pariśīlitaiva sarasaṃ kavirājairbahubhiratra vāgdevī /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bāṇena tu vaijātyāt kathayati nāmaiva vāṇīti // 4 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(viśveśvarasya)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kādambarīsahodaryā sudhaye vai budhe hṛdi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "harṣākhyāyikayā khyātiṃ bāṇo 'bdhiriva labdavān // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śaśvadbāṇadvitīyena namadākāradhāriṇā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dhanuṣeva guṇāḍhyena niḥśeṣo rañjito janaḥ // 6 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(trivikramasya)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jātā śikhaṇḍinī prāgyathā śikhaṇḍī tathāvagacchāmi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prāgalbhyamadhikamāptuṃ vāṇī bāṇo babhūveti // 7 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(govardhanasya)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hṛdi lagnena bāṇena yanmando 'pi padakramaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavet kavikuraṅgāṇāṃ cāpalaṃ tatra kāraṇam // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "subandhurbāṇabhaṭṭaśca kavirāja iti trayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vakroktimārganipuṇāścaturtho vidyate na vā // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sacitravarṇavicchittihāriṇoravanīpatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śrīharṣa iva saṃghaṭṭaṃ cakre bāṇamayūrayoḥ // 10 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(navasāhasāṅke)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratikavibhedanabāṇaḥ kavitātarugahanaviharaṇamayūraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sahṛdayalokasubandhurjayati śrībhaṭṭabāṇakavirājaḥ // 11 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(vīranārāyaṇacarite)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yuktaṃ kādambarīṃ śrutvā kavayo maunamāśritāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bāṇadhvanāvanadhyāyo bhavatīti smṛtiryataḥ // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rucirasvaravarṇapadā rasabhāvavatī jaganmano harati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatkiṃ taruṇī nahi nahi, vāṇī bāṇasya madhuraśīlasya // 13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "saharṣacaritā śaśvatkṛtakādambarīkathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bāṇasya vāṇyanārteva svacchandaṃ bhramati kṣitau // 14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bāṇaṃ satkavigīrvāṇamanubadhnāti kaḥ kaviḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sindhumandhuḥ kimanveti dyumaṇiḥ katamo maṇiḥ // 15 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(raghunāthacarite)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śabdārthayoḥ samo gumphaḥ pāñcālī rītiriṣyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śilābhaṭṭārikāvāci bāṇoktiṣu ca sā yadi // 16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kevalo 'pi sphuran bāṇaḥ karoti vimadān kavīn /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ki punaḥ kḷptasandhānapulindakṛtasannidhiḥ // 17 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "(dhanapālasya)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "daṇḍītyupasthite sadyaḥ kavīnāṃ kampatāṃ manaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "praviṣṭhe tvantaraṃ bāṇe kaṇṭhe vāgeva rudhyate // 18 //"
        }
      ]
    }
  ]
}