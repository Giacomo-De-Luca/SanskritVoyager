  "body": [
    {
      "tag": "div",
      "attributes": {},
      "children": [
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_1",
            "corresp": "RT_1.2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "bhālaṃ vahniśikhāṅkitaṃ dadhad adhiśrotraṃ vahan saṃbhṛta",
              "children": [
                {
                  "tag": "orig",
                  "attributes": {},
                  "text": "-"
                },
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "krīḍatkuṇḍalijṛmbhitaṃ jaladhijacchāyācchakaṇṭhacchaviḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "vakṣo bibhrad ahīnakañcukacitaṃ baddhāṅganārdhasya vo",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "bhāgaḥ puṃgavalakṣmaṇo 'stu yaśase vāmo 'tha vā dakṣiṇaḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vāme sāñjanam akṣi dakṣiṇadiśi śyāmāyamāno galaḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "pāṇau tiṣṭhati darpaṇo 'tra mukuṭe 'mutra sthitaś candramāḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tan māteyam ayaṃ piteti sucirāt sapratyabhijñaṃ śanair",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "yasyotsaṅgam agād guho bhavatu vaḥ prītyai sa gaurīśvaraḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_3",
            "corresp": "RT_3.1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "muñcebhājinam asya kumbhakuhare muktāḥ kucāgrocitāḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "kiṃ bhālajvalanena kajjalam ataḥ kāryaṃ tavākṣṇoḥ kṛte /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "saṃdhāne vapurardhayor bhagavator itthaṃ niṣedhe 'py aheḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "kartavye priyayottarānusaraṇodyukto haraḥ pātu vaḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_4",
            "corresp": "RT_2.1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vihitam ajagośṛṅgāgrābhyāṃ dhanur ghaṭitaṃ tathā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "narakaraṭinor dehārdhābhyāṃ gaṇaṃ parigṛhṇataḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dvividharacanāvāllabhyānāṃ nidher ucitā vibhor",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "jayati laṭabhāpuṃbhāgābhyāṃ śarīravinirmitiḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_5",
            "corresp": "RT_6.1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nedaṃ parṇasamīraṇāśanatapomāhātmyam ukṣoragau",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "paśyaitāv ata eva saṃprati kṛtau tanmātravṛttī bahiḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "premṇaivārdham idaṃ carācaraguroḥ prāpeyam ātmastutīr",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "itthaṃ devavadhūmukhāc chrutisukhāḥ śṛṇvaty aparṇāvatāt //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_6",
            "corresp": "RT_5.1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kāpy eteṣu ruciḥ kaceṣu phaṇināṃ puṃskokilasyeva te",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "gobhiḥ kaṇṭhataṭasya hṛṣyati puro dṛk paśya cakṣuḥśruteḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "saṃdhāne 'bhinave mitho bhagavator jihvāpṛthakspandinī",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "bhinnārthāṃ sadṛśākṣarām api vadanty evaṃ giraṃ pātu vaḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_7"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "dātuṃ vāñchati dakṣiṇe 'pi nayane vāmaḥ karaḥ kajjalaṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "bhaujaṅgaṃ ca bhuje 'ṅgadaṃ ghaṭayituṃ vāme 'pi vāmetaraḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "itthaṃ svaṃ svam aśikṣitaṃ bhagavator ardhaṃ vapuḥ paśyatoḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "sādhārasmitalāñchitaṃ diśatu vo vaktraṃ manovāñchitam //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_8"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "gāḍhāliṅgana maṅgalaṃ bhavatu te svasty astu vaś cāṭavaḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "kiṃ brūmaḥ priyayā vilāsakalaha śraddheya evāsi na /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ity ukte nibiḍapravāsacakitair yāvad guṇaiḥ sthīyate",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "saṃghaṭṭaḥ śivayoḥ sa tāvad adhikaspaṣṭaḥ śivāyāstu vaḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_9"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tad ardhanārīśvaramūrdharatnam",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "ardhaṃ vidhor astu samṛddhaye vaḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yad adrikanyāvadanātirikta",
              "children": [
                {
                  "tag": "orig",
                  "attributes": {},
                  "text": "-"
                },
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "dvitīyabhāgabhramam ātanoti //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_10",
            "corresp": "RT_4.1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "tadvītavyatirekam adritanayādehena miśrībhavan",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "niṣpratyūham iha vyapohatu vapuḥ sthāṇor abhadrāṇi vaḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "veṇyā bhogivadhūśarīrakuṭilaśyāmatviṣā veṣṭitā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "jūṭāher api yatra bhāti dayitāmūrtyeva pṛktā tanuḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_11",
            "corresp": "RT_8.1"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "prauḍhāḥ kañcukino jaradvṛṣavaraḥ kubjas tuṣāradyutir",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "nityāpto 'pi bahiṣkṛtaḥ parikaraḥ so 'yaṃ samasto 'py aho /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ardhād yadvasatīkṛtād bhagavatā cāritracaryāvidā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "sā bhidyād duritaṃ carācaraguror antaḥpuraṃ pārvatī //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_12"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "līlodyānavanaśmaśānagamane svecchāparādhīnayoḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "samyaksāmbaratādigambaradaśāsavrīḍanirvrīḍayoḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "paryāptātularāmaṇīyakamahāśrībhairavākārayoḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "kṣemaṃ vaḥ śivayoḥ samāsamadṛśor diśyād acintyaṃ vapuḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_13"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "cūḍendor iva rociṣā mukulitaṃ vātāyanābhaṃ śriyaḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "pānārthaṃ pariṣevitaṃ madhukarākāraiḥ kumārānanaiḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "aunnatyād adhivāsya vaktrapavanair ghrāṇopayogīkṛtaṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "kasyorojasarojam asti na manastoṣāya gaurīśayoḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_14"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "ardhaṃ snigdhavimugdham iddhahutabhugdigdhaṃ tathārdhaṃ jagat",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "pāyād īśvarayos tad akṣi tilakasthānasthitaṃ vīkṣya yat /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "krīḍākarmaṇi kārmukaṃ karatale kartuṃ kirīṭendunā",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "sotsekaś ca nirutsukaś ca yugapad devaḥ smaro jāyate //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_15"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vyālā vāyubhujas tṛṇeḍhi ca tṛṇāny ukṣā bubhukṣāturo",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "niṣkaupīnapaṭaḥ kuṭumbabharaṇo kiṃ tv asmi cintākulaḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "daurgatyād iti piṇḍam ekam akarod gaurīśarūpeṇa yo",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "yaś cābhīṣṭaphalapradas trijagataḥ kasmaicid asmai namaḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_16"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "jyāghoṣair badhirīkaroti kakubho bāhū muhuḥ paśyati",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "svasya svena vikatthate racayati proccaistarāṃ tarjanīm /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "yasmin kevalam eva kelirabhasāj jāte 'rdhanārīśvare",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "vīraṃmanyatayā sa manmathabhaṭo vātūlitas taṃ stumaḥ //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_17",
            "corresp": "SKA_15.37"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vapuḥkhaṇḍe khaṇḍaḥ prativasati śailendraduhituḥ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "śikhaṇḍe khaṇḍenduḥ svayam api vibhuḥ khaṇḍaparaśuḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tathāpi pratyagraṃ śaraṇam upayātaṃ prati vibhor",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "akhaṇḍo vyāpāro jagati karuṇāyā vijayate //"
                }
              ]
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {
            "id": "ANS_18",
            "corresp": "ŚRT_1.1.2"
          },
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "premnārdhaṃ vapuṣo vilokya militaṃ devyā samaṃ svāmino",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "maulau yasya niśāpatir nagasutāveṇīniśāmiśritaḥ /"
                }
              ]
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "āste svāmyanuvartanārtham iva tat kṛtvā vapuḥ khaṇḍitaṃ",
              "children": [
                {
                  "tag": "lb",
                  "attributes": {}
                },
                {
                  "tag": "text",
                  "text": "deyād advayabhāvanāṃ sa bhagavān devo 'rdhanārīśvaraḥ //"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}