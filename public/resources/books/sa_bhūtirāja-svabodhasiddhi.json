  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Bhūti(rāja): Svabodhasiddhi"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "namaḥ sakalakalyāṇamayakaivalyadāyine /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śivāya śamitāśeṣabhavādhvadhvāntabhānave //1//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aśeṣadarśanāveśaviśeṣādhivivarjitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svasaṃvedanasaṃvedyaṃ svasthaṃ vande paraṃ śivam //2//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirastakalpanājālavikalpaughavighātine /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "namo 'stu paramānandapadātītāya śambhave //3//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jayanty apārasaṃsārasārāsāravibhāgadāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaivalyajñānasaṃbodhahetavaś śambhavāṅghrayaḥ //4//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mano buddhir ahaṃ prāṇās tanmātrendriyajīvanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yaṃ dṛṣṭvā vinivartante tam upāsyam upāsmahe //5//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mamāham iti hṛdgranthicchedanaikakṛpāṇikām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "spandāspandakṛtagrāsāṃ naumy ahaṃ śuddhasaṃvidam //6//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vyapadeśavihīnasya tattvasya kathanaṃ katham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svasaṃvedanasadyuktyā gamyate yadi kenacit //7//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jñānayogopadeśena yasya nāśvāsa āntaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samāśvāsavihīnatvāt kathaṃ naiḥśreyasaṃ phalam //8//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upeyaprāptyupāyo 'yaṃ svabodhe jāgarūkatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svabodhajāgarūkatvān nirvibhāgā sthitir muneḥ //9//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyo nāparaḥ kaścit svasattānugamād ṛte /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tām evānusaran yogī svastho yaḥ sa sukhī bhavet //10//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svasaṃkalpaparāmarśād viśuddhajñānasaṃśrayāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paramāhlādalābhāc ca bodhaikaghanatā muneḥ //11//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nigṛhīte svasaṃkalpe śakteḥ śaktimati sthitiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śaktiśaktimator aikyam ity upeyaṃ ca yoginām //12//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāpte svarūpavijñāne santyakte tattvakañcuke /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "udyogakāraṇe kīrṇe muktaḥ sa kila kathyate //13//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhamātre grahaḥ kāryaḥ suprabuddhena cetasā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tāvad yāvat svasāmarthyāt svaniṣṭhaḥ kevalo bhavet //14//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvadā suprabuddhas san paśyaty ātmānam ātmanā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "draṣṭuḥ svarūpasaṃsthasya kim anyad avaśiṣyate //15//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sadaiva suprabuddhatvam etāvan manasaḥ kṣayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatkṣayād yogināṃ samyaksākṣātkāro bhavaty alam //16//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paryāvṛttaḥ svasaṃvittau vartate yas tv abhedataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sa samrāḍ yogayuktānām ajñānadhvāntabhāskaraḥ //17//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svarūpānubhavāhlādadaśātītendusaṃsthitiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "avāptavyaṃ kim astīha kṣīṇāntaḥkaraṇasya me //18//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svaparijñaptiviśrāntī sudṛḍhe yasya susphuṭe /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya vṛttivimuktasya bhavet kevalatācirāt //19//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "grāhyagrahaṇasaṃskāratiraskāraikacetasām /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yogināṃ svātmaniṣṭhānāṃ mokṣalakṣmīr na durlabhā //20//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "labdhā svarūpaviśrāntir nirvṛttā kleśasantatiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "grāhyagrāhakatā bhagnā svarūpastho' smi saṃsthitaḥ //21//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "abhedabodhasaṃbodhasvarūpānubhavasthitim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vyutthitaḥ sanniruddho vā labhate yaḥ sa tattvavit //22//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yasya sarvāsv avasthāsu svasthitir naiva lupyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasya kiṃ nāma kurvanti śāstrabhramaṇavibhramāḥ //23//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vigalitasadasadvikalpasadasadbhramajanitamohamuktātmā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jīvann api janamadhye vigatabhayaḥ sarvadā yogī //24//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirastakaraṇo yena samādhiḥ sevitaḥ sakṛt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paraḥ sākṣātkṛtas tena caritārthena yoginā //25//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ahamātmany asambhinnaḥ saṃgṛhya svaprayatnataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prabuddhaḥ syāt svaniṣṭhaḥ san yāvat sādāśivadyutiḥ //26//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nirastasarvārthaniraṃśavṛttir jñānī sakṛt svātmani labdhalābhaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samyaṅnibodhaikaparaḥ svaniṣṭhaḥ svakañcukaṃ hanta jahāti yogī //27//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vāganubhavasadyuktir yasyāsti nirantaraṃ svasaṃvittau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasyopadeśakaraṇaṃ yuktaṃ śiṣyeṣu bodhanaṃ samyak //28//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nairvāsanyāt svasaṃbodhāt tyāgād āśābhimānayoḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sadasatpadavicchedān na punar vigrahagrahaḥ //29//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āśvastāntaḥkaraṇaḥ kṣīṇavikalpaḥ svarūpalābharataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svānubhavāmṛtatṛptaḥ kaivalyaṃ yāti caritārthaḥ //30//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ittham upeyaprāptau vigatamalā citprakāśikā satyā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kaivalyabhūtijananī svabodhasiddhir mayā gaditā //31//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yenopadeśena nalabdhalābho bhavaty alaṃ saṃśayadoṣamuktaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tenopadeśena nasaṃśayena kiṃ nāma kuryād bahuśāstrapāṭhī //32//"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aśeṣakṛtamaṅgalaṃ vividhakarmadāvānalaṃ svarūpapadadarśakaṃ sakalakalpanāvarjitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samastasukhamandiraṃ vividhaduḥkhamūlacchide namāmy asamasundaraṃ gurumukhopadiṣṭaṃ śivam //33//"
        }
      ]
    }
  ]
}