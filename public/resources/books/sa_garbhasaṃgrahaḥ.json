  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Garbhasaṅgrahaḥ / (Gs)"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namo mahākāruṇikāya /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "trailokyaduḥkhasindhūnāṃ karmabhyaḥ kṣubdhavīcayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kuśalākuśalādibhyaḥ sāsravebhyo viniḥsṛtāḥ // Gs_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rāgadveṣāditastāni jātāni kleśahetutaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "teṣāmudbhavahetuścāpīṣṭāniṣṭādikastathā // Gs_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvaidhagrahaṇato jātaḥ padārthagrāhakagrahāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nityavibhvaikatādyāśca samastotpādahetavaḥ // Gs_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāgyavān puruṣastasmāt muktikāṃkṣī parātmanoḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratītyādisuyuktīnām abhyāsairvinivārayet // Gs_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvānāṃ grahaṇaṃ tāvat dharmān bāhyāntarākhilān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvalakṣaṇahīnena cākāśena samaṃ bhajet // Gs_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vastugrahābhibhūtaṃ tu lakṣyīkṛtyākhilaṃ jagat /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhasāgarasaṃśoṣimahākāruṇyapūrvakam // Gs_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svaparārthabhavaṃ ratnaṃ bodhicittaṃ prabhāvayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicaryāmahāvīciṣaṭpāramitādikam // Gs_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhyānavyutthānayogena pañcamārgaiḥ kramād vrajet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dvividhāvaraṇaṃ chittvā dvau saṃbhārau prapūrya ca // Gs_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "trikāyaphalamāptavyaṃ trikāyāpteśca lakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nabhovacchūnyatāyāścānābhogakaruṇāmbudāt // Gs_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dvikāyāmṛtadhārābhirātridhātu sadārdrayan /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhimaṇḍasubījebhyaḥ puṇyaśasyāni pācayet // Gs_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "hṛdayaṃ sarvabuddhānāṃ garbhasaṅgraha ityayam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kālāntyādalpamāyuṣyaṃ bahurogāścālpabhogitā // Gs_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "durhetubahuvighnaiśca ciraṃ sthātumaśaktitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "padānucchedaśakyatvāt sanmitraṃ hi samāśrayet // Gs_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "atyantavīryacittena prapātaṃ smaratā bhṛśam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṅgṛhīto 'ñjasā garbho moktuṃ svaṃ ca paraṃ tathā // Gs_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "snehainaitatkṛtātpuṇyāt sattvāḥ sarve 'pi durbhagāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicittamayā bhūtvā garbhaṃ gṛhṇantu cāñjasā // Gs_14 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "garbhasaṅgraho nāma mahācārya-dīpaṅkaraśrījñānaviracitaḥ samāptaḥ //"
    }
  ]
}