  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Samādhisaṃbhāraparivartaḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "lokanāthāya namaḥ"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicittaṃ dṛḍhaṃ kuryāt pūrva kāruṇyaśaktijam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhavabhogasukhe 'saktaḥ parigrahaparāṅmukhaḥ // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śraddhādidhanasampanno guruṃ buddhasamaṃ bhajet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taddiṣṭasamayācāraṃ paripālitumudyataḥ // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kumbhaguhyābheṣekaṃ tu prasādāllabhate guroḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyavāk cittasaṃśuddhaḥ siddhipātraṃ sa sādhakaḥ // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samādhyaṅgasamudbhūtasaṃbhārapāripūritaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śīghraṃ siddhyāptirevaṃ ca guhyamantranayasthitiḥ // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samādhyaṅgacyutau tasya vipakṣasthititastathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "janmakoṭisahasraiśca samādhirna prasidhyati // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatsamādhiprasidhyartha guhyavṛttasthayogavit /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tad bhinnaṃ cintanaṃ tyaktvā dṛḍhavīryeṇa codyamet // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samādheryāni cāṅgāni vipakṣastadviniścaye /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samādhyaṅgaṃ vipakṣaśca saṃkṣepeṇa samucyate // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śīlasampattiyuktatvaṃ bhogeṣu nirapekṣatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣāntirdṛḍhapratijñā ca janasaṃsargavarjanam // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyavāk cittakāryeṣu samprajanyasamanvayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhakāyastutismṛtyā kāyānusmṛtisaṃyutiḥ // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yasmin kāle tu yatkārya dārḍhrya tasya hyanusmṛtau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pañcāvaraṇahāniśca yuktakṛd bhaktamānatā // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samastalokadharmeṣu cittopekṣā sadā tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "saṃlekho 'ṅgāni cemāni vipakṣastadviparyayaḥ // 11 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "samādhisambhārakṛtairhi puṇyaiḥ samādhiṃ vajropamametu lokaḥ / 12, a ba /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "samādhisambhāraparivarto mahāpaṇḍitācāryadīpaṅkaraśrījñānapādaviracitaḥ samāptaḥ //"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "tenaiva bhāratīyopādhyāyena mahāsaṃśodhakalokacakṣuṣā bhikṣu-śākyamatinā ca anūdya nirṇītaḥ //"
    }
  ]
}