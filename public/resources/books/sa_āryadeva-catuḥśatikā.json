  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Āryadevasya tannāmanopalabdhagranthabhāgāḥ"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "Catuḥ śatikā (Cs)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "1.21. śatruvat yānti te kālā niyamena kṣaṇādayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvvathā tena te rāgaḥ śatrubhūteṣu teṣu mā // 21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "1.22. viprayogabhayādgehānna nirgacchami [durmmate] /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "[vivicya] nāma kartavyaṃ kuryyāddaṇḍena ko budhaḥ // 22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2.7. śarīraṃ sucireṇāpi sukhasya svaṃ na jāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pareṇābhibhavo nāma svabhāvasya na yujyate // 32 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2.8. agrayāṇāṃ mānasaṃ duḥkhamitareṣāṃ śarīrajam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhadvayena lokoyamahanyahani hanyate // 33 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2.9. kalpanāyāḥ sukhaṃ vaśyaṃ vaśyādduḥkhasya kalpanā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "atosti kiñcit sarvvatra na duḥkhādvalamantaram // 34 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2.10. kālo yathā yathā yāti duḥkhavṛddhistatha tathā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāt kaḍevarasyāsya paravadṛśyate sukham // 35 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2.11. vyādhayo'nye ca dṛśyante yāvanto duḥkhahetavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tāvanto na tu dṛśyante narāṇāṃ sukhahetavaḥ // 36 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "2.12. sukhasya varddhamānasya yathā dṛṣṭo viparyayaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhasya varddhamānasya tathā nāsti viparyayaḥ // 37 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "3.13. pratināsikayā tuṣṭiḥ syāddhīnāṅgasya kasyacit /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rāgo'śucipratīkāre puṣpādāviṣyate tathā // 73 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "3.24. śuci nāma ca tadyuktaṃ vairāgyaṃ yatra jāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na ca so'sti kvacidbhāvo niyayād rāgakāraṇam // 74 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "3.25. anityamaśubhaṃ duḥkhamanātmeti catuṣṭayam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ekasminneva sarvāṇi sambharvānta samāsataḥ // 75 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.1. ahaṃ mameti vā darpaḥ sataḥ kasya bhaved bhave /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yasmāt sarvve'pi sāmānyā viṣayāḥ sarvva dehinām // 76 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.2. gaṇadāsasya te darpaḥ ṣaḍbhāgena bhṛtasya kaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jāyate'dhikṛte kāryyamāyattaṃ yatra tatra vā // 77 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.14. ṛṣīṇāṃ ceṣṭitaṃ sarvva kurvīta na vicakṣaṇaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "hīnamadhyaviśiṣṭatvaṃ yasmātteṣvapi vidyate // 89 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.15. putravat pālito lokaḥ purataḥ pārthivaiḥ śubhaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mṛgāraṇyīkṛtaḥ so'dya kalidharmasamāśritaiḥ // 90 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.16. chidraprahāriṇaḥ pāpaṃ yadi rājño na vidyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anyeṣāmapi caurāṇāṃ tat prāgeva na vidyate // 91 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.17. sarvvasvasya parityāgo madyādiṣu na pūjitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmano'pi parityāgaḥ kiṃ manye pūjito raṇe // 92 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "4.23. vipro'pi karmmanā śūdraḥ kena manye na jāyate // 98 //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.24. pāpasyaiśvaryyavadrājan saṃvibhāgo na vidyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vidvānnāma parasyārthe kaḥ kuryyādāyatovadhaṃ // 99 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "4.25. dṛṣṭvā samān viśiṣṭāṃśca parāṃśchaktisamanvitān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "aiśvāryajanito mānaḥ satāṃ hṛdi na tiṣṭhati // 100 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "5.1. na ceṣṭā kila buddhānāmasti kācidakāraṇā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niḥśvāso'pi hitāyaiva prāṇināṃ saṃpravarttatte // 101 //"
        }
      ]
    }
  ]
}