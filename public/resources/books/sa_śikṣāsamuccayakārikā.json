  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Śikṣāsamuccayakārikā (Śsk)"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadā mama pareṣāṃ ca bhayaṃ duḥkhaṃ ca na priyam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadātmanaḥ ko viśeṣo yattaṃ rakṣāmi netaram // Śsk_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "duḥkhāntaṃ kartukāmena sukhāntaṃ gantumicchatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śraddhāmūlaṃ dṛḍhīkṛtya bodhau kāryā matirdṛḍhā // Śsk_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "(śikṣādaro) mahāyānādbodhisattvasya saṃvaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "marmasthānānyato vidyādyenānāpattiko bhavet // Śsk_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmabhāvasya bhogānāṃ tryadhvavṛtteḥ śubhasya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "utsargaḥ sarvasattvebhyastadrakṣā śuddhivardhanam // Śsk_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paribhogāya sattvānāmātmabhāvādi dīyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "arakṣite kuto bhogaḥ ki dattaṃ yanna bhujyate // Śsk_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmātsattvopabhogārthamātmabhāvādi pālayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kalyāṇamitrānutsargāt sūtrāṇāṃ ca sadekṣaṇāt // Śsk_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tatrātmabhāve kā rakṣā yadanarthavivarjanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kenaitallabhyate sarvaṃ niṣphalaspandavarjanāt // Śsk_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "etatsidhyetsadā smṛtyā smṛtistīvrādarādbhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ādaraḥ śamamāhātmyaṃ jñātvātāpena jāyate // Śsk_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "samāhito yathābhūtaṃ prajānātītyavadanmuniḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śamācca na caleccitaṃ bāhyaceṣṭā nivartanāt // Śsk_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvatrāpacalo mandamatisnigdhābhibhāṣaṇāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āvavarjayejjanaṃ bhavyamādeyaścāpi jāyate // Śsk_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anādeyaṃ tu taṃ lokaḥ paribhūya jināṅkuram /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhasmacchanno yathā vahniḥ pacyeta narakādiṣu // Śsk_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ratnameghe jinenoktastena saṅkṣepasaṃvaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yenāprasādaḥ sattvānāṃ tadyatnena vivarjayet // Śsk_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "eṣā rakṣātmabhāvasya bhaiṣajyavasānādibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmatṛṣṇopabhogāttu kliṣṭāpattiḥ prajāyate // Śsk_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sukṛṭārambhiṇā bhāvyaṃ mātrajñena ca sarvataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "iti śikṣāpadādasya bhogarakṣā na duṣkarā // Śsk_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "svārthavipāka vaitṛṣṇyācchubhaṃ saṃrakṣitaṃ bhavet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "paścātāpaṃ na kurvīta na ca kṛtvā prakāśayet // Śsk_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "lābhasatkārabhītaḥ syādunnatiṃ varjayetsadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhisattvaḥ prasannaḥ syāddharme vimatimutsṛjet // Śsk_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śodhitasyātmabhāvasyabhogaḥ pathyo bhaviṣyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "samyaksiddhasya bhaktasya niṣkaṇasyeva dehinām // Śsk_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tṛṇacchanna yathā śasyaṃ rogaiḥ sīdati naidhate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "buddhāṅkurastathā vṛddhiṃ kleśacchanno na gacchati // Śsk_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmabhāvasya kā śuddhiḥ pāpakleśaviśodhanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sambuddhottayarthasāreṇa yatnabhāve tvapāyagaḥ // Śsk_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṣameta śrutameṣeta saṃśrayeta vanaṃ tataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sāmādhānāya yujyeta bhāvayedaśubhādikam // Śsk_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhogaśuddhiṃ ca jānīyātsamyagājīvaśodhanāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatākaruṇāgarbheceṣṭitātpuṇyaśodhanam // Śsk_21 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "grahītāraḥ subahavaḥ svalpaṃ ceda manena kim /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na cātitṛptijanakaṃ vardhanīyamidaṃ tataḥ // Śsk_22 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "ātmabhāvasya kā vṛddhirbalānālasyavardhanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śūnyatākaruṇāgarbhāddānādbhogasya vardhanam // Śsk_23 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtvādāveva yatnena vyavasāyāśayau dṛḍhau /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "karuṇāṃ ca puraskṛtya yateta śubhavṛddhaye // Śsk_24 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhadracaryāvidhiḥ kāryo vandanādiḥ sahādarāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śraddhādīnāṃ sadābhyāso maitrī buddhādyanusmṛtiḥ // Śsk_25 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvāvasthāsu sattvārtho dharmadānaṃ nirāmiṣam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhicittaṃ ca puṇyasya vṛddhihetuḥ samāsataḥ // Śsk_26 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "siddhiḥ samyakprahāṇānāmapramādāviyojanāt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "smṛtyātha samprajanyena yoniśaścintanena ca // Śsk_27 //"
        }
      ]
    }
  ]
}