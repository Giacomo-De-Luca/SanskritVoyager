  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Caryāsaṅgrahapradīpaḥ (Csp)"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namo lokeśvarāya"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "madādyaśeṣamūḍhānāṃ yasya vacanaraśmibhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "phullatāmeti hṛtpadmaṃ taṃ vande puruṣottamam // Csp_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pāramiṃ guhyamantraṃ ca śritvā bodhiḥ prasidhyati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "gurubuddhoktitastvevaṃ tadartho likhyate mayā // Csp_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "guhyamantro 'tra no vācyaḥ pāramīnayacārikāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhisattvasya caryāstu samāsena likhāmyaham // Csp_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhīmataḥ saṃvaro grāhyo bodhicittapuraḥ saraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ālokyāśeṣasūtrāṇi śāstraṃ śravyaṃ samastakam // Csp_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyena manasā vācā yathoktān saṃvarān tribhiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rakṣedakṣuṇṇaśuddhāṃśca śīlāṃśca pariśodhayet // Csp_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhaktamātrāṃ vijānīyād indriyadvāramāvaret /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rātreḥ pūrve 'pare bhāge na suptvā yogamācaret // Csp_6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "aṇumātreṣvavadyeṣu hyatimātraṃ bibheti ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rātrerbhāgatrayaṃ kṛtvā hyantye bhāge tu jāgṛyāt // Csp_7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prakṣālayenmukhādīn vākṣālanaṃ vāpi yujyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sukhāsanaṃ samāśritya dharmāṇāṃ dharmatāṃ smaret // Csp_8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nimittaiḥ kṣobhato 'śakye tūttthāyābhāsavastuṣu /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "māyāvattvena samprekṣya puṇyayogāṃstadantare // Csp_9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrayeccāpi saptāṅgān vipulāṃ praṇidhiṃ caret /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvayed bhāvanāṃ pūrvā kāle 'tha bhojanasya ca // Csp_10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "etanniḥ sārakāyena paraṃ sāraṃ gaveṣayan /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyaṃ naukādhiyā rakṣed na bhuṅktāṃ sthūlatākṛte // Csp_11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rasāsaktyā na bhuñjīta caturdhānnaṃ vibhajya ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "devebhyo vinivedyādiṃ dharmapālāya tatparam // Csp_12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "baliṃ suvipulāṃ dadyāt śeṣaṃ svabhuktapītataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dadyācca sarvabhūtebhyaḥ kathātantraṃ tadantare // Csp_13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kuryādadbhutavārttā ca kiñcidutthāya sañcaret /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "parikrāmedadhiṣṭhānaṃ japaṃ vā granthavācanam // Csp_14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sugatapratimāṃ kuryād yāvat svedo na jāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kuryāt, pradakṣiṇāṃ tāvad akṣubdhaḥ praṇidhiṃ bahum // Csp_15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmacaryā daśaproktāḥ maitreyeṇa, samāsataḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "caredakṣiptacittena māyaupamyaṃ ca saṃsmaran // Csp_16 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yadi syāt pūjayet saṅghaṃ kuryād vā bālakotsavam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anāthebhyaḥ sudānaṃ tu yogine puṇyasañcayaḥ // Csp_17 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pūrṇeṣu dinakṛtyeṣu bhāge ca prathame niśaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmatā niṣprapañcāpi tathā cittaṃ ca yojayet // Csp_18 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāptāyāṃ madhyarātrau ca utthānābhāsasañjñayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "siṃhanidrā yathā tadvat śubhanidrāṃ samāśrayet // Csp_19 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prāyo dhyānadṛḍhe citte kāyavākpuṇyagauṇatā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "asaṃspṛṣṭe samādhau vā lokakalpapravṛttaye // Csp_20 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kāyapuṇyaṃ yathāśakti, lokacitte 'same sati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmo nāyaṃ mamaiveti susadāśayapūrvakam // Csp_21"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmāśca laukikān pṛcched, nijamitrasamīritaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nepālaviṣaye kṛtavān, ratirmantranaye na ced // Csp_22 //"
        }
      ]
    },
    {
      "tag": "l",
      "attributes": {},
      "text": "evaṃ sthavira ! karttavyam /23, a /"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "caryāsaṅgrahapradīpo mahāpaṇḍitācārya - dīpaṅkara - śrījñānakṛtaḥ samāptaḥ /"
    }
  ]
}