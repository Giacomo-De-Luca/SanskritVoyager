  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Hastavālaprakaraṇavṛttiḥ (Hvpv)"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "mañjuśrīye jñānasattvāya"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namaḥ trailokye vyavahāramātre sati paramarthābhimānāt tattvārthānavagāhibhiḥ sattvairvastusvabhāvavivekadvāreṇāviparyayajñānasaṃprāptaye śāstraracaneyaṃ //"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rajjau sarpamanaskāro rajjuṃ dṛṣṭvā nirarthakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadaṃśān vīkṣya tatrāpi bhrāntā buddhirahāviva // Hvpv_1 (6) //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvāṇyāśritavastūni svarupe suvicarite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āśritānyanyato yāvat saṃvṛtijñānagocaraḥ // Hvpv_2 (24) //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niraṃśānāmacintyatvadaṇtyo 'pyavastunā samaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhrāntamatramataḥ prājñair na cintyaṃ paramārthataḥ // Hvpv_3 (45) //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhrāntaṃ tadapya samyaktvad yathā bhanaṃ tathāsti na /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "anarthakaṃ bhāsamānaṃ tatsadṛśātmakaṃ bhavet // Hvpv_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvamevāśritaṃ yena vidyate sūksmabuddhinā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tyajet sa buddhiman suṣthurāgādyahibhayaṃ yathā // Hvpv_5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "laukikārthavicareṣu lokasiddhimanuvrajet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kleśan sarvasaṃ tyaktumana yateta paramārthataḥ // Hvpv_6 //"
        }
      ]
    }
  ]
}