  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Āryatārābhaṭṭārikānāmāṣṭottaraśatakastotra"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "oṃ namaḥ śrīmadāryatārāyai"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "śrīmatpotalake ramye nānādhātuvirājite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānādrumalatākīrṇe nānāpakṣinikūjite // Tbh_1"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nānānirjharajhaṃkāre nānāmṛgasamākule /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nānākusumajātībhiḥ samantād adhivāsite // Tbh_2"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nānāhṛdayaphalopete ṣaṭpadodgītanisvane /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kinnarair madhurair gītair mattavāraṇasaṃkule // Tbh_3"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "siddhavidyādhāragaṇaiḥ gandharvaiś ca ninādite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "munibhir vītarāgaiś ca satataṃ saṃniṣevite // Tbh_4"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhisatvagaṇaiś cānyaiḥ daśabhūmīśvarair api /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "āyatārādibhir devīvidyārājñīsahasrakaiḥ // Tbh_5"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "krodharājagaṇaiś cānyaiḥ hayagrīvādibhir vṛte /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvasatvahitodyukto bhagavān avalokitaḥ // Tbh_6"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "vijahāra tataḥ śrīmān padmagarbhāsane sthitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mahatā tapasā yukto maitryā ca kṛpayānvitaḥ // Tbh_7"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmaṃ dideśa tasyāṃ sa mahatyāṃ devaparṣadi /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tatropaviṣṭam āgamya vajrapāṇir mahābalaḥ // Tbh_8"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "paramakṛpayā yuktaḥ papracchety avalokitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "taskaroragasiṃhāgnigajavyāghrāmbusaṃkaṭe // Tbh_9"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sīdanty amī mune satvā magnāḥ saṃsārasāgare /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "baddhāḥ saṃsārakaiḥ pāśai rāgadveṣatamopahaiḥ // Tbh_10"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "mucyante yena saṃsārāt tan me brūhi mahāmune /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "evam ukte jagannāthaḥ sa śrīmān avalokitaḥ // Tbh_10bis"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uvāca madhurāṃ vāṇīṃ vajrapāṇiṃ prabodhinam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "śṛṇu guhyakarājendra amitābhasya tāyinaḥ // Tbh_11"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "praṇidhānavaśotpannā mamājñā lokamātaraḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mahākaruṇayopetā jagaduddharaṇoddhṛtāḥ // Tbh_12"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "uditādityasaṃkāśāḥ pūrṇenduvadanaprabhāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāsayanti drumāṃs tārāḥ sadevāsuramānuṣān // Tbh_13"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "kampayanti trayo lokān trāsyantī yakṣarākṣasān /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nīlotpalakarā devī mā bhair mā bhair iti bruvan // Tbh_14"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jagatsaṃrakṣaṇārthāya aham utpāditā jinaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kāntāre śastrasaṃparke nānābhayasamākule // Tbh_15"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "smaraṇād eva nāmāni satvān rakṣāmy ahaṃ sadā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tārayiṣyāmy ahaṃ nātha nānābhayamahārṇavāt // Tbh_16"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "tena tāreti maṃ loke gāyanti munipuṃgavāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtāñjalipuṭā bhūtvā tataḥ sādarasādhvasāḥ // Tbh_17"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "jvalatīryantarīkṣestha idaṃ vacanam abravīt /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nāmāṣṭaśatakaṃ brūhi yat purā kīrtitaṃ jinaiḥ // Tbh_18"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dāśabhūmīśvarair nāthair bodhisatvair maharddhikaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvapāpaharaṃ puṇyaṃ māṅgalyaṃ kīrtivardhanam // Tbh_19"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dhanahānyakaraṃ caiva ārogyapuṣṭivardhanam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "maitrīm ālambya satvānāṃ tat kīrtaya mahāmune // Tbh_20"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "evam ukte 'tha bhagavān prahasann avalokitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "vyavalokya diśaḥ sarvā maitryā sphuraṇayā dṛśā // Tbh_21"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dakṣiṇakaram uddhṛtya puṇyalakṣaṇamaṇḍitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tam uvāca mahāprājñaḥ sādhu sādhu mahātapaḥ // Tbh_22"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāmāni śṛṇu mahābhāga sarvasatvaikavatsalaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "yāni saṃkīrtya manujāḥ samyak te syur dhaneśvarāḥ // Tbh_23"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvavyādhivinirmuktāḥ sarvaiśvaryaguṇānvitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "akālamṛtyunirdagdhāś cyutā yānti sukhāvatīm // Tbh_24"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "tāny ahaṃ saṃpravakṣyāmi devasaṃghāḥ śṛṇudhva me",
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anumodeta saddharme bhaviṣyadhvaṃ sunirvṛtāḥ // Tbh_25"
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "oṃ locane sulocane tāre tārotsave sarvasatvānukampini /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvasatvottāriṇi sahasrabhuje sahasranetre // Tbh_26"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "oṃ namo bhagavate 'valokya āvalokyā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvasatvānāṃ cāhaṃ phuṭ svāhā // Tbh_27"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "oṃ śuddhe viśuddhe śodhanaviśodhani /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sugatātmaje maitrīhṛdaye nirmale śyāme śyāmarūpiṇi // Tbh_28"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "mahāprājñe pravare pravarabhūṣite parājite /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "mahāraudri viśvarūpi mahāyaśa // Tbh_29"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kalpāgnimahātejā lokadhātrīmahāyaśā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarasvatī viśālākṣī prajñāśrībuddhivardhanī // Tbh_30"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "oṃ dhṛtidā puṣṭidā svāhā oṃkārā kāmarūpiṇī /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvasatvahitodyuktā saṃgrāme tāraṇī jayā // Tbh_31"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "prajñāpāramitādevī āryātārā manoramā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dundubhisakhinī pūrṇavidyārājñī priyaṃvadā // Tbh_32"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "candrānanā mahāgaurī ajitā pītavāsasā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "mahāmāyā mahāśvetā mahābalaparākramā // Tbh_33"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "mahāraudrī mahācaṇḍī duṣṭasatvanisūdanī /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "praśāntā śāntarūpā ca vijayā jvalanaprabhā // Tbh_34"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vidyunmālī dhvajī khaḍgī cakrī cāpayutāyudhā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "jambhanī stambhanī kālī kālarātrī niśācarī // Tbh_35"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "rakṣaṇī mohinī śāntā kāntā vibhāvinī śubhā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "brāhmaṇī vedamātā ca guhā ca guhavāsinī // Tbh_36"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "māṅgalyā śaṅkarī saumyā jātavedā manojavā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "kāpālinī mahābhāgā saṃdhyā satyāparājitā // Tbh_37"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "sārthavāhā kṛpadṛṣṭī naṣṭamārgapradarśanī /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "varadā śāsanī śāstrī strīrūpāmitavikramā // Tbh_38"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "śavalī yoginī siddhā cāṇḍālī cāmṛtā dhruvā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "dhanyā puṇyā mahābhāgā subhāgā priyadarśanī // Tbh_39"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kṛtāntatrāsanī bhīmā ugrā ugramahātapā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "jagadekahitodyuktā śaraṇya bhaktivatsalā // Tbh_40"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "vāgīśvarī śivā sūkṣmā nityā sarvārthamātṛkā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvārthasādhanī bhadrā goptrī dhātrī dhanaṃjayā // Tbh_41"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "abhayā gautamī puṇyā śrīmallokeśvarātmajā /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "tārā nāmaguṇānantā sarvāśāparipūraṇī // Tbh_42"
            }
          ]
        },
        {
          "tag": "text",
          "text": "nāmāṣṭottaraśatakaṃ tat kīrtitaṃ hitena vaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "rahasyam adbhutaṃ guhyaṃ devānām api durlabham / 43"
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "saubhāgyaṃ bhāgyakaraṇaṃ sarvakīlbiṣanāśanam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvavyādhipraśamanaṃ sarvasatvasukhāvaham // Tbh_44"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "trikāraṃ yaḥ paṭhed dhīmān śuciḥ snānasamāhitaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "acireṇaiva kālena rājyaśriyam avāpnuyāt // Tbh_45"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "duḥkhitaḥ syāt sukhī nityadaridro dhanavān bhavet /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "jaḍo bhaven mahāprājño medhāvī ca na saṃśayaḥ // Tbh_46"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "bandhanān mucyate baddho vyavahāre jayo bhavet /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "śatravo mitratāṃ yānti śṛṅgiṇaś cātha daṃṣṭriṇaḥ // Tbh_47"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "saṃgrāme saṃkaṭe durge nānābhayasamākule /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "smaraṇād eva nāmāni sarvapāpāny apohati // Tbh_48"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "nākālamṛtyur bhavati prāpnoti vipulāṃ śriyam /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "mānuśyaṃ saphalaṃ janma yasya kasya mahātmanaḥ // Tbh_49"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "yaś cedaṃ prātar utthāya mānavaḥ kīrtayiṣyati /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sa dīrghakālam āyuṣmān śriyaṃ ca labhate naraḥ // Tbh_50"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "devā nāgās tathā yakṣā gandharvāḥ kaṭapūtanāḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "piśācarākṣasā bhūtā mātaro raudratejasaḥ // Tbh_51"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kṣayāpasmārakārakaś caiva kṣatakākhorḍakādayaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "ḍākinyās tārakā pretāḥ skandā mārā mahāgrahāḥ // Tbh_52"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "chāyām api na laṅghante kiṃ punas tasya vigrahaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "duṣṭasatvā na vādhante vyādhayo nākramanti ca // Tbh_53"
            }
          ]
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "devāsuram api saṃgrāmam anubhavanti maharddhikāḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sarvaiśvaryaguṇair yuktaḥ putrapautraiś ca vardhate // Tbh_54"
            }
          ]
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "jātismaro bhaved dhīmān kulīnaḥ priyadarśanaḥ // Tbh_55"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prītimāṃś ca mahāvāgmī sarvaśāstraviśāradaḥ // Tbh_56"
        },
        {
          "tag": "lg",
          "attributes": {},
          "children": [
            {
              "tag": "l",
              "attributes": {},
              "text": "kalyāṇamitrasaṃsevī bodhicittavibhūṣitaḥ /"
            },
            {
              "tag": "l",
              "attributes": {},
              "text": "sadāvirahito buddhair yatra yatropapadyate // Tbh_57"
            }
          ]
        }
      ]
    },
