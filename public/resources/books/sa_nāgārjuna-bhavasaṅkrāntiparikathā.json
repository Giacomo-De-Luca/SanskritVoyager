  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Nāgārjuna: Bhavasaṅkrāntiparikathā"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "namaḥ kumārabhūtāya mañjuśriye /"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāvānna jāyate 'bhāvo nābhāvādapi jāyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhāva utpaddyate nityaṃ bhābo bhrāntiḥ khapuṣpavat // 1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sati dharme nabhastulye khatulyaṃ jāyate param /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratītya sarva khasamaṃ bhāvastasmādabhāvavān // 2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sbabhāvataḥ karma nāsti heturnāsti phalaṃ na ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "na viddyata idaṃ sarbaṃ loko nāsti na bhañjanam // 3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anutpannaśca yo bhāvaḥ paraṃ (sa) janayetkatham /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "lokaḥ prathamato 'jātaḥ kenāpi na hi nirmitaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "somasiṃhapurītulyo loko bhramyatyanarthake // 4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "loko vikalpadutpanno vikalpaścittasaṃbhavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ hi kāyāśrayakaṃ tasmātkāyo vicāryate // 5 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "rūpaṃ śūnyaṃ vedanā niḥsvabhāvā saṃjñā nāste nāsti saṃskārabhāvaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bhūtaṃ hitvā cittacaitte ca nastastasmātkāyaḥ kalpahīnasvabhāvaḥ // 6 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "citta nāsti na dharmāste na kāyo nāpi dhātavaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "advayīkaraṇaṃ hīdaṃ tattvaṃ vidvadbhirucyate // 7 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anālambamidaṃ sarvamanālambaṃ prabhāṣitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kṛtvā matimanālambāmanālambaṃ samuddhitaṃ // 8 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dānaśīlakṣamāvīryadhyānādau suniṣevite /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "acireṇaiva kālena paramāṃ bodhimāpsyati // 9 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "upāyaprajñayosthitvā sattvāṃśca karuṇāpayet /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvajñānaṃ śighrameva lapsyate nahi saṃśayaḥ // 10 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nāmamātramidaṃ sarvaṃ saṃjñāmātre pratiṣṭhitam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "nābhidhānātpṛthagbhūtamabhidheyaṃ na vidyate // 11 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "anāmakāḥ sarvadharmā nirātmānaḥ prakīrtitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "ime dharmā abhūtāśca kalpanāyāḥ samuddhitāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "kalpanā sāpi śūnyeyaṃ yayā śūnyeti kalpitāḥ // 12 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cakṣu paśyati rūpāṇi tattvavaktrā yaducyate /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "mithyābhimānalokasya sāṃvṛtaṃ satyamīritam // 13 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "sāmagryā darśanaṃ yatra prakāśayati nāyakaḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "prāhopacārabhūmiṃ tāṃ paramārthasya buddhimān // 14 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "na cakṣuḥ prekṣate rūpaṃ mano dharmānnvetti ca /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "etattu paraṃ satyaṃ lokasya viṣayo na yat // 15 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "cakṣurnāsti na rūpañca dṛśyaṃ nāsti na manaskriyā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "cittaṃ svapnasamaṃ bhrāntiḥ sarvaṃ na sadasanna ca // 16 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "ācārya āryanāgārjunakṛta bhavasaṅkrāntiparikathā sampūrṇā //"
    }
  ]
}