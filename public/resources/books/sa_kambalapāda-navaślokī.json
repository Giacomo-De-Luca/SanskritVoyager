  "body": [
    {
      "tag": "p",
      "attributes": {},
      "text": "Navaślokī"
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "āryāṣṭasāhaśrikāyāḥ prajñāpāramitāyāḥ piṇḍārthaḥ"
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitāmbodhau śubharatnākare svayam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "sarvā pāramitās tatra tādātmyena vyavasthitāḥ // Nś_1 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "niṣprapañcā nirābhāsā nirvikalpā nirālayā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "niḥsvabhāvā parā sūkṣmā bindunādavivarjitā // Nś_2 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitā mātā sarvabuddhodayā parā /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "trayānupalabdhirūpā sarvajñajñānagocarā // Nś_3 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "prajñāpāramitāṃ saṃyag yo bhāvayitum icchati /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tenārthato navaślokāś cintanīyāḥ samāsataḥ // Nś_4 //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "karmaprabhāvasaṃbhūtaṃ ṣaḍāyatanalakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "punarbhavam iti khyātaṃ pratibhāsopamaṃ hi tat // Nś_5_[1] //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "nirmitaṃ nagaraṃ yadvad vilokayati nirmitaḥ /\ntadvat paśyati rūpāṇi karmabhir ni",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "rmi"
        },
        {
          "tag": "text",
          "text": "taṃ jagat // Nś_6_[2] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "dharmaṃ deśayataḥ śabdā ye kecit śrutigocarāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "pratiśrutkopamāḥ sarve prodbhūtaśrutinaḥ śrutāḥ // Nś_7_[3] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "āghrataṃ svāditaṃ tathā spraṣṭaṃ viṣayalālāsaiḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "svapnatulyam idaṃ sarvam upalabdhaṃ na vidyate // Nś_8_[4] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "māyāyantro naro yadvad bhinnāṃ ceṣṭāṃ karoti vai /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadvad ceṣṭāṃ karoty eva dehayantro nirātmakaḥ // Nś_9_[5] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "nānopalabdhayo yāś ca pratikṣaṇasamudbhavāḥ /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "marīcisadṛśāś caite dṛṣṭanaṣṭāḥ vilakṣaṇāḥ // Nś_10_[6] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "pratibimbanibhaṃ grāhyam anādicittasaṃbhavam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tadākāraṃ ca vijñānam anyonyapratibimbavat // Nś_11_[7] //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "dhyāyinā",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "ṃ"
        },
        {
          "tag": "text",
          "text": "svacchasaṃtāne"
        },
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "yaj"
        },
        {
          "tag": "text",
          "text": "jnanendusamudbhavam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "udakacandropamaṃ tad dhi pratyakṣaṃ na vidyate // Nś_12_[8] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "yoginām api yaj jñānaṃ tad apy ākāśalakṣaṇam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "tasmāj jñānaṃ ca jñeyaṃ ca sarvam ākāśalakṣaṇam // Nś_13_[9] //"
        }
      ]
    },
    {
      "tag": "lg",
      "attributes": {},
      "children": [
        {
          "tag": "l",
          "attributes": {},
          "text": "iti cintayataḥ tattvaṃ sarvabhāveṣv anāśritam /"
        },
        {
          "tag": "l",
          "attributes": {},
          "text": "bodhipraṇidhicittena jñānaṃ agraṃ bhaviṣyati // Nś_14 //"
        }
      ]
    },
    {
      "tag": "p",
      "attributes": {},
      "text": "āryāṣṭasāhasrikāyāḥ prajñāpāramitāyāḥ piṇḍārthaḥ samāptaḥ\nkṛtir iyaṃ śrīkam",
      "children": [
        {
          "tag": "hi",
          "attributes": {
            "rend": "it"
          },
          "text": "b"
        },
        {
          "tag": "text",
          "text": "alāmbarapādanām"
        }
      ]
    }
  ]
}